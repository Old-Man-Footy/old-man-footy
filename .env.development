# Development Environment Configuration
# This file contains development-specific settings

# ===========================
# GENERAL APPLICATION SETTINGS
# ===========================
NODE_ENV=development
PORT=3050
APP_NAME="Old Man Footy (Dev)"
APP_URL=http://localhost:3050
APP_VERSION=1.0.0
APP_DESCRIPTION="A community platform for Rugby League Masters players and fans"

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Development SQLite connection string
DATABASE_URL=sqlite:./data/dev-old-man-footy.db

# Rate limiting (more lenient for development)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# CORS settings (allow localhost for development)
ALLOWED_ORIGINS=http://localhost:3050,http://127.0.0.1:3050

# ===========================
# EMAIL SERVICE CONFIGURATION
# ===========================
# Gmail SMTP Configuration
BASE_URL=http://localhost:3050

# Email service settings
EMAIL_SERVICE_ENABLED=true
EMAIL_RATE_LIMIT=100

# ===========================
# MYSIDELINE INTEGRATION
# ===========================
MYSIDELINE_URL=https://profile.mysideline.com.au/register/clubsearch/?criteria=Masters&source=rugby-league
MYSIDELINE_EVENT_URL=https://profile.mysideline.com.au/register/clubsearch/?source=rugby-league&entityType=team&isEntityIdSearch=true&entity=true&criteria=
MYSIDELINE_SYNC_ENABLED=true
MYSIDELINE_SYNC_CRON=0 3 * * *
MYSIDELINE_REQUEST_TIMEOUT=10000
MYSIDELINE_RETRY_ATTEMPTS=3
MYSIDELINE_USE_MOCK=false
MYSIDELINE_ENABLE_SCRAPING=true

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
LOG_DATE_PATTERN=YYYY-MM-DD

# Compression (disabled for development)
COMPRESSION_ENABLED=false

# Static file caching (disabled for development)
STATIC_CACHE_MAX_AGE=0

# ===========================
# BACKUP CONFIGURATION
# ===========================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ===========================
# FEATURE FLAGS
# ===========================
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_MYSIDELINE_SYNC=true
FEATURE_FILE_UPLOADS=true
FEATURE_ADMIN_STATS=true
FEATURE_MAINTENANCE_MODE=false
FEATURE_COMING_SOON_MODE=false

# ===========================
# SSL/TLS CONFIGURATION
# ===========================
FORCE_HTTPS=false
HSTS_MAX_AGE=0

# ===========================
# HEALTH CHECK ENDPOINTS
# ===========================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# ===========================
# TIMEZONE SETTINGS
# ===========================
TZ=Australia/Sydney
DEFAULT_TIMEZONE=Australia/Sydney
