# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# ===========================
# GENERAL APPLICATION SETTINGS
# ===========================
NODE_ENV=production
PORT=3060
APP_NAME="Old Man Footy"
APP_URL=https://oldmanfooty.au
APP_VERSION=1.0.0
APP_DESCRIPTION="A community platform for Rugby League Masters players and fans"

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Production SQLite connection string
DATABASE_URL=sqlite:./data/old-man-footy.db

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS settings
ALLOWED_ORIGINS=https://oldmanfooty.au,https://www.oldmanfooty.au

# ===========================
# EMAIL SERVICE CONFIGURATION
# ===========================


# ===========================
# MYSIDELINE INTEGRATION
# ===========================
MYSIDELINE_URL=https://profile.mysideline.com.au/register/clubsearch/?criteria=Masters&source=rugby-league
MYSIDELINE_EVENT_URL=https://profile.mysideline.com.au/register/clubsearch/?source=rugby-league&criteria=
MYSIDELINE_SYNC_ENABLED=true
MYSIDELINE_SYNC_CRON=0 3 * * *
MYSIDELINE_REQUEST_TIMEOUT=10000
MYSIDELINE_RETRY_ATTEMPTS=3
MYSIDELINE_USE_MOCK=false
MYSIDELINE_ENABLE_SCRAPING=true

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
# Local file storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Static file caching
STATIC_CACHE_MAX_AGE=31536000

# ===========================
# BACKUP CONFIGURATION
# ===========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================
# FEATURE FLAGS
# ===========================
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_MYSIDELINE_SYNC=true
FEATURE_FILE_UPLOADS=true
FEATURE_ADMIN_STATS=true
FEATURE_MAINTENANCE_MODE=false

# ===========================
# SSL/TLS CONFIGURATION
# ===========================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
# ===========================
# HEALTH CHECK ENDPOINTS
# ===========================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# ===========================
# TIMEZONE SETTINGS
# ===========================
TZ=Australia/Sydney
DEFAULT_TIMEZONE=Australia/Sydney
