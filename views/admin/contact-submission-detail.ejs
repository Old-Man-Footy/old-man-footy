<div class="container" data-page-id="admin-contact-submission-detail">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-envelope-open text-primary"></i>
                    Contact Message #<%= submission.id %>
                </h1>
                <div class="d-flex gap-2">
                    <a href="/admin/contact-submissions" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Messages
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#replyContactModal">
                        <i class="bi bi-reply"></i> Reply
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8 mb-3">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-chat-left-text me-1"></i> Message</h5>
                    <small class="text-muted"><%= new Date(submission.submittedAt).toLocaleString('en-AU') %></small>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>From:</strong> <%= submission.firstName %> <%= submission.lastName %> (<%= submission.email %>)
                    </div>
                    <% if (submission.phone) { %>
                        <div class="mb-3"><strong>Phone:</strong> <%= submission.phone %></div>
                    <% } %>
                    <% if (submission.clubName) { %>
                        <div class="mb-3"><strong>Club:</strong> <%= submission.clubName %></div>
                    <% } %>
                    <div class="mb-3"><strong>Subject:</strong> <span class="badge bg-light text-dark text-capitalize"><%= submission.subject %></span></div>
                    <hr>
                    <h6>Message Body</h6>
                    <div class="p-3 border rounded bg-light" style="white-space: pre-wrap;"><%= submission.message %></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear me-1"></i> Status</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/contact-submissions/<%= submission.id %>/status" class="d-grid gap-2">
                        <label for="status" class="form-label">Update status</label>
                        <select id="status" name="status" class="form-select" required>
                            <option value="new" <%= submission.status === 'new' ? 'selected' : '' %>>New</option>
                            <option value="in_progress" <%= submission.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="replied" <%= submission.status === 'replied' ? 'selected' : '' %>>Replied</option>
                            <option value="closed" <%= submission.status === 'closed' ? 'selected' : '' %>>Closed</option>
                            <option value="spam" <%= submission.status === 'spam' ? 'selected' : '' %>>Spam</option>
                        </select>
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-check2-circle"></i> Save Status
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-1"></i> Delivery</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Support Notification:</strong> <span class="text-capitalize"><%= submission.emailDeliveryStatus %></span></p>
                    <% if (submission.emailProvider) { %><p class="mb-1"><strong>Provider:</strong> <%= submission.emailProvider %></p><% } %>
                    <% if (submission.emailProviderMessageId) { %><p class="mb-1"><strong>Message ID:</strong> <%= submission.emailProviderMessageId %></p><% } %>
                    <% if (submission.emailErrorMessage) { %><p class="mb-0 text-danger"><strong>Error:</strong> <%= submission.emailErrorMessage %></p><% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-1"></i> Reply History</h5>
                    <span class="badge bg-primary"><%= replies.length %></span>
                </div>
                <div class="card-body p-0">
                    <% if (replies.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sent</th>
                                        <th>Admin</th>
                                        <th>Subject</th>
                                        <th>Delivery</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% replies.forEach((reply) => { %>
                                        <tr>
                                            <td><small><%= new Date(reply.createdAt).toLocaleString('en-AU') %></small></td>
                                            <td><%= reply.repliedBy ? `${reply.repliedBy.firstName} ${reply.repliedBy.lastName}` : 'System' %></td>
                                            <td><%= reply.subject %></td>
                                            <td>
                                                <% if (reply.deliveryStatus === 'sent') { %>
                                                    <span class="badge bg-success">Sent</span>
                                                <% } else if (reply.deliveryStatus === 'failed') { %>
                                                    <span class="badge bg-danger">Failed</span>
                                                <% } else if (reply.deliveryStatus === 'blocked') { %>
                                                    <span class="badge bg-warning text-dark">Blocked</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Pending</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-2 mb-0">No replies have been sent yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="replyContactModal" tabindex="-1" aria-labelledby="replyContactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="replyContactModalLabel">
                    <i class="bi bi-envelope me-2"></i>
                    Reply to <%= submission.firstName %> <%= submission.lastName %>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="replyContactForm" action="/admin/contact-submissions/<%= submission.id %>/reply" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="replySubject" class="form-label">Subject <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="replySubject" name="subject" maxlength="200" required value="Re: <%= submission.subject %> - Old Man Footy Support">
                    </div>
                    <div class="mb-3">
                        <label for="replyMessage" class="form-label">Message <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="replyMessage" name="message" rows="8" maxlength="5000" required placeholder="Write your response..."></textarea>
                        <div class="form-text d-flex justify-content-between">
                            <span>Maximum 5000 characters.</span>
                            <span id="replyCharCount" class="text-muted">0/5000</span>
                        </div>
                    </div>
                    <div class="alert alert-info border-0 mb-0">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            This uses the Resend transactional API. The email is sent from <strong>no_reply</strong> with reply-to set to the support inbox.
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="sendReplyBtn">
                        <i class="bi bi-send me-1"></i> Send Reply
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="module" src="/js/admin-contact-submission.js"></script>
