<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-calendar-event text-info"></i>
                    Carnival Management
                </h1>
                <div class="d-flex gap-2">
                    <a href="/carnivals/new" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Carnival
                    </a>
                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-search"></i> Search & Filter
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search Carnivals</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="<%= filters.search %>" placeholder="Search by title...">
                        </div>
                        <div class="col-md-3">
                            <label for="state" class="form-label">State</label>
                            <select class="form-select" id="state" name="state">
                                <option value="">All States</option>
                                <option value="NSW" <%= filters.state === 'NSW' ? 'selected' : '' %>>NSW</option>
                                <option value="QLD" <%= filters.state === 'QLD' ? 'selected' : '' %>>QLD</option>
                                <option value="VIC" <%= filters.state === 'VIC' ? 'selected' : '' %>>VIC</option>
                                <option value="WA" <%= filters.state === 'WA' ? 'selected' : '' %>>WA</option>
                                <option value="SA" <%= filters.state === 'SA' ? 'selected' : '' %>>SA</option>
                                <option value="TAS" <%= filters.state === 'TAS' ? 'selected' : '' %>>TAS</option>
                                <option value="NT" <%= filters.state === 'NT' ? 'selected' : '' %>>NT</option>
                                <option value="ACT" <%= filters.state === 'ACT' ? 'selected' : '' %>>ACT</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Events</option>
                                <option value="upcoming" <%= filters.status === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
                                <option value="past" <%= filters.status === 'past' ? 'selected' : '' %>>Past</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="active" class="form-label">Active Status</label>
                            <select class="form-select" id="active" name="active">
                                <option value="">All Carnivals</option>
                                <option value="active" <%= filters.active === 'active' ? 'selected' : '' %>>Active Only</option>
                                <option value="inactive" <%= filters.active === 'inactive' ? 'selected' : '' %>>Inactive Only</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <p class="text-muted mb-0">
                    Showing <%= ((pagination.currentPage - 1) * 20) + 1 %> - 
                    <%= Math.min(pagination.currentPage * 20, pagination.totalItems) %> 
                    of <%= pagination.totalItems %> carnivals
                </p>
                <% if (filters.search || filters.state || filters.status || filters.active) { %>
                    <a href="/admin/carnivals" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Carnivals Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <% if (carnivals && carnivals.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Date</th>
                                        <th>State</th>
                                        <th>Location</th>
                                        <th>Creator</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% carnivals.forEach(carnival => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <h6 class="mb-0">
                                                            <a href="/carnivals/<%= carnival.id %>" class="text-decoration-none">
                                                                <%= carnival.title %>
                                                            </a>
                                                        </h6>
                                                        <% if (carnival.mySidelineTitle) { %>
                                                            <small class="text-muted">
                                                                <i class="bi bi-link-45deg"></i> MySideline Import
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-medium">
                                                    <%= new Date(carnival.date).toLocaleDateString('en-AU') %>
                                                </span>
                                                <br>
                                                <small class="text-muted">
                                                    <%= carnival.date >= new Date() ? 'Upcoming' : 'Past' %>
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary"><%= carnival.state %></span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= carnival.locationAddress ? 
                                                        (carnival.locationAddress.length > 50 ? 
                                                            carnival.locationAddress.substring(0, 50) + '...' : 
                                                            carnival.locationAddress) : 
                                                        'No address' %>
                                                </small>
                                            </td>
                                            <td>
                                                <% if (carnival.creator) { %>
                                                    <span class="fw-medium">
                                                        <%= carnival.creator.firstName %> <%= carnival.creator.lastName %>
                                                    </span>
                                                    <br>
                                                    <small class="text-muted"><%= carnival.creator.email %></small>
                                                <% } else { %>
                                                    <span class="text-muted">No creator</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (carnival.isActive) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/carnivals/<%= carnival.id %>" 
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/admin/carnivals/<%= carnival.id %>/edit" 
                                                       class="btn btn-outline-warning" title="Edit Carnival">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <% if (carnival.isActive) { %>
                                                        <button type="button" class="btn btn-outline-danger" 
                                                                title="Deactivate Carnival"
                                                                data-toggle-carnival-status="<%= carnival.id %>"
                                                                data-carnival-title="<%= carnival.title %>"
                                                                data-current-status="true">
                                                            <i class="bi bi-eye-slash"></i>
                                                        </button>
                                                    <% } else { %>
                                                        <button type="button" class="btn btn-outline-success" 
                                                                title="Reactivate Carnival"
                                                                data-toggle-carnival-status="<%= carnival.id %>"
                                                                data-carnival-title="<%= carnival.title %>"
                                                                data-current-status="false">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                            <h4 class="text-muted">No carnivals found</h4>
                            <p class="text-muted mb-4">
                                <% if (filters.search || filters.state || filters.status || filters.active) { %>
                                    Try adjusting your search criteria or clearing the filters.
                                <% } else { %>
                                    There are no carnivals in the system yet.
                                <% } %>
                            </p>
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="/carnivals/new" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create First Carnival
                                </a>
                                <% if (filters.search || filters.state || filters.status || filters.active) { %>
                                    <a href="/admin/carnivals" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle"></i> Clear Filters
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Carnival pagination">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>&active=<%= filters.active %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>&active=<%= filters.active %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>&active=<%= filters.active %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    <% } %>
</div>

<!-- Status Toggle Confirmation Modal -->
<div class="modal fade" id="statusToggleModal" tabindex="-1" aria-labelledby="statusToggleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusToggleModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning"></i> Confirm Status Change
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="statusToggleMessage">Are you sure you want to change the status of this carnival?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i>
                    <strong>Warning:</strong> <span id="statusWarningText">Deactivated carnivals will no longer be visible on the site</span> to public users, though they will remain in the administrative interface for historical purposes.
                </div>
                <p class="mb-0"><strong>Carnival:</strong> <span id="toggleCarnivalTitle"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmStatusToggle" class="btn btn-warning">
                    <i class="bi bi-eye-slash"></i> <span id="toggleActionText">Deactivate</span> Carnival
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Include external JavaScript file for admin carnivals functionality -->
<script src="/js/admin-carnivals.js"></script>