<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-pencil-square text-warning"></i>
                    Edit Carnival
                </h1>
                <div class="d-flex gap-2">
                    <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-primary">
                        <i class="bi bi-eye"></i> View Carnival
                    </a>
                    <a href="/admin/carnivals" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Carnivals
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Carnival Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Carnival Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="fw-bold"><%= carnival.title %></h6>
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar3"></i> 
                                <%= new Date(carnival.date).toLocaleDateString('en-AU') %>
                                <span class="ms-3">
                                    <i class="bi bi-geo-alt"></i> <%= carnival.state %>
                                </span>
                            </p>
                            <% if (carnival.creator) { %>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-person"></i> 
                                    Created by <%= carnival.creator.firstName %> <%= carnival.creator.lastName %> 
                                    (<%= carnival.creator.email %>)
                                </p>
                            <% } %>
                        </div>
                        <div class="col-md-4 text-end">
                            <% if (carnival.isActive) { %>
                                <span class="badge bg-success fs-6">Active</span>
                            <% } else { %>
                                <span class="badge bg-danger fs-6">Inactive</span>
                            <% } %>
                            <% if (carnival.mySidelineTitle) { %>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-link-45deg"></i> MySideline Import
                                </small>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Carnival Details
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/carnivals/<%= carnival.id %>/edit">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label for="title" class="form-label">Carnival Title *</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       value="<%= carnival.title %>" required maxlength="200">
                                <div class="form-text">The public title of the carnival</div>
                            </div>
                            <div class="col-md-4">
                                <label for="state" class="form-label">State *</label>
                                <select class="form-select" id="state" name="state" required>
                                    <option value="">Select State</option>
                                    <option value="NSW" <%= carnival.state === 'NSW' ? 'selected' : '' %>>NSW</option>
                                    <option value="QLD" <%= carnival.state === 'QLD' ? 'selected' : '' %>>QLD</option>
                                    <option value="VIC" <%= carnival.state === 'VIC' ? 'selected' : '' %>>VIC</option>
                                    <option value="WA" <%= carnival.state === 'WA' ? 'selected' : '' %>>WA</option>
                                    <option value="SA" <%= carnival.state === 'SA' ? 'selected' : '' %>>SA</option>
                                    <option value="TAS" <%= carnival.state === 'TAS' ? 'selected' : '' %>>TAS</option>
                                    <option value="NT" <%= carnival.state === 'NT' ? 'selected' : '' %>>NT</option>
                                    <option value="ACT" <%= carnival.state === 'ACT' ? 'selected' : '' %>>ACT</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="date" class="form-label">
                                    <span id="dateLabel">Event Date *</span>
                                </label>
                                <input type="date" class="form-control" id="date" name="date" 
                                       value="<%= carnival.date.toISOString().split('T')[0] %>" required>
                            </div>
                            <div class="col-md-6">
                                <div id="endDateContainer" data-has-end-date="<%= carnival.endDate ? 'true' : 'false' %>">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate" 
                                           value="<%= carnival.endDate ? carnival.endDate.toISOString().split('T')[0] : '' %>">
                                    <div class="invalid-feedback">End date must be after start date.</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isMultiDay" name="isMultiDay" 
                                           <%= carnival.endDate ? 'checked' : '' %>>
                                    <label class="form-check-label" for="isMultiDay">
                                        Multi-day event
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="contactName" class="form-label">Contact Name *</label>
                                <input type="text" class="form-control" id="contactName" name="contactName" 
                                       value="<%= carnival.organiserContactName || '' %>" required>
                                <div class="form-text">Primary contact person name</div>
                            </div>
                            <div class="col-md-6">
                                <label for="contactEmail" class="form-label">Contact Email *</label>
                                <input type="email" class="form-control" id="contactEmail" name="contactEmail" 
                                       value="<%= carnival.organiserContactEmail || '' %>" required>
                                <div class="form-text">Primary contact for inquiries</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="contactPhone" class="form-label">Contact Phone *</label>
                                <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                                       value="<%= carnival.organiserContactPhone || '' %>" required>
                                <div class="form-text">Primary contact phone number</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="locationAddress" class="form-label">Location Address *</label>
                            <textarea class="form-control" id="locationAddress" name="locationAddress" 
                                      rows="3" required maxlength="500"><%= carnival.locationAddress %></textarea>
                            <div class="form-text">Full address or venue details</div>
                        </div>

                        <!-- MySideline-Compatible Address Fields -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-geo-alt"></i> Detailed Location Information
                                <small class="text-muted">(MySideline-compatible fields)</small>
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="venueName" class="form-label">Venue Name</label>
                                    <input type="text" class="form-control" id="venueName" name="venueName" 
                                           value="<%= carnival.venueName || '' %>"
                                           placeholder="e.g., ANZ Stadium, Parramatta Sports Complex">
                                    <div class="form-text">Name of the venue or facility hosting the carnival</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="locationAddressLine1" class="form-label">Address Line 1</label>
                                    <input type="text" class="form-control" id="locationAddressLine1" name="locationAddressLine1" 
                                           value="<%= carnival.locationAddressLine1 || '' %>"
                                           placeholder="e.g., 123 Main Street">
                                    <div class="form-text">Street address or venue address</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="locationAddressLine2" class="form-label">Address Line 2</label>
                                    <input type="text" class="form-control" id="locationAddressLine2" name="locationAddressLine2" 
                                           value="<%= carnival.locationAddressLine2 || '' %>"
                                           placeholder="e.g., Suite 456, Building B">
                                    <div class="form-text">Additional address information (optional)</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="locationSuburb" class="form-label">Suburb/City</label>
                                    <input type="text" class="form-control" id="locationSuburb" name="locationSuburb" 
                                           value="<%= carnival.locationSuburb || '' %>"
                                           placeholder="e.g., Parramatta">
                                    <div class="form-text">Suburb or city name</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="locationPostcode" class="form-label">Postcode</label>
                                    <input type="text" class="form-control" id="locationPostcode" name="locationPostcode" 
                                           value="<%= carnival.locationPostcode || '' %>"
                                           placeholder="e.g., 2150" maxlength="10">
                                    <div class="form-text">Australian postcode</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="locationLatitude" class="form-label">Latitude</label>
                                    <input type="number" class="form-control" id="locationLatitude" name="locationLatitude" 
                                           value="<%= carnival.locationLatitude || '' %>"
                                           step="0.000001" min="-90" max="90"
                                           placeholder="e.g., -33.8568">
                                    <div class="form-text">GPS latitude (decimal degrees)</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="locationLongitude" class="form-label">Longitude</label>
                                    <input type="number" class="form-control" id="locationLongitude" name="locationLongitude" 
                                           value="<%= carnival.locationLongitude || '' %>"
                                           step="0.000001" min="-180" max="180"
                                           placeholder="e.g., 151.2153">
                                    <div class="form-text">GPS longitude (decimal degrees)</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="locationCountry" class="form-label">Country</label>
                                    <input type="text" class="form-control" id="locationCountry" name="locationCountry" 
                                           value="<%= carnival.locationCountry || 'Australia' %>"
                                           placeholder="Australia">
                                    <div class="form-text">Country name</div>
                                </div>
                                <div class="col-md-6 mb-3 d-flex align-items-end">
                                    <button type="button" class="btn btn-outline-info btn-sm" id="getLocationBtn">
                                        <i class="bi bi-geo"></i> Get GPS from Address
                                    </button>
                                    <small class="text-muted ms-2">Auto-fill coordinates</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="scheduleDetails" class="form-label">Schedule Details *</label>
                            <textarea class="form-control" id="scheduleDetails" name="scheduleDetails" 
                                      rows="4" required><%= carnival.scheduleDetails %></textarea>
                            <div class="form-text">Event schedule, timing, and format details</div>
                        </div>

                        <div class="mb-3">
                            <label for="registrationLink" class="form-label">Registration Link</label>
                            <input type="url" class="form-control" id="registrationLink" name="registrationLink" 
                                   value="<%= carnival.registrationLink || '' %>" placeholder="https://">
                            <div class="form-text">Link to external registration or signup form</div>
                        </div>

                        <div class="mb-3">
                            <label for="feesDescription" class="form-label">Fees Description</label>
                            <textarea class="form-control" id="feesDescription" name="feesDescription" rows="2" 
                                      placeholder="Entry fees, payment methods, etc."><%= carnival.feesDescription || '' %></textarea>
                            <div class="form-text">Description of fees and payment information</div>
                        </div>

                        <div class="mb-3">
                            <label for="callForVolunteers" class="form-label">Call for Volunteers</label>
                            <textarea class="form-control" id="callForVolunteers" name="callForVolunteers" rows="2" 
                                      placeholder="Volunteer opportunities, requirements, contact details"><%= carnival.callForVolunteers || '' %></textarea>
                            <div class="form-text">Information about volunteer opportunities</div>
                        </div>

                        <!-- Registration Management -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-people"></i> Registration Management
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="maxTeams" class="form-label">Maximum Teams</label>
                                    <input type="number" class="form-control" id="maxTeams" name="maxTeams" 
                                           value="<%= carnival.maxTeams || '' %>" min="1" max="100"
                                           placeholder="e.g., 16">
                                    <div class="form-text">Leave blank for unlimited registrations</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="registrationDeadline" class="form-label">Registration Deadline</label>
                                    <input type="datetime-local" class="form-control" id="registrationDeadline" name="registrationDeadline" 
                                           value="<%= carnival.registrationDeadline ? new Date(carnival.registrationDeadline).toISOString().slice(0, 16) : '' %>">
                                    <div class="form-text">Optional deadline for team registrations</div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isRegistrationOpen" name="isRegistrationOpen" 
                                               <%= carnival.isRegistrationOpen ? 'checked' : '' %>>
                                        <label class="form-check-label" for="isRegistrationOpen">
                                            <strong>Registration Currently Open</strong>
                                        </label>
                                        <div class="form-text">Uncheck to temporarily close registrations</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="alert alert-info mb-0">
                                        <i class="bi bi-info-circle"></i>
                                        <% if (carnival.mySidelineTitle) { %>
                                            <strong>MySideline Import:</strong> Originally imported from MySideline
                                        <% } else { %>
                                            <strong>Manual Entry:</strong> Manually created carnival
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Media Links -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-share"></i> Social Media Links
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="socialMediaFacebook" class="form-label">
                                        <i class="bi bi-facebook label-facebook"></i> Facebook
                                    </label>
                                    <input type="url" class="form-control" id="socialMediaFacebook" name="socialMediaFacebook" 
                                           value="<%= carnival.socialMediaFacebook || '' %>" placeholder="https://facebook.com/yourpage">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="socialMediaInstagram" class="form-label">
                                        <i class="bi bi-instagram label-instagram"></i> Instagram
                                    </label>
                                    <input type="url" class="form-control" id="socialMediaInstagram" name="socialMediaInstagram" 
                                           value="<%= carnival.socialMediaInstagram || '' %>" placeholder="https://instagram.com/yourpage">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="socialMediaTwitter" class="form-label">
                                        <i class="bi bi-twitter-x label-twitter-x"></i> X (Twitter)
                                    </label>
                                    <input type="url" class="form-control" id="socialMediaTwitter" name="socialMediaTwitter" 
                                           value="<%= carnival.socialMediaTwitter || '' %>" placeholder="https://x.com/yourpage">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="socialMediaWebsite" class="form-label">
                                        <i class="bi bi-globe text-success"></i> Website
                                    </label>
                                    <input type="url" class="form-control" id="socialMediaWebsite" name="socialMediaWebsite" 
                                           value="<%= carnival.socialMediaWebsite || '' %>" placeholder="https://yourwebsite.com">
                                </div>
                            </div>
                        </div>

                        <!-- Draw Information -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-file-earmark-text"></i> Draw Information
                            </h6>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="drawTitle" class="form-label">Draw Title</label>
                                    <input type="text" class="form-control" id="drawTitle" name="drawTitle" 
                                           value="<%= carnival.drawTitle || '' %>" placeholder="e.g., Pool Draw, Finals Draw">
                                    <div class="form-text">Optional title for the draw sheet</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="drawDescription" class="form-label">Draw Description</label>
                                    <textarea class="form-control" id="drawDescription" name="drawDescription" rows="2" 
                                              placeholder="Brief description of the draw format or details"><%= carnival.drawDescription || '' %></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Admin Notes -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-lock"></i> Admin Notes
                            </h6>
                            
                            <div class="mb-3">
                                <label for="adminNotes" class="form-label">Private Admin Notes</label>
                                <textarea class="form-control" id="adminNotes" name="adminNotes" rows="3" 
                                          placeholder="Private notes only visible to administrators and carnival organizers"><%= carnival.adminNotes || '' %></textarea>
                                <div class="form-text">These notes are only visible to administrators and carnival organizers</div>
                            </div>
                        </div>

                        <!-- Current Images Display -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-images"></i> Current Images & Documents
                            </h6>
                            <div class="row">
                                <% if (carnival.clubLogoURL) { %>
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <img src="<%= carnival.clubLogoURL %>" class="card-img-top admin-carnival-logo-preview" alt="Current Carnival Logo">
                                            <div class="card-body text-center">
                                                <small class="text-muted">Current Carnival Logo</small>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <% if (carnival.promotionalImageURL) { %>
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <img src="<%= carnival.promotionalImageURL %>" class="card-img-top admin-carnival-promo-preview" alt="Current Promotional Image">
                                            <div class="card-body text-center">
                                                <small class="text-muted">Current Promotional Image</small>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <% if (carnival.drawFileURL) { %>
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <div class="card-body text-center">
                                                <i class="bi bi-file-earmark-text display-6 text-muted"></i>
                                                <br>
                                                <small class="text-muted">Current Draw File</small>
                                                <br>
                                                <a href="<%= carnival.drawFileURL %>" target="_blank" class="btn btn-sm btn-outline-primary mt-2">
                                                    <i class="bi bi-download"></i> View
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- File Uploads -->
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-cloud-upload"></i> Upload New Images & Documents
                            </h6>
                            <p class="text-muted mb-3">Upload new files to replace existing ones (optional)</p>
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="clubLogo" class="form-label">New Club Logo</label>
                                    <div class="file-upload-area">
                                        <input type="file" class="form-control admin-file-input-hidden" id="clubLogo" name="logo" 
                                               accept="image/jpeg,image/jpg,image/png,image/gif,image/svg+xml,image/webp">
                                        <i class="bi bi-cloud-upload display-6 text-muted"></i>
                                        <p class="upload-text mt-2">Click or drag to upload new club logo</p>
                                        <small class="text-muted">Max 10MB, JPG/PNG/SVG/GIF/WebP</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="promotionalImage" class="form-label">New Promotional Image</label>
                                    <div class="file-upload-area">
                                        <input type="file" class="form-control admin-file-input-hidden" id="promotionalImage" name="promotionalImage" 
                                               accept="image/*">
                                        <i class="bi bi-image display-6 text-muted"></i>
                                        <p class="upload-text mt-2">Click or drag to upload new promotional image</p>
                                        <small class="text-muted">Max 5MB, JPG/PNG only</small>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="drawFile" class="form-label">New Draw Sheet</label>
                                    <div class="file-upload-area">
                                        <input type="file" class="form-control admin-file-input-hidden" id="drawFile" name="drawFile" 
                                               accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
                                        <i class="bi bi-file-earmark-text display-6 text-muted"></i>
                                        <p class="upload-text mt-2">Click or drag to upload new draw sheet</p>
                                        <small class="text-muted">Max 10MB, PDF/DOC/Image files</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle"></i> Update Carnival
                                </button>
                                <a href="/admin/carnivals" class="btn btn-secondary ms-2">
                                    Cancel
                                </a>
                            </div>
                            <div>
                                <button type="button" class="btn btn-outline-danger" 
                                        data-delete-carnival="<%= carnival.id %>"
                                        data-carnival-title="<%= carnival.title %>">
                                    <i class="bi bi-trash"></i> Delete Carnival
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-danger"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to permanently delete this carnival?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> This action cannot be undone. All carnival data will be permanently removed.
                </div>
                <p class="mb-0"><strong>Carnival:</strong> <span id="carnivalTitle"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Include external JavaScript file for admin carnival functionality -->
<script src="/js/admin-carnivals.js"></script>