<div class="container" data-page-id="admin-contact-submissions">
    <% 
        const currentTab = typeof activeTab === 'string' ? activeTab : 'messages';
        const currentSubscribers = (typeof subscribers !== 'undefined' && Array.isArray(subscribers)) ? subscribers : [];
        const currentSubscribersPagination = (typeof subscribersPagination !== 'undefined' && subscribersPagination) ? subscribersPagination : {
            currentPage: 1,
            totalPages: 1,
            totalItems: currentSubscribers.length,
            hasNext: false,
            hasPrev: false
        };
        const currentNotificationTypes = (typeof notificationTypes !== 'undefined' && Array.isArray(notificationTypes)) ? notificationTypes : [];
    %>
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-envelope-paper text-primary"></i>
                    Contact Submissions
                </h1>
                <div class="d-flex gap-2">
                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Admin Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link <%= currentTab !== 'subscribers' ? 'active' : '' %>" href="/admin/contact-submissions?tab=messages" role="tab" aria-selected="<%= currentTab !== 'subscribers' %>">
                        <i class="bi bi-envelope-paper me-1"></i> Contact Emails
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link <%= currentTab === 'subscribers' ? 'active' : '' %>" href="/admin/contact-submissions?tab=subscribers" role="tab" aria-selected="<%= currentTab === 'subscribers' %>">
                        <i class="bi bi-people me-1"></i> Subscribers
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="tab-content">
        <div class="tab-pane fade <%= currentTab !== 'subscribers' ? 'show active' : '' %>" role="tabpanel" id="messages-tab-panel">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-funnel"></i> Search & Filter Messages
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="GET" action="/admin/contact-submissions" class="row g-3">
                                <input type="hidden" name="tab" value="messages">
                                <div class="col-md-4">
                                    <label for="search" class="form-label">Search</label>
                                    <input type="text" class="form-control" id="search" name="search"
                                        placeholder="Name, email, club, message..." value="<%= filters.search %>">
                                </div>
                                <div class="col-md-2">
                                    <label for="status" class="form-label">Status</label>
                                    <select class="form-select" id="status" name="status">
                                        <option value="">All</option>
                                        <option value="new" <%= filters.status === 'new' ? 'selected' : '' %>>New</option>
                                        <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                                        <option value="replied" <%= filters.status === 'replied' ? 'selected' : '' %>>Replied</option>
                                        <option value="closed" <%= filters.status === 'closed' ? 'selected' : '' %>>Closed</option>
                                        <option value="spam" <%= filters.status === 'spam' ? 'selected' : '' %>>Spam</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="subject" class="form-label">Subject</label>
                                    <select class="form-select" id="subject" name="subject">
                                        <option value="">All</option>
                                        <option value="general" <%= filters.subject === 'general' ? 'selected' : '' %>>General</option>
                                        <option value="technical" <%= filters.subject === 'technical' ? 'selected' : '' %>>Technical</option>
                                        <option value="carnival" <%= filters.subject === 'carnival' ? 'selected' : '' %>>Carnival</option>
                                        <option value="delegate" <%= filters.subject === 'delegate' ? 'selected' : '' %>>Delegate</option>
                                        <option value="registration" <%= filters.subject === 'registration' ? 'selected' : '' %>>Registration</option>
                                        <option value="feedback" <%= filters.subject === 'feedback' ? 'selected' : '' %>>Feedback</option>
                                        <option value="other" <%= filters.subject === 'other' ? 'selected' : '' %>>Other</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label for="emailDeliveryStatus" class="form-label">Email Delivery</label>
                                    <select class="form-select" id="emailDeliveryStatus" name="emailDeliveryStatus">
                                        <option value="">All</option>
                                        <option value="pending" <%= filters.emailDeliveryStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="sent" <%= filters.emailDeliveryStatus === 'sent' ? 'selected' : '' %>>Sent</option>
                                        <option value="failed" <%= filters.emailDeliveryStatus === 'failed' ? 'selected' : '' %>>Failed</option>
                                        <option value="blocked" <%= filters.emailDeliveryStatus === 'blocked' ? 'selected' : '' %>>Blocked</option>
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-search"></i> Search
                                    </button>
                                </div>
                            </form>
                            <% if (filters.search || filters.status || filters.subject || filters.emailDeliveryStatus) { %>
                                <div class="mt-3">
                                    <a href="/admin/contact-submissions?tab=messages" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-x-circle"></i> Clear Filters
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-table"></i> Messages
                                <span class="badge bg-primary"><%= pagination.totalItems %></span>
                            </h5>
                            <small class="text-muted">
                                <% const messagesStart = pagination.totalItems > 0 ? ((pagination.currentPage - 1) * 20) + 1 : 0; %>
                                Showing <%= messagesStart %>-<%= Math.min(pagination.currentPage * 20, pagination.totalItems) %>
                                of <%= pagination.totalItems %>
                            </small>
                        </div>
                        <div class="card-body p-0">
                            <% if (submissions && submissions.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Submitted</th>
                                                <th>Sender</th>
                                                <th>Subject</th>
                                                <th>Status</th>
                                                <th>Email Delivery</th>
                                                <th>Replies</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% submissions.forEach((submission) => { %>
                                                <tr>
                                                    <td><small><%= new Date(submission.submittedAt).toLocaleString('en-AU') %></small></td>
                                                    <td>
                                                        <strong><%= submission.firstName %> <%= submission.lastName %></strong>
                                                        <br>
                                                        <small class="text-muted"><%= submission.email %></small>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-light text-dark text-capitalize"><%= submission.subject %></span>
                                                    </td>
                                                    <td>
                                                        <% if (submission.status === 'new') { %>
                                                            <span class="badge bg-primary">New</span>
                                                        <% } else if (submission.status === 'in_progress') { %>
                                                            <span class="badge bg-info text-dark">In Progress</span>
                                                        <% } else if (submission.status === 'replied') { %>
                                                            <span class="badge bg-success">Replied</span>
                                                        <% } else if (submission.status === 'closed') { %>
                                                            <span class="badge bg-secondary">Closed</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning text-dark">Spam</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (submission.emailDeliveryStatus === 'sent') { %>
                                                            <span class="badge bg-success">Sent</span>
                                                        <% } else if (submission.emailDeliveryStatus === 'failed') { %>
                                                            <span class="badge bg-danger">Failed</span>
                                                        <% } else if (submission.emailDeliveryStatus === 'blocked') { %>
                                                            <span class="badge bg-warning text-dark">Blocked</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary">Pending</span>
                                                        <% } %>
                                                    </td>
                                                    <td><span class="badge bg-light text-dark"><%= submission.replyCount || 0 %></span></td>
                                                    <td>
                                                        <a href="/admin/contact-submissions/<%= submission.id %>" class="btn btn-outline-primary btn-sm" title="View and reply">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-envelope-paper fs-1 text-muted"></i>
                                    <h5 class="mt-3">No contact messages found</h5>
                                    <p class="text-muted">No submissions match the current filters.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <% if (pagination.totalPages > 1) { %>
                <div class="row mt-4">
                    <div class="col-12">
                        <nav aria-label="Contact submissions pagination">
                            <ul class="pagination justify-content-center">
                                <% if (pagination.hasPrev) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?tab=messages&messagesPage=<%= pagination.currentPage - 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&subject=<%= filters.subject %>&emailDeliveryStatus=<%= filters.emailDeliveryStatus %>">
                                            <i class="bi bi-chevron-left"></i> Previous
                                        </a>
                                    </li>
                                <% } %>

                                <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?tab=messages&messagesPage=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>&subject=<%= filters.subject %>&emailDeliveryStatus=<%= filters.emailDeliveryStatus %>"><%= i %></a>
                                    </li>
                                <% } %>

                                <% if (pagination.hasNext) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?tab=messages&messagesPage=<%= pagination.currentPage + 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&subject=<%= filters.subject %>&emailDeliveryStatus=<%= filters.emailDeliveryStatus %>">
                                            Next <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="tab-pane fade <%= currentTab === 'subscribers' ? 'show active' : '' %>" role="tabpanel" id="subscribers-tab-panel">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-table"></i> Current Subscribers
                                <span class="badge bg-primary"><%= currentSubscribersPagination.totalItems %></span>
                            </h5>
                            <div class="d-flex align-items-center gap-3">
                                <small class="text-muted mb-0">
                                    <% const subscribersStart = currentSubscribersPagination.totalItems > 0 ? ((currentSubscribersPagination.currentPage - 1) * 20) + 1 : 0; %>
                                    Showing <%= subscribersStart %>-<%= Math.min(currentSubscribersPagination.currentPage * 20, currentSubscribersPagination.totalItems) %>
                                    of <%= currentSubscribersPagination.totalItems %>
                                </small>
                                <button
                                    type="button"
                                    class="btn btn-primary btn-sm"
                                    data-subscriber-email-trigger="bulk"
                                    data-bs-toggle="modal"
                                    data-bs-target="#subscriberEmailModal">
                                    <i class="bi bi-send me-1"></i> Email by Type
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <% if (currentSubscribers.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Email</th>
                                                <th>Subscription Date</th>
                                                <th>Notification Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% currentSubscribers.forEach((subscriber) => { %>
                                                <tr>
                                                    <td><strong><%= subscriber.email %></strong></td>
                                                    <td><small><%= subscriber.subscriptionDateDisplay || 'Unknown' %></small></td>
                                                    <td><span class="badge bg-light text-dark"><%= subscriber.notificationType %></span></td>
                                                    <td>
                                                        <button
                                                            type="button"
                                                            class="btn btn-outline-primary btn-sm"
                                                            data-subscriber-email-trigger="single"
                                                            data-subscriber-id="<%= subscriber.id %>"
                                                            data-subscriber-email="<%= subscriber.email %>"
                                                            data-subscriber-preferences='<%= JSON.stringify(subscriber.notificationPreferences || []) %>'
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#subscriberEmailModal">
                                                            <i class="bi bi-envelope me-1"></i> Email
                                                        </button>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <i class="bi bi-people fs-1 text-muted"></i>
                                    <h5 class="mt-3">No subscribers found</h5>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <% if (currentSubscribersPagination.totalPages > 1) { %>
                <div class="row mt-4">
                    <div class="col-12">
                        <nav aria-label="Subscribers pagination">
                            <ul class="pagination justify-content-center">
                                <% if (currentSubscribersPagination.hasPrev) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?tab=subscribers&subscribersPage=<%= currentSubscribersPagination.currentPage - 1 %>">
                                            <i class="bi bi-chevron-left"></i> Previous
                                        </a>
                                    </li>
                                <% } %>

                                <% for (let i = Math.max(1, currentSubscribersPagination.currentPage - 2); i <= Math.min(currentSubscribersPagination.totalPages, currentSubscribersPagination.currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentSubscribersPagination.currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?tab=subscribers&subscribersPage=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>

                                <% if (currentSubscribersPagination.hasNext) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?tab=subscribers&subscribersPage=<%= currentSubscribersPagination.currentPage + 1 %>">
                                            Next <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <div class="modal fade" id="subscriberEmailModal" tabindex="-1" aria-labelledby="subscriberEmailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form id="subscriberEmailForm" method="POST" action="/admin/contact-submissions/subscribers/email-by-type">
                    <div class="modal-header">
                        <h5 class="modal-title" id="subscriberEmailModalLabel">
                            <i class="bi bi-send me-2"></i>Send Subscriber Email
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-info" id="subscriberEmailModeHint">
                            Choose a notification type and we will BCC all active subscribers with that preference.
                        </div>

                        <div class="mb-3" id="bulkNotificationTypeWrapper">
                            <label for="subscriberEmailNotificationType" class="form-label">Communication Type</label>
                            <select class="form-select" id="subscriberEmailNotificationType" name="notificationType">
                                <% currentNotificationTypes.forEach((typeOption) => { %>
                                    <option value="<%= typeOption.value %>"><%= typeOption.label %></option>
                                <% }) %>
                            </select>
                            <div class="form-text">All active subscribers with this preference are added in BCC automatically.</div>
                        </div>

                        <div class="mb-3 d-none" id="singleSubscriberWrapper">
                            <label class="form-label">Recipient</label>
                            <input type="text" class="form-control" id="singleSubscriberEmail" value="" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="subscriberEmailSubject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subscriberEmailSubject" name="subject" required minlength="3" maxlength="200">
                        </div>

                        <div class="mb-3">
                            <label for="subscriberEmailMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="subscriberEmailMessage" name="message" rows="8" required minlength="10" maxlength="5000"></textarea>
                            <div class="form-text">Greeting and footer are automatically added using the standard email template.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="sendSubscriberEmailBtn">
                            <i class="bi bi-send me-1"></i> Send Email
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
