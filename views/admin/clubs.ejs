<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-building text-success"></i>
                    Club Management
                </h1>
                <div class="d-flex gap-2">
                    <a href="/clubs/manage" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Club
                    </a>
                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-search"></i> Search & Filter
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search Clubs</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="<%= filters.search %>" placeholder="Search by club name...">
                        </div>
                        <div class="col-md-3">
                            <label for="state" class="form-label">State</label>
                            <select class="form-select" id="state" name="state">
                                <option value="">All States</option>
                                <option value="NSW" <%= filters.state === 'NSW' ? 'selected' : '' %>>NSW</option>
                                <option value="QLD" <%= filters.state === 'QLD' ? 'selected' : '' %>>QLD</option>
                                <option value="VIC" <%= filters.state === 'VIC' ? 'selected' : '' %>>VIC</option>
                                <option value="WA" <%= filters.state === 'WA' ? 'selected' : '' %>>WA</option>
                                <option value="SA" <%= filters.state === 'SA' ? 'selected' : '' %>>SA</option>
                                <option value="TAS" <%= filters.state === 'TAS' ? 'selected' : '' %>>TAS</option>
                                <option value="NT" <%= filters.state === 'NT' ? 'selected' : '' %>>NT</option>
                                <option value="ACT" <%= filters.state === 'ACT' ? 'selected' : '' %>>ACT</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Clubs</option>
                                <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                                <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <p class="text-muted mb-0">
                    Showing <%= ((pagination.currentPage - 1) * 20) + 1 %> - 
                    <%= Math.min(pagination.currentPage * 20, pagination.totalItems) %> 
                    of <%= pagination.totalItems %> clubs
                </p>
                <% if (filters.search || filters.state || filters.status) { %>
                    <a href="/admin/clubs" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Clubs Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    <% if (clubs && clubs.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Club Name</th>
                                        <th>State</th>
                                        <th>Location</th>
                                        <th>Primary Delegate</th>
                                        <th>Status</th>
                                        <th>Publicly Listed</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% clubs.forEach(club => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <h6 class="mb-0">
                                                            <a href="/clubs/<%= club.id %>" class="text-decoration-none">
                                                                <%= club.clubName %>
                                                            </a>
                                                        </h6>
                                                        <% if (club.createdByProxy) { %>
                                                            <small class="text-muted">
                                                                <i class="bi bi-person-plus"></i> Created by Proxy
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge state-<%= club.state.toLowerCase() %>"><%= club.state || 'N/A' %></span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= club.location || 'No location' %>
                                                </small>
                                            </td>
                                            <td>
                                                <% if (club.primaryDelegate) { %>
                                                    <span class="fw-medium">
                                                        <%= club.primaryDelegate.firstName %> <%= club.primaryDelegate.lastName %>
                                                    </span>
                                                    <br>
                                                    <small class="text-muted"><%= club.primaryDelegate.email %></small>
                                                <% } else { %>
                                                    <span class="text-muted">No primary delegate</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (club.isActive) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-danger">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (club.isPubliclyListed) { %>
                                                    <span class="badge bg-info">Listed</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Not Listed</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/clubs/<%= club.id %>" 
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/admin/clubs/<%= club.id %>/edit" 
                                                       class="btn btn-outline-warning" title="Edit Club">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn <%= club.isPubliclyListed ? 'btn-outline-secondary' : 'btn-outline-success' %>" 
                                                            title="<%= club.isPubliclyListed ? 'Hide from Public Listing' : 'Show in Public Listing' %>"
                                                            data-action="toggle-club-visibility"
                                                            data-club-id="<%= club.id %>"
                                                            data-club-name="<%= club.clubName %>"
                                                            data-current-visibility="<%= club.isPubliclyListed %>">
                                                        <i class="bi bi-<%= club.isPubliclyListed ? 'eye-slash' : 'eye' %>"></i>
                                                    </button>
                                                    <button type="button" 
                                                            class="btn <%= club.isActive ? 'btn-outline-danger' : 'btn-outline-success' %>" 
                                                            title="<%= club.isActive ? 'Deactivate Club' : 'Reactivate Club' %>"
                                                            data-action="toggle-club-status"
                                                            data-club-id="<%= club.id %>"
                                                            data-club-name="<%= club.clubName %>"
                                                            data-current-status="<%= club.isActive %>">
                                                        <i class="bi bi-<%= club.isActive ? 'toggle-off' : 'toggle-on' %>"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-building-x display-4 text-muted mb-3"></i>
                            <h4 class="text-muted">No clubs found</h4>
                            <p class="text-muted mb-4">
                                <% if (filters.search || filters.state || filters.status) { %>
                                    Try adjusting your search criteria or clearing the filters.
                                <% } else { %>
                                    There are no clubs in the system yet.
                                <% } %>
                            </p>
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="/clubs/manage" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create First Club
                                </a>
                                <% if (filters.search || filters.state || filters.status) { %>
                                    <a href="/admin/clubs" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle"></i> Clear Filters
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Club pagination">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search %>&state=<%= filters.state %>&status=<%= filters.status %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    <% } %>
</div>

<!-- Include the admin clubs JavaScript -->
<script type="module" src="/js/admin-clubs.js"></script>