<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="admin-page-title">
                    <i class="bi bi-person-gear text-primary"></i>
                    Edit User
                </h1>
                <a href="/admin/users" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to User Management
                </a>
            </div>

            <!-- User Edit Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i>
                        Edit User: <%= editUser.firstName %> <%= editUser.lastName %>
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/users/<%= editUser.id %>/update">
                        <!-- Basic Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">
                                    First Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="firstName" 
                                       name="firstName" 
                                       value="<%= editUser.firstName %>" 
                                       required>
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">
                                    Last Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="lastName" 
                                       name="lastName" 
                                       value="<%= editUser.lastName %>" 
                                       required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">
                                Email Address <span class="text-danger">*</span>
                            </label>
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   name="email" 
                                   value="<%= editUser.email %>" 
                                   required>
                            <div class="form-text">
                                Changing the email address will require the user to verify the new email.
                            </div>
                        </div>

                        <!-- Club Assignment -->
                        <div class="mb-3">
                            <label for="clubId" class="form-label">Club Affiliation</label>
                            <select class="form-select" id="clubId" name="clubId">
                                <option value="">No club assigned</option>
                                <% clubs.forEach(club => { %>
                                    <option value="<%= club.id %>" 
                                            <%= editUser.clubId === club.id ? 'selected' : '' %>>
                                        <%= club.clubName %> (<%= club.state %>)
                                    </option>
                                <% }); %>
                            </select>
                            <div class="form-text">
                                Assign this user to a specific club. Leave blank if they're not affiliated with any club.
                            </div>
                        </div>

                        <!-- Role and Permissions -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-shield-check"></i>
                                    Role and Permissions
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="isPrimaryDelegate" 
                                                   name="isPrimaryDelegate"
                                                   <%= editUser.isPrimaryDelegate ? 'checked' : '' %>>
                                            <label class="form-check-label" for="isPrimaryDelegate">
                                                <strong>Primary Delegate</strong>
                                                <br>
                                                <small class="text-muted">
                                                    Main contact and manager for their club. Can create carnivals and manage club details.
                                                </small>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="isAdmin" 
                                                   name="isAdmin"
                                                   <%= editUser.isAdmin ? 'checked' : '' %>>
                                            <label class="form-check-label" for="isAdmin">
                                                <strong>System Administrator</strong>
                                                <br>
                                                <small class="text-muted">
                                                    Full system access. Can manage all users, clubs, and carnivals.
                                                </small>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                
                                <% if (editUser.isAdmin) { %>
                                    <div class="alert alert-warning mt-3">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        <strong>Warning:</strong> This user currently has administrator privileges. 
                                        Removing admin access will revoke their ability to access the admin dashboard.
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Account Status -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-toggle2-on"></i>
                                    Account Status
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isActive" 
                                           name="isActive"
                                           <%= editUser.isActive ? 'checked' : '' %>>
                                    <label class="form-check-label" for="isActive">
                                        <strong>Account Active</strong>
                                        <br>
                                        <small class="text-muted">
                                            When unchecked, the user will not be able to log in or access the system.
                                        </small>
                                    </label>
                                </div>
                                
                                <% if (!editUser.isActive) { %>
                                    <div class="alert alert-info mt-3">
                                        <i class="bi bi-info-circle"></i>
                                        <strong>Note:</strong> This account is currently inactive. 
                                        The user cannot log in until their account is reactivated.
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- User Information Display -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-info-circle"></i>
                                    Account Information
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Account Created:</strong>
                                        <br>
                                        <%= new Date(editUser.createdAt).toLocaleDateString('en-AU', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Last Updated:</strong>
                                        <br>
                                        <%= new Date(editUser.updatedAt).toLocaleDateString('en-AU', { 
                                            year: 'numeric', 
                                            month: 'long', 
                                            day: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </div>
                                </div>
                                
                                <% if (editUser.club) { %>
                                    <div class="mt-3">
                                        <strong>Current Club:</strong>
                                        <br>
                                        <span class="badge bg-info">
                                            <%= editUser.club.clubName %>
                                        </span>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <a href="/admin/users" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <div>
                                <button type="button" 
                                        class="btn btn-warning me-2"
                                        data-action="reset-password"
                                        data-user-id="<%= editUser.id %>"
                                        data-user-name="<%= editUser.firstName %> <%= editUser.lastName %>">
                                    <i class="bi bi-key"></i> Send Password Reset
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update User
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="card mt-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Danger Zone
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Delete User Account</h6>
                    <p class="text-muted mb-3">
                        Permanently delete this user account. This action cannot be undone and will remove 
                        all associated data. If the user is a primary delegate, their role will be 
                        transferred to another club member if available.
                    </p>
                    <button type="button" 
                            class="btn btn-danger"
                            data-action="delete-user"
                            data-user-id="<%= editUser.id %>"
                            data-user-name="<%= editUser.firstName %> <%= editUser.lastName %>">
                        <i class="bi bi-trash"></i> Delete User Account
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include external JavaScript file for admin edit user functionality -->
<script src="/js/admin-user-management.js"></script>