<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">
                    <i class="bi bi-pencil-square text-warning"></i>
                    Edit Club
                </h1>
                <div class="d-flex gap-2">
                    <a href="/clubs/<%= club.id %>" class="btn btn-outline-primary">
                        <i class="bi bi-eye"></i> View Club
                    </a>
                    <a href="/admin/clubs" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Clubs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Club Information Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Club Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="fw-bold"><%= club.clubName %></h6>
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt"></i> <%= club.state || 'No state' %>
                                <% if (club.location) { %>
                                    <span class="ms-3">
                                        <i class="bi bi-map"></i> <%= club.location %>
                                    </span>
                                <% } %>
                            </p>
                            <% if (club.primaryDelegate) { %>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-person-badge"></i> 
                                    Primary Delegate: <%= club.primaryDelegate.firstName %> <%= club.primaryDelegate.lastName %> 
                                    (<%= club.primaryDelegate.email %>)
                                </p>
                            <% } else { %>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-person-x"></i> No primary delegate assigned
                                </p>
                            <% } %>
                        </div>
                        <div class="col-md-4 text-end">
                            <% if (club.isActive) { %>
                                <span class="badge bg-success fs-6">Active</span>
                            <% } else { %>
                                <span class="badge bg-danger fs-6">Inactive</span>
                            <% } %>
                            <% if (club.isPubliclyListed) { %>
                                <br>
                                <span class="badge bg-info">Publicly Listed</span>
                            <% } else { %>
                                <br>
                                <span class="badge bg-secondary">Not Listed</span>
                            <% } %>
                            <% if (club.createdByProxy) { %>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-person-plus"></i> Created by Proxy
                                </small>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delegates Information -->
    <% if (club.delegates && club.delegates.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Club Delegates (<%= club.delegates.length %>)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% club.delegates.forEach(delegate => { %>
                                <div class="col-md-6 mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <strong><%= delegate.firstName %> <%= delegate.lastName %></strong>
                                            <% if (delegate.isPrimaryDelegate) { %>
                                                <span class="badge bg-primary ms-2">Primary</span>
                                            <% } %>
                                            <% if (!delegate.isActive) { %>
                                                <span class="badge bg-danger ms-2">Inactive</span>
                                            <% } %>
                                            <br>
                                            <small class="text-muted"><%= delegate.email %></small>
                                        </div>
                                        <a href="/admin/users/<%= delegate.id %>/edit" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Edit Form -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Club Details
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/clubs/<%= club.id %>/edit">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label for="clubName" class="form-label">Club Name *</label>
                                <input type="text" class="form-control" id="clubName" name="clubName" 
                                       value="<%= club.clubName %>" required maxlength="100">
                                <div class="form-text">Official name of the rugby league club</div>
                            </div>
                            <div class="col-md-4">
                                <label for="state" class="form-label">State *</label>
                                <select class="form-select" id="state" name="state" required>
                                    <option value="">Select State</option>
                                    <option value="NSW" <%= club.state === 'NSW' ? 'selected' : '' %>>NSW</option>
                                    <option value="QLD" <%= club.state === 'QLD' ? 'selected' : '' %>>QLD</option>
                                    <option value="VIC" <%= club.state === 'VIC' ? 'selected' : '' %>>VIC</option>
                                    <option value="WA" <%= club.state === 'WA' ? 'selected' : '' %>>WA</option>
                                    <option value="SA" <%= club.state === 'SA' ? 'selected' : '' %>>SA</option>
                                    <option value="TAS" <%= club.state === 'TAS' ? 'selected' : '' %>>TAS</option>
                                    <option value="NT" <%= club.state === 'NT' ? 'selected' : '' %>>NT</option>
                                    <option value="ACT" <%= club.state === 'ACT' ? 'selected' : '' %>>ACT</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" name="location" 
                                   value="<%= club.location || '' %>" maxlength="200">
                            <div class="form-text">City, suburb, or general location</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Club Description</label>
                            <textarea class="form-control" id="description" name="description" 
                                      rows="4" maxlength="1000"><%= club.description || '' %></textarea>
                            <div class="form-text">Brief description of the club and its activities</div>
                        </div>

                        <!-- Contact Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="contactEmail" class="form-label">Contact Email</label>
                                <input type="email" class="form-control" id="contactEmail" name="contactEmail" 
                                       value="<%= club.contactEmail || '' %>">
                                <div class="form-text">Public contact email for the club</div>
                            </div>
                            <div class="col-md-6">
                                <label for="contactPhone" class="form-label">Contact Phone</label>
                                <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                                       value="<%= club.contactPhone || '' %>">
                                <div class="form-text">Public contact phone number</div>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="facebookUrl" class="form-label">Facebook URL</label>
                                <input type="url" class="form-control" id="facebookUrl" name="facebookUrl" 
                                       value="<%= club.facebookUrl || '' %>" placeholder="https://facebook.com/...">
                            </div>
                            <div class="col-md-6">
                                <label for="websiteUrl" class="form-label">Website URL</label>
                                <input type="url" class="form-control" id="websiteUrl" name="websiteUrl" 
                                       value="<%= club.websiteUrl || '' %>" placeholder="https://...">
                            </div>
                        </div>

                        <!-- Admin-only controls -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-header bg-warning text-dark">
                                        <h6 class="mb-0">
                                            <i class="bi bi-shield-exclamation"></i> Administrator Controls
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
                                                           <%= club.isActive ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="isActive">
                                                        <strong>Active Club</strong>
                                                    </label>
                                                    <div class="form-text">
                                                        Inactive clubs are hidden from public view
                                                    </div>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="isPubliclyListed" name="isPubliclyListed" 
                                                           <%= club.isPubliclyListed ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="isPubliclyListed">
                                                        <strong>Publicly Listed</strong>
                                                    </label>
                                                    <div class="form-text">
                                                        Listed clubs appear in the "Find Clubs" directory
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="alert alert-info mb-0">
                                                    <i class="bi bi-info-circle"></i>
                                                    <strong>Club Statistics:</strong>
                                                    <ul class="mb-0 mt-2">
                                                        <li>Delegates: <%= club.delegates ? club.delegates.length : 0 %></li>
                                                        <li>Created: <%= new Date(club.createdAt).toLocaleDateString('en-AU') %></li>
                                                        <li>Last Updated: <%= new Date(club.updatedAt).toLocaleDateString('en-AU') %></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle"></i> Update Club
                                </button>
                                <a href="/admin/clubs" class="btn btn-secondary ms-2">
                                    Cancel
                                </a>
                            </div>
                            <div>
                                <a href="/clubs/<%= club.id %>/sponsors" class="btn btn-outline-info">
                                    <i class="bi bi-award"></i> Manage Sponsors
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
/**
 * Initialize form validation and interactions
 */
document.addEventListener('DOMContentLoaded', function() {
    // Form validation
    const form = document.querySelector('form[action*="/edit"]');
    if (form) {
        form.addEventListener('submit', function(e) {
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('is-invalid');
                    isValid = false;
                } else {
                    field.classList.remove('is-invalid');
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                alert('Please fill in all required fields.');
            }
        });
    }
    
    // Auto-resize description textarea
    const descriptionTextarea = document.getElementById('description');
    if (descriptionTextarea) {
        descriptionTextarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });
    }
});
</script>