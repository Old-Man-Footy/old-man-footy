<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">
                    <i class="bi bi-people text-primary"></i>
                    User Management
                </h1>
                <div class="d-flex gap-2">
                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Admin Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> Search & Filter Users
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="/admin/users" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Name or email..." value="<%= filters.search %>">
                        </div>
                        <div class="col-md-3">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Users</option>
                                <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
                                <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="role" class="form-label">Role</label>
                            <select class="form-select" id="role" name="role">
                                <option value="">All Roles</option>
                                <option value="admin" <%= filters.role === 'admin' ? 'selected' : '' %>>Administrators</option>
                                <option value="primary" <%= filters.role === 'primary' ? 'selected' : '' %>>Primary Delegates</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                    <% if (filters.search || filters.status || filters.role) { %>
                        <div class="mt-3">
                            <a href="/admin/users" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-table"></i> Users 
                        <span class="badge bg-primary"><%= pagination.totalItems %></span>
                    </h5>
                    <small class="text-muted">
                        Showing <%= ((pagination.currentPage - 1) * 20) + 1 %>-<%= Math.min(pagination.currentPage * 20, pagination.totalItems) %> 
                        of <%= pagination.totalItems %> users
                    </small>
                </div>
                <div class="card-body p-0">
                    <% if (users && users.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Club</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user => { %>
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong><%= user.firstName %> <%= user.lastName %></strong>
                                                    <br>
                                                    <small class="text-muted"><%= user.email %></small>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (user.club) { %>
                                                    <span class="badge bg-info"><%= user.club.clubName %></span>
                                                <% } else { %>
                                                    <span class="text-muted">No club</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (user.isAdmin) { %>
                                                    <span class="badge bg-danger">Administrator</span>
                                                <% } else if (user.isPrimaryDelegate) { %>
                                                    <span class="badge bg-primary">Primary Delegate</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Delegate</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (user.isActive) { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning">Inactive</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <small><%= new Date(user.createdAt).toLocaleDateString('en-AU') %></small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/admin/users/<%= user.id %>/edit" 
                                                       class="btn btn-outline-primary" title="Edit User">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-outline-warning" 
                                                            title="Reset Password"
                                                            data-action="reset-password"
                                                            data-user-id="<%= user.id %>"
                                                            data-user-name="<%= user.firstName %> <%= user.lastName %>">
                                                        <i class="bi bi-key"></i>
                                                    </button>
                                                    <button type="button" 
                                                            class="btn btn-outline-<%= user.isActive ? 'danger' : 'success' %>" 
                                                            title="<%= user.isActive ? 'Deactivate' : 'Activate' %> User"
                                                            data-action="toggle-status"
                                                            data-user-id="<%= user.id %>"
                                                            data-new-status="<%= !user.isActive %>"
                                                            data-user-name="<%= user.firstName %> <%= user.lastName %>">
                                                        <i class="bi bi-<%= user.isActive ? 'person-dash' : 'person-check' %>"></i>
                                                    </button>
                                                    <button type="button" 
                                                            class="btn btn-outline-danger" 
                                                            title="Delete User"
                                                            data-action="delete-user"
                                                            data-user-id="<%= user.id %>"
                                                            data-user-name="<%= user.firstName %> <%= user.lastName %>">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-people fs-1 text-muted"></i>
                            <h5 class="mt-3">No users found</h5>
                            <p class="text-muted">
                                <% if (filters.search || filters.status || filters.role) { %>
                                    No users match your current search criteria.
                                <% } else { %>
                                    There are no users in the system yet.
                                <% } %>
                            </p>
                            <% if (filters.search || filters.status || filters.role) { %>
                                <a href="/admin/users" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Clear Filters
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="User pagination">
                    <ul class="pagination justify-content-center">
                        <% if (pagination.hasPrev) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&role=<%= filters.role %>">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        <% } %>

                        <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>&role=<%= filters.role %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>

                        <% if (pagination.hasNext) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&role=<%= filters.role %>">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    <% } %>
</div>

<!-- Include external JavaScript file for admin users functionality -->
<script src="/js/admin-user-management.js"></script>