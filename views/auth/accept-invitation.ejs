<% layout('../layout') -%>

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Left side - Branding -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-primary">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-4">Welcome to Old Man Footy</h1>
                <p class="lead mb-4">Complete your registration to start managing carnivals</p>
                <div class="d-flex justify-content-center gap-4 text-center">
                    <div>
                        <i class="bi bi-calendar-event display-6 mb-2"></i>
                        <p class="mb-0">Manage Events</p>
                    </div>
                    <div>
                        <i class="bi bi-people display-6 mb-2"></i>
                        <p class="mb-0">Club Collaboration</p>
                    </div>
                    <div>
                        <i class="bi bi-trophy display-6 mb-2"></i>
                        <p class="mb-0">Old Man Footy</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side - Form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center py-5">
            <div class="w-100 px-4" style="max-width: 400px;">
                <div class="text-center mb-4">
                    <h2 class="h3 mb-3">Complete Your Registration</h2>
                    <p class="text-muted">
                        You've been invited to join <strong><%= user.clubId.clubName %></strong> as a club delegate.
                        Please set your password to complete registration.
                    </p>
                </div>

                <!-- Display errors if any -->
                <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>

                <!-- Invitation Details Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h6 class="card-title">Invitation Details</h6>
                        <div class="row">
                            <div class="col-sm-4 text-muted">Name:</div>
                            <div class="col-sm-8"><%= user.firstName %> <%= user.lastName %></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 text-muted">Email:</div>
                            <div class="col-sm-8"><%= user.email %></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 text-muted">Club:</div>
                            <div class="col-sm-8"><%= user.clubId.clubName %></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 text-muted">Role:</div>
                            <div class="col-sm-8">Club Delegate</div>
                        </div>
                    </div>
                </div>

                <form method="POST" action="/auth/accept-invitation/<%= user.invitationToken %>" data-form-type="accept-invitation">
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   placeholder="Create a secure password"
                                   required 
                                   minlength="8">
                            <button class="btn btn-outline-secondary" type="button" data-toggle-password="password">
                                <i class="bi bi-eye" id="password-toggle-icon"></i>
                            </button>
                        </div>
                        <div class="form-text">
                            Password must be at least 8 characters long.
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input type="password" 
                                   class="form-control" 
                                   id="confirmPassword" 
                                   name="confirmPassword" 
                                   placeholder="Confirm your password"
                                   required>
                            <button class="btn btn-outline-secondary" type="button" data-toggle-password="confirmPassword">
                                <i class="bi bi-eye" id="confirmPassword-toggle-icon"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-check-circle"></i> Complete Registration
                    </button>
                </form>

                <div class="text-center">
                    <small class="text-muted">
                        Already have an account? 
                        <a href="/auth/login" class="text-decoration-none">Sign in here</a>
                    </small>
                </div>

                <!-- Security Notice -->
                <div class="alert alert-info mt-4" role="alert">
                    <div class="d-flex">
                        <i class="bi bi-info-circle me-2"></i>
                        <div>
                            <strong>Security Notice:</strong> This invitation link will expire and can only be used once. 
                            Keep your password secure and don't share it with anyone.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include external JavaScript file for authentication functionality -->
<script src="/js/auth.js"></script>