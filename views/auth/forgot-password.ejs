<div class="container py-5" data-page-id="auth-forgot-password">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-key display-4 text-warning"></i>
                        <h2 class="h4 mt-2">Forgot Password</h2>
                        <p class="text-muted">Enter your email address to receive a password reset link</p>
                    </div>

                    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error => { %>
                                <p class="mb-0"><%= error.msg %></p>
                            <% }) %>
                        </div>
                    <% } %>

                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> 
                            If an account with that email address exists, we've sent you a password reset link.
                        </div>
                    <% } %>

                    <form method="POST" action="/auth/forgot-password" class="needs-validation" novalidate>
                        <input type="hidden" name="_token" value="<%= csrfToken %>">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                            <div class="invalid-feedback">Please provide a valid email address.</div>
                            <div class="form-text">
                                We'll send password reset instructions to this email address.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-envelope"></i> Send Reset Link
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">
                    
                    <div class="text-center">
                        <p class="mb-2">Remember your password?</p>
                        <a href="/auth/login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Back to Login
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <p class="mb-0">Don't have an account?</p>
                        <a href="/auth/register" class="btn btn-outline-secondary">
                            <i class="bi bi-person-plus"></i> Register as Club Delegate
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/js/auth-forgot-password.js"></script>
