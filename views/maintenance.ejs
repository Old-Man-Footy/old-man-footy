<div class="container-fluid p-0">
    <!-- Hero Banner - Matching Coming Soon Page Design -->
    <section class="hero-banner bg-primary py-4">
        <div class="hero-background-pattern"></div>
        <div class="container position-relative">
            <div class="row align-items-center">
                <div class="col-lg-4 text-center">
                    <div class="logo-container">
                        <img src="/icons/old-man-footy.svg" alt="Old Man Footy Logo" class="img-fluid hero-logo">
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="hero-content">
                        <h1 class="hero-title mb-3">We'll be back soon!</h1>
                        <div class="hero-description mb-4">
                            <p class="lead"><%= message %></p>
                            <p class="lead text-warning fw-bold"><%= estimatedReturn %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Maintenance Information Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-center py-2">
                        <h2 class="mb-2 fw-bold text-dark">Site Maintenance in Progress</h2>
                        <p class="mb-0 lead text-dark opacity-90">We're currently performing scheduled maintenance to improve your experience</p>
                    </div>
                    <div class="card-body p-4 text-center">
                        <!-- Maintenance Icon -->
                        <div class="text-warning mb-4">
                            <i class="bi bi-tools" style="font-size: 4rem;"></i>
                        </div>
                        
                        <h3 class="h4 mb-4">Thank you for your patience</h3>
                        <p class="text-muted mb-4">We're working hard to improve our services and will be back online shortly. All your data is safe and secure.</p>
                        
                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="mailto:<%= contactEmail %>" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-envelope me-2"></i>Contact Support
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Section -->
    <div class="bg-light py-4">
        <div class="container text-center">
            <p class="mb-1 text-muted">Masters Rugby League for the passionate players</p>
            <p class="mb-0 small text-muted">Last updated: <span id="current-time"></span></p>
        </div>
    </div>
</div>

<script src="/js/maintenance.js"></script>