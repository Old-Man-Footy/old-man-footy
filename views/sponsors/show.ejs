<div class="sponsor-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3 text-center mb-3 mb-md-0">
                <% if (sponsor.logoUrl) { %>
                    <img src="<%= sponsor.logoUrl %>" 
                         alt="<%= sponsor.sponsorName %> Logo" 
                         class="sponsor-logo-large">
                <% } else { %>
                    <div class="sponsor-logo-large d-flex align-items-center justify-content-center">
                        <i class="bi bi-building"></i>
                    </div>
                <% } %>
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="mb-3"><%= sponsor.sponsorName %></h1>
                        
                        <% if (sponsor.description) { %>
                            <p class="mt-3 lead"><%= sponsor.description %></p>
                        <% } %>
                    </div>
                    <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                        <div class="sponsor-action-buttons">
                            <a href="/sponsors/<%= sponsor.id %>/edit" class="btn btn-light">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-outline-light" data-action="delete-sponsor-btn">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container" data-sponsor-id="<%= sponsor.id %>" data-current-status="<%= sponsor.isActive %>">
    <div class="row">
        <!-- Sponsor Information -->
        <div class="col-lg-8">
            <div class="sponsor-info-card">
                <h3 class="mb-4">Sponsor Information</h3>
                
                <% if (sponsor.businessType) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Business Type</h6>
                            <p><%= sponsor.businessType %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.location) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Location</h6>
                            <p><%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.website) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-globe"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Website</h6>
                            <p><a href="<%= sponsor.website %>" target="_blank" rel="noopener"><%= sponsor.website %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactPerson) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Contact Person</h6>
                            <p><%= sponsor.contactPerson %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactEmail) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Contact Email</h6>
                            <p><a href="mailto:<%= sponsor.contactEmail %>"><%= sponsor.contactEmail %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactPhone) { %>
                    <div class="sponsor-info-item">
                        <div class="sponsor-info-icon">
                            <i class="bi bi-telephone"></i>
                        </div>
                        <div class="sponsor-info-content">
                            <h6>Contact Phone</h6>
                            <p><a href="tel:<%= sponsor.contactPhone %>"><%= sponsor.contactPhone %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <div class="sponsor-info-item">
                    <div class="sponsor-info-icon">
                        <i class="bi bi-calendar"></i>
                    </div>
                    <div class="sponsor-info-content">
                        <h6>Member Since</h6>
                        <p><%= new Date(sponsor.createdAt).toLocaleDateString('en-AU', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %></p>
                    </div>
                </div>
            </div>
            
            <!-- Associated Club Section -->
            <% if (club) { %>
                <div class="sponsor-info-card">
                    <h3 class="mb-4">Associated Club</h3>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <a href="/clubs/<%= club.id %>" class="text-decoration-none">
                                <div class="card sponsor-club-card-hover">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <% if (club.logoUrl) { %>
                                                <img src="<%= club.logoUrl %>" alt="<%= club.clubName %>" class="me-3 sponsor-club-logo">
                                            <% } %>
                                            <div>
                                                <h6 class="card-title mb-1 text-primary"><%= club.clubName %></h6>
                                                <small class="text-muted"><%= club.state %><% if (club.location) { %> - <%= club.location %><% } %></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                <div class="sponsor-info-card">
                    <h4 class="mb-3">Quick Actions</h4>
                    <div class="d-grid gap-2">
                        <a href="/sponsors/<%= sponsor.id %>/edit" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Sponsor
                        </a>
                        <button class="btn btn-outline-secondary" data-action="toggle-status-btn">
                            <i class="bi bi-toggle-<%= sponsor.isActive ? 'on' : 'off' %>"></i>
                            <%= sponsor.isActive ? 'Deactivate' : 'Activate' %>
                        </button>
                    </div>
                </div>
            <% } %>
            
            <!-- Social Media Links -->
            <% if (sponsor.facebookUrl || sponsor.instagramUrl || sponsor.twitterUrl || sponsor.linkedinUrl) { %>
                <div class="row mt-4">
                    <div class="col-12">
                        <h4>Follow <%= sponsor.name %></h4>
                        <div class="social-links">
                            <% if (sponsor.facebookUrl) { %>
                                <a href="<%= sponsor.facebookUrl %>" target="_blank" rel="noopener" class="btn btn-facebook">
                                    <i class="bi bi-facebook"></i> Facebook
                                </a>
                            <% } %>
                            <% if (sponsor.instagramUrl) { %>
                                <a href="<%= sponsor.instagramUrl %>" target="_blank" rel="noopener" class="btn btn-instagram">
                                    <i class="bi bi-instagram"></i> Instagram
                                </a>
                            <% } %>
                            <% if (sponsor.twitterUrl) { %>
                                <a href="<%= sponsor.twitterUrl %>" target="_blank" rel="noopener" class="btn btn-twitter-x">
                                    <i class="bi bi-twitter-x"></i> X (Twitter)
                                </a>
                            <% } %>
                            <% if (sponsor.linkedinUrl) { %>
                                <a href="<%= sponsor.linkedinUrl %>" target="_blank" rel="noopener" class="btn btn-linkedin">
                                    <i class="bi bi-linkedin"></i> LinkedIn
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
            
            <!-- Sponsor Details -->
            <div class="sponsor-info-card">
                <h4 class="mb-3">Sponsor Details</h4>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h3 text-primary mb-0">
                            <%= Math.floor((Date.now() - new Date(sponsor.createdAt)) / (1000 * 60 * 60 * 24)) %>
                        </div>
                        <small class="text-muted">Days Active</small>
                    </div>
                    <div class="col-6">
                        <div class="h5 text-success mb-0">
                            <%= sponsor.sponsorshipLevel || 'Standard' %>
                        </div>
                        <small class="text-muted">Sponsorship Level</small>
                    </div>
                </div>
                <div class="row text-center mt-3">
                    <div class="col-12">
                        <span class="badge <%= sponsor.isActive ? 'bg-success' : 'bg-secondary' %> fs-6">
                            <i class="bi bi-<%= sponsor.isActive ? 'check-circle' : 'pause-circle' %>"></i>
                            <%= sponsor.isActive ? 'Active' : 'Inactive' %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include external JavaScript file for sponsor management functionality -->
<script type="module" src="/js/sponsor-management.js"></script>