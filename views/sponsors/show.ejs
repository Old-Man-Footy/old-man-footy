<div class="sponsor-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3 text-center mb-3 mb-md-0">
                <% if (sponsor.logoUrl) { %>
                    <img src="<%= sponsor.logoUrl %>" 
                         alt="<%= sponsor.sponsorName %> Logo" 
                         class="sponsor-logo-large">
                <% } else { %>
                    <div class="sponsor-logo-large d-flex align-items-center justify-content-center">
                        <i class="fas fa-building fa-3x text-muted"></i>
                    </div>
                <% } %>
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="mb-3"><%= sponsor.sponsorName %></h1>
                        <span class="sponsor-tier-badge tier-<%= sponsor.sponsorshipLevel ? sponsor.sponsorshipLevel.toLowerCase() : 'supporting' %>">
                            <%= sponsor.sponsorshipLevel || 'Supporting' %> Sponsor
                        </span>
                        <span class="status-badge status-<%= sponsor.isActive ? 'active' : 'inactive' %> ms-3">
                            <%= sponsor.isActive ? 'Active' : 'Inactive' %>
                        </span>
                        <% if (sponsor.description) { %>
                            <p class="mt-3 lead"><%= sponsor.description %></p>
                        <% } %>
                    </div>
                    <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                        <div class="action-buttons">
                            <a href="/sponsors/<%= sponsor.id %>/edit" class="btn btn-light">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button class="btn btn-outline-light" onclick="confirmDelete()">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Sponsor Information -->
        <div class="col-lg-8">
            <div class="info-card">
                <h3 class="mb-4">Sponsor Information</h3>
                
                <% if (sponsor.businessType) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-industry"></i>
                        </div>
                        <div class="info-content">
                            <h6>Business Type</h6>
                            <p><%= sponsor.businessType %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.location) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="info-content">
                            <h6>Location</h6>
                            <p><%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.website) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-globe"></i>
                        </div>
                        <div class="info-content">
                            <h6>Website</h6>
                            <p><a href="<%= sponsor.website %>" target="_blank" rel="noopener"><%= sponsor.website %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactPerson) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="info-content">
                            <h6>Contact Person</h6>
                            <p><%= sponsor.contactPerson %></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactEmail) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <h6>Contact Email</h6>
                            <p><a href="mailto:<%= sponsor.contactEmail %>"><%= sponsor.contactEmail %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <% if (sponsor.contactPhone) { %>
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="info-content">
                            <h6>Contact Phone</h6>
                            <p><a href="tel:<%= sponsor.contactPhone %>"><%= sponsor.contactPhone %></a></p>
                        </div>
                    </div>
                <% } %>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="info-content">
                        <h6>Member Since</h6>
                        <p><%= new Date(sponsor.createdAt).toLocaleDateString('en-AU', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) %></p>
                    </div>
                </div>
            </div>
            
            <!-- Associated Clubs Section -->
            <% if (associatedClubs && associatedClubs.length > 0) { %>
                <div class="info-card">
                    <h3 class="mb-4">Associated Clubs</h3>
                    <div class="row">
                        <% associatedClubs.forEach(club => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <% if (club.logoUrl) { %>
                                                <img src="<%= club.logoUrl %>" alt="<%= club.clubName %>" class="me-3 club-logo-small">
                                            <% } %>
                                            <div>
                                                <h6 class="card-title mb-1"><%= club.clubName %></h6>
                                                <small class="text-muted"><%= club.state %></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Actions -->
            <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                <div class="info-card">
                    <h4 class="mb-3">Quick Actions</h4>
                    <div class="d-grid gap-2">
                        <a href="/sponsors/<%= sponsor.id %>/edit" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit Sponsor
                        </a>
                        <button class="btn btn-outline-secondary" onclick="toggleStatus()">
                            <i class="fas fa-toggle-<%= sponsor.isActive ? 'on' : 'off' %>"></i>
                            <%= sponsor.isActive ? 'Deactivate' : 'Activate' %>
                        </button>
                    </div>
                </div>
            <% } %>
            
            <!-- Social Media Links -->
            <% if (sponsor.facebookUrl || sponsor.instagramUrl || sponsor.twitterUrl || sponsor.linkedinUrl) { %>
                <div class="info-card">
                    <h4 class="mb-3">Social Media</h4>
                    <div class="d-flex gap-2">
                        <% if (sponsor.facebookUrl) { %>
                            <a href="<%= sponsor.facebookUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-facebook"></i>
                            </a>
                        <% } %>
                        <% if (sponsor.instagramUrl) { %>
                            <a href="<%= sponsor.instagramUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-instagram"></i>
                            </a>
                        <% } %>
                        <% if (sponsor.twitterUrl) { %>
                            <a href="<%= sponsor.twitterUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-twitter"></i>
                            </a>
                        <% } %>
                        <% if (sponsor.linkedinUrl) { %>
                            <a href="<%= sponsor.linkedinUrl %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-linkedin"></i>
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } %>
            
            <!-- Statistics -->
            <div class="info-card">
                <h4 class="mb-3">Statistics</h4>
                <div class="row text-center">
                    <div class="col-6">
                        <div class="h3 text-primary mb-0">
                            <%= Math.floor((Date.now() - new Date(sponsor.createdAt)) / (1000 * 60 * 60 * 24)) %>
                        </div>
                        <small class="text-muted">Days Active</small>
                    </div>
                    <div class="col-6">
                        <div class="h3 text-success mb-0">
                            <%= associatedClubs ? associatedClubs.length : 0 %>
                        </div>
                        <small class="text-muted">Associated Clubs</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm('Are you sure you want to delete this sponsor? This action cannot be undone.')) {
            fetch('/sponsors/<%= sponsor.id %>', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/sponsors';
                } else {
                    alert('Error deleting sponsor. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting sponsor. Please try again.');
            });
        }
    }
    
    function toggleStatus() {
        const currentStatus = <%= sponsor.isActive %>;
        const newStatus = !currentStatus;
        
        fetch('/sponsors/<%= sponsor.id %>/status', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ isActive: newStatus })
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Error updating sponsor status. Please try again.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error updating sponsor status. Please try again.');
        });
    }
</script>