<%- contentFor('title') %>
Sponsors - Old Man Footy

<%- contentFor('styles') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Sponsors</h1>
                <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                <div>
                    <a href="/sponsors/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Sponsor
                    </a>
                </div>
                <% } %>
            </div>

            <!-- Statistics Bar -->
            <div class="stats-bar">
                <div class="stat-item">
                    <div class="stat-number"><%= sponsors.length %></div>
                    <div class="stat-label">Total Sponsors</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= sponsors.filter(s => s.isActive).length %></div>
                    <div class="stat-label">Active</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= sponsors.filter(s => s.sponsorshipLevel === 'Gold').length %></div>
                    <div class="stat-label">Gold</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= sponsors.filter(s => s.sponsorshipLevel === 'Silver').length %></div>
                    <div class="stat-label">Silver</div>
                </div>
            </div>

            <!-- Search and Filters -->
            <div class="search-filters">
                <form method="GET" action="/sponsors">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="search" class="form-label">Search Sponsors</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="search" 
                                   name="search" 
                                   placeholder="Search by name, industry, or location..."
                                   value="<%= filters.search || '' %>">
                        </div>
                        <div class="filter-group">
                            <label for="state" class="form-label">State</label>
                            <select class="form-select" id="state" name="state">
                                <option value="">All States</option>
                                <% states.forEach(state => { %>
                                    <option value="<%= state %>" <%= filters.state === state ? 'selected' : '' %>><%= state %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="filter-group">
                            <label for="sponsorshipLevel" class="form-label">Sponsorship Level</label>
                            <select class="form-select" id="sponsorshipLevel" name="sponsorshipLevel">
                                <option value="">All Levels</option>
                                <% sponsorshipLevels.forEach(level => { %>
                                    <option value="<%= level %>" <%= filters.sponsorshipLevel === level ? 'selected' : '' %>><%= level %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="filter-group">
                            <button type="submit" class="btn btn-primary">Filter</button>
                            <a href="/sponsors" class="btn btn-outline-secondary">Clear</a>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Sponsors Grid -->
            <% if (sponsors.length > 0) { %>
                <div class="sponsor-grid">
                    <% sponsors.forEach(sponsor => { %>
                        <div class="sponsor-card">
                            <% if (sponsor.logoUrl) { %>
                                <img src="<%= sponsor.logoUrl %>" 
                                     alt="<%= sponsor.sponsorName %> Logo" 
                                     class="sponsor-logo">
                            <% } else { %>
                                <div class="sponsor-logo d-flex align-items-center justify-content-center">
                                    <i class="fas fa-building fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            
                            <div class="sponsor-info">
                                <div class="sponsor-name"><%= sponsor.sponsorName %></div>
                                
                                <span class="sponsor-tier tier-<%= sponsor.sponsorshipLevel ? sponsor.sponsorshipLevel.toLowerCase() : 'bronze' %>">
                                    <%= sponsor.sponsorshipLevel || 'Bronze' %>
                                </span>
                                
                                <% if (sponsor.businessType) { %>
                                    <div class="text-muted small mb-2">
                                        <i class="fas fa-industry"></i> <%= sponsor.businessType %>
                                    </div>
                                <% } %>
                                
                                <% if (sponsor.location) { %>
                                    <div class="text-muted small mb-2">
                                        <i class="fas fa-map-marker-alt"></i> <%= sponsor.location %>
                                    </div>
                                <% } %>
                                
                                <% if (sponsor.description) { %>
                                    <div class="sponsor-description">
                                        <%= sponsor.description.length > 100 ? 
                                            sponsor.description.substring(0, 100) + '...' : 
                                            sponsor.description %>
                                    </div>
                                <% } %>
                                
                                <div class="sponsor-actions">
                                    <a href="/sponsors/<%= sponsor.id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                                        <a href="/sponsors/<%= sponsor.id %>/edit" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-handshake fa-5x text-muted mb-3"></i>
                    <h3 class="text-muted">No Sponsors Found</h3>
                    <p class="text-muted">
                        <% if (filters.search || filters.state || filters.sponsorshipLevel) { %>
                            No sponsors match your current filters. Try adjusting your search criteria.
                        <% } else { %>
                            No sponsors have been added yet.
                        <% } %>
                    </p>
                    <% if (user && (user.role === 'admin' || user.role === 'primary_delegate')) { %>
                        <a href="/sponsors/new" class="btn btn-primary mt-3">
                            <i class="fas fa-plus"></i> Add First Sponsor
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>