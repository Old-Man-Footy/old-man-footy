<div class="user-guide-page container">
  <h1><%= page.title %></h1>
  <p class="lead text-muted"><%= page.description %></p>

  <div class="row mb-4">
    <div class="col-md-6">
      <% if (page.screenshotUrl) { %>
        <img src="<%= page.screenshotUrl %>" alt="<%= page.title %> screenshot" class="img-fluid rounded shadow-sm">
      <% } %>
    </div>
    <div class="col-md-6">
      <% if (page.details && page.details.length) { %>
        <h3>Contact options</h3>
        <ul>
          <% page.details.forEach(function(item) { %>
            <li><%= item %></li>
          <% }); %>
        </ul>
      <% } %>

      <p>Use the contact form to ask questions or report issues; provide clear details so support can help quickly.</p>
    </div>
  </div>

  <p><a href="/user-guide">Back to guide index</a></p>
</div>
