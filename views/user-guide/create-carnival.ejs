<%- { title: page.title } %>

<div class="container py-4">
  <h1><%= page.title %></h1>
  <% if (page.screenshotUrl) { %>
    <div class="guide-screenshot mb-4">
      <img src="<%= page.screenshotUrl %>" alt="<%= page.title %> screenshot" class="img-fluid border">
    </div>
  <% } %>

  <p><%= page.description %></p>

  <% if (page.details && page.details.length) { %>
    <ul>
      <% page.details.forEach(d => { %>
        <li><%= d %></li>
      <% }); %>
    </ul>
  <% } %>

  <a href="/user-guide" class="btn btn-secondary">Back to User Guide</a>
</div>


