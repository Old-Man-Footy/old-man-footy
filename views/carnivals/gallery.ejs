<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb Navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/carnivals">Carnivals</a></li>
                    <li class="breadcrumb-item"><a href="/carnivals/<%= carnival.id %>"><%= carnival.title %></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Gallery</li>
                </ol>
            </nav>

            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h2 mb-2"><%= carnival.title %> - Gallery</h1>
                    <p class="text-muted mb-0">
                        <% if (carnival.location) { %>
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <%= carnival.location %>
                        <% } %>
                        <% if (carnival.eventDate) { %>
                            <span class="badge bg-secondary ms-2">
                                <i class="fas fa-calendar me-1"></i>
                                <%= new Date(carnival.eventDate).toLocaleDateString() %>
                            </span>
                        <% } %>
                    </p>
                </div>
                
                <% if (user && canUpload) { %>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                            <i class="fas fa-upload me-1"></i>
                            Upload Images
                        </button>
                        <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to Carnival
                        </a>
                    </div>
                <% } %>
            </div>

            <%- include('../partials/gallery', { 
                images: images, 
                user: user, 
                canUpload: canUpload, 
                entity: carnival, 
                entityType: 'carnival',
                entityId: 'carnivalId'
            }) %>
        </div>
    </div>
</div>