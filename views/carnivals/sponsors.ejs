<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-handshake text-primary me-2"></i>
                        Carnival Sponsors
                    </h2>
                    <p class="text-muted mb-0">
                        Manage sponsors for <%= carnival.title %>
                    </p>
                </div>
                <div>
                    <a href="/carnivals/<%= carnival.id %>/manage" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Back to Carnival Management
                    </a>
                    <a href="/carnivals/<%= carnival.id %>/sponsors/add" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Add Sponsor
                    </a>
                </div>
            </div>

            <!-- Flash Messages -->
            <%- include('/partials/flash-messages') %>

            <!-- Current Carnival Sponsors -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-star text-warning me-2"></i>
                        Current Carnival Sponsors
                    </h5>
                </div>
                <div class="card-body">
                    <% if (carnivalSponsors && carnivalSponsors.length > 0) { %>
                        <div class="row g-3">
                            <% carnivalSponsors.forEach(sponsor => { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border">
                                        <!-- Sponsor Logo -->
                                        <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 120px;">
                                            <% if (sponsor.logoUrl) { %>
                                                <img src="/<%= sponsor.logoUrl %>" 
                                                     alt="<%= sponsor.sponsorName %> Logo" 
                                                     class="img-fluid" 
                                                     style="max-height: 100px; max-width: 100%; object-fit: contain;">
                                            <% } else { %>
                                                <div class="text-center text-muted">
                                                    <i class="fas fa-building fa-2x mb-2"></i>
                                                    <p class="mb-0 small">No Logo</p>
                                                </div>
                                            <% } %>
                                        </div>

                                        <div class="card-body d-flex flex-column">
                                            <h6 class="card-title">
                                                <%= sponsor.sponsorName %>
                                                <% if (sponsor.sponsorshipLevel) { %>
                                                    <span class="badge bg-secondary ms-1 small"><%= sponsor.sponsorshipLevel %></span>
                                                <% } %>
                                            </h6>
                                            
                                            <% if (sponsor.location) { %>
                                                <p class="text-muted small mb-2">
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    <%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %>
                                                </p>
                                            <% } %>

                                            <div class="mt-auto">
                                                <div class="btn-group w-100" role="group">
                                                    <a href="/sponsors/<%= sponsor.id %>" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    <form method="POST" action="/carnivals/<%= carnival.id %>/sponsors/<%= sponsor.id %>/remove" class="d-inline">
                                                        <button data-confirm="Remove <%= sponsor.sponsorName %> from this carnival?"
                                                                type="submit" class="btn btn-outline-danger btn-sm">
                                                            <i class="bi bi-x-circle"></i> Remove
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-handshake fa-3x text-muted"></i>
                            </div>
                            <h6 class="text-muted">No Sponsors Linked</h6>
                            <p class="text-muted mb-3">
                                This carnival doesn't have any sponsors linked yet.
                            </p>
                            <% if (clubSponsors && clubSponsors.length > 0) { %>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSponsorModal">
                                    <i class="fas fa-plus me-2"></i>Add First Sponsor
                                </button>
                            <% } else { %>
                                <p class="text-muted">
                                    You need to add sponsors to your club first before you can link them to carnivals.
                                </p>
                                <a href="/clubs/manage/sponsors" class="btn btn-outline-primary">
                                    <i class="fas fa-external-link-alt me-1"></i>Manage Club Sponsors
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Available Club Sponsors -->
            <% if (clubSponsors && clubSponsors.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-link text-info me-2"></i>
                            Available Club Sponsors
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            These sponsors are linked to your club and can be added to this carnival:
                        </p>
                        <div class="row g-3">
                            <% 
                            // Filter out sponsors already linked to this carnival
                            const availableSponsors = clubSponsors.filter(clubSponsor => 
                                !carnivalSponsors.some(carnivalSponsor => carnivalSponsor.id === clubSponsor.id)
                            );
                            %>
                            <% if (availableSponsors.length > 0) { %>
                                <% availableSponsors.forEach(sponsor => { %>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100 border-dashed">
                                            <!-- Sponsor Logo -->
                                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 100px;">
                                                <% if (sponsor.logoUrl) { %>
                                                    <img src="/<%= sponsor.logoUrl %>" 
                                                         alt="<%= sponsor.sponsorName %> Logo" 
                                                         class="img-fluid" 
                                                         style="max-height: 80px; max-width: 100%; object-fit: contain;">
                                                <% } else { %>
                                                    <div class="text-center text-muted">
                                                        <i class="fas fa-building fa-2x"></i>
                                                    </div>
                                                <% } %>
                                            </div>

                                            <div class="card-body d-flex flex-column">
                                                <h6 class="card-title">
                                                    <%= sponsor.sponsorName %>
                                                    <% if (sponsor.sponsorshipLevel) { %>
                                                        <span class="badge bg-secondary ms-1 small"><%= sponsor.sponsorshipLevel %></span>
                                                    <% } %>
                                                </h6>
                                                
                                                <% if (sponsor.location) { %>
                                                    <p class="text-muted small mb-2">
                                                        <i class="fas fa-map-marker-alt me-1"></i>
                                                        <%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %>
                                                    </p>
                                                <% } %>

                                                <div class="mt-auto">
                                                    <form method="POST" action="/carnivals/<%= carnival.id %>/sponsors/add" class="w-100">
                                                        <input type="hidden" name="sponsorId" value="<%= sponsor.id %>">
                                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                                            <i class="fas fa-plus me-1"></i>Add to Carnival
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-3">
                                        <p class="text-muted mb-0">
                                            <i class="fas fa-check-circle text-success me-1"></i>
                                            All your club sponsors are already linked to this carnival!
                                        </p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Add Sponsor Modal (Alternative UI) -->
<% if (clubSponsors && clubSponsors.length > 0) { %>
    <div class="modal fade" id="addSponsorModal" tabindex="-1" aria-labelledby="addSponsorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSponsorModalLabel">
                        <i class="fas fa-plus me-2"></i>Add Sponsor to Carnival
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-4">
                        Select sponsors from your club to link to this carnival:
                    </p>
                    <form method="POST" action="/carnivals/<%= carnival.id %>/sponsors/add" id="bulkAddForm">
                        <div class="row g-3">
                            <% 
                            const availableSponsors = clubSponsors.filter(clubSponsor => 
                                !carnivalSponsors.some(carnivalSponsor => carnivalSponsor.id === clubSponsor.id)
                            );
                            %>
                            <% if (availableSponsors.length > 0) { %>
                                <% availableSponsors.forEach(sponsor => { %>
                                    <div class="col-md-6">
                                        <div class="form-check card-check">
                                            <input class="form-check-input" type="radio" name="sponsorId" 
                                                   id="sponsor<%= sponsor.id %>" value="<%= sponsor.id %>">
                                            <label class="form-check-label w-100" for="sponsor<%= sponsor.id %>">
                                                <div class="card h-100">
                                                    <div class="card-body d-flex align-items-center">
                                                        <% if (sponsor.logoUrl) { %>
                                                            <img src="/<%= sponsor.logoUrl %>" 
                                                                 alt="<%= sponsor.sponsorName %>" 
                                                                 class="me-3 rounded" 
                                                                 style="width: 50px; height: 50px; object-fit: contain;">
                                                        <% } else { %>
                                                            <div class="me-3 bg-light rounded d-flex align-items-center justify-content-center" 
                                                                 style="width: 50px; height: 50px;">
                                                                <i class="fas fa-building text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                        <div>
                                                            <h6 class="mb-1"><%= sponsor.sponsorName %></h6>
                                                            <% if (sponsor.location) { %>
                                                                <small class="text-muted">
                                                                    <%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %>
                                                                </small>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="col-12">
                                    <div class="text-center py-3">
                                        <p class="text-muted mb-0">
                                            All your club sponsors are already linked to this carnival!
                                        </p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </form>
                </div>
                <% if (availableSponsors && availableSponsors.length > 0) { %>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" form="bulkAddForm" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add Selected Sponsor
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<% } %>

<style>
.border-dashed {
    border: 2px dashed #dee2e6 !important;
}

.card-check .form-check-input {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 2;
}

.card-check .form-check-input:checked + label .card {
    border-color: #0d6efd;
    background-color: rgba(13, 110, 253, 0.1);
}
</style>

<!-- Include SortableJS for drag and drop functionality -->
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<!-- Include common utilities for confirmation dialogs -->
<script src="/js/common-utils.js"></script>