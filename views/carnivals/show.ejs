            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form method="POST" action="/carnivals/<%= carnival.id %>/release-ownership" class="d-inline">
