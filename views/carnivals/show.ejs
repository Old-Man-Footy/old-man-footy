<div class="container py-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Main Carnival Information -->
            <div class="card shadow mb-4">
                <% if (carnival.promotionalImageURL) { %>
                    <img src="<%= carnival.promotionalImageURL %>" class="card-img-top" 
                         alt="<%= carnival.title %>" style="height: 300px; object-fit: cover;">
                <% } %>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="h3 mb-2"><%= carnival.title %></h1>
                            <div class="mb-2">
                                <span class="badge bg-secondary me-2"><%= carnival.state %></span>
                                <% if (carnival.date >= new Date()) { %>
                                    <span class="badge bg-success">Upcoming</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Past Event</span>
                                <% } %>
                                <% if (!carnival.isManuallyEntered && carnival.mySidelineEventId) { %>
                                    <span class="badge bg-warning text-dark">MySideline Import</span>
                                <% } %>
                            </div>
                        </div>
                        <% if (carnival.clubLogoURL) { %>
                            <img src="<%= carnival.clubLogoURL %>" alt="Club Logo" 
                                 style="width: 80px; height: 80px; object-fit: contain;">
                        <% } %>
                    </div>

                    <!-- Key Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="bi bi-calendar3 text-primary"></i> Date & Time</h5>
                            <p class="mb-3">
                                <%= carnival.date.toLocaleDateString('en-AU', { 
                                    weekday: 'long', 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="bi bi-geo-alt text-primary"></i> Location</h5>
                            <p class="mb-3"><%= carnival.locationAddress %></p>
                        </div>
                    </div>

                    <!-- Schedule Details -->
                    <div class="mb-4">
                        <h5><i class="bi bi-clock text-primary"></i> Schedule Details</h5>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0" style="white-space: pre-line;"><%= carnival.scheduleDetails %></p>
                        </div>
                    </div>

                    <!-- Registration & Fees -->
                    <% if (carnival.registrationLink || carnival.feesDescription) { %>
                        <div class="row mb-4">
                            <% if (carnival.registrationLink) { %>
                                <div class="col-md-6">
                                    <h5><i class="bi bi-person-plus text-success"></i> Registration</h5>
                                    <a href="<%= carnival.registrationLink %>" class="btn btn-success" target="_blank">
                                        <i class="bi bi-box-arrow-up-right"></i> Register Now
                                    </a>
                                </div>
                            <% } %>
                            <% if (carnival.feesDescription) { %>
                                <div class="col-md-6">
                                    <h5><i class="bi bi-currency-dollar text-info"></i> Fees</h5>
                                    <p><%= carnival.feesDescription %></p>
                                </div>
                            <% } %>
                        </div>
                    <% } %>

                    <!-- Volunteers -->
                    <% if (carnival.callForVolunteers) { %>
                        <div class="mb-4">
                            <h5><i class="bi bi-hand-thumbs-up text-warning"></i> Volunteers Needed</h5>
                            <div class="alert alert-warning">
                                <p class="mb-0"><%= carnival.callForVolunteers %></p>
                            </div>
                        </div>
                    <% } %>

                    <!-- Social Media Links -->
                    <% if (carnival.socialMediaFacebook || carnival.socialMediaInstagram || carnival.socialMediaTwitter || carnival.socialMediaWebsite) { %>
                        <div class="mb-4">
                            <h5><i class="bi bi-share text-primary"></i> Follow Us</h5>
                            <div class="social-links">
                                <% if (carnival.socialMediaFacebook) { %>
                                    <a href="<%= carnival.socialMediaFacebook %>" target="_blank" class="text-decoration-none me-3">
                                        <i class="bi bi-facebook text-primary"></i> Facebook
                                    </a>
                                <% } %>
                                <% if (carnival.socialMediaInstagram) { %>
                                    <a href="<%= carnival.socialMediaInstagram %>" target="_blank" class="text-decoration-none me-3">
                                        <i class="bi bi-instagram text-danger"></i> Instagram
                                    </a>
                                <% } %>
                                <% if (carnival.socialMediaTwitter) { %>
                                    <a href="<%= carnival.socialMediaTwitter %>" target="_blank" class="text-decoration-none me-3">
                                        <i class="bi bi-twitter text-info"></i> Twitter
                                    </a>
                                <% } %>
                                <% if (carnival.socialMediaWebsite) { %>
                                    <a href="<%= carnival.socialMediaWebsite %>" target="_blank" class="text-decoration-none me-3">
                                        <i class="bi bi-globe text-success"></i> Website
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    <% } %>

                    <!-- Draw Information -->
                    <% if (carnival.drawFileURL) { %>
                        <div class="draw-section">
                            <h5><i class="bi bi-trophy text-warning"></i> Draw & Results</h5>
                            <% if (carnival.drawTitle) { %>
                                <h6><%= carnival.drawTitle %></h6>
                            <% } %>
                            <% if (carnival.drawDescription) { %>
                                <p><%= carnival.drawDescription %></p>
                            <% } %>
                            <a href="<%= carnival.drawFileURL %>" class="btn btn-download" target="_blank">
                                <i class="bi bi-download"></i> Download Draw
                                <% if (carnival.drawFileName) { %>
                                    (<%= carnival.drawFileName %>)
                                <% } %>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Contact Information -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Organiser:</strong><br>
                        <%= carnival.organiserContactName %>
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong><br>
                        <a href="mailto:<%= carnival.organiserContactEmail %>?subject=Enquiry about <%= carnival.title %>">
                            <%= carnival.organiserContactEmail %>
                        </a>
                    </div>
                    <div class="mb-3">
                        <strong>Phone:</strong><br>
                        <a href="tel:<%= carnival.organiserContactPhone %>">
                            <%= carnival.organiserContactPhone %>
                        </a>
                    </div>
                    <% if (carnival.createdByUserId && carnival.createdByUserId.clubId) { %>
                        <div class="mb-0">
                            <strong>Club:</strong><br>
                            <%= carnival.createdByUserId.clubId.clubName %>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <% if (carnival.registrationLink) { %>
                            <a href="<%= carnival.registrationLink %>" class="btn btn-success" target="_blank">
                                <i class="bi bi-person-plus"></i> Register for Event
                            </a>
                        <% } %>
                        
                        <a href="mailto:<%= carnival.organiserContactEmail %>?subject=Enquiry about <%= carnival.title %>" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-envelope"></i> Contact Organiser
                        </a>
                        
                        <a href="/carnivals" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to All Carnivals
                        </a>

                        <!-- Take Ownership button for unclaimed MySideline events -->
                        <% if (user && user.clubId && !carnival.isManuallyEntered && carnival.mySidelineEventId && !carnival.createdByUserId) { %>
                            <form method="POST" action="/carnivals/<%= carnival._id %>/take-ownership">
                                <button type="submit" class="btn btn-warning w-100" 
                                        onclick="return confirm('Are you sure you want to take ownership of this event for your club? This will allow you to manage and edit the event details.')">
                                    <i class="bi bi-hand-thumbs-up"></i> Take Ownership
                                </button>
                            </form>
                        <% } %>

                        <!-- Edit/Delete for owners -->
                        <% if (user && carnival.createdByUserId && user._id.toString() === carnival.createdByUserId._id.toString()) { %>
                            <hr>
                            <a href="/carnivals/<%= carnival._id %>/edit" class="btn btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit Carnival
                            </a>
                            <form method="POST" action="/carnivals/<%= carnival._id %>/delete" 
                                  onsubmit="return RugbyLeagueMasters.confirmDelete('Are you sure you want to delete this carnival?')">
                                <button type="submit" class="btn btn-outline-danger w-100 mt-2">
                                    <i class="bi bi-trash"></i> Delete Carnival
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>