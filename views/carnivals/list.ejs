<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">All Carnivals</h1>
                    <p class="text-muted mb-0">Discover Masters Rugby League events across Australia</p>
                </div>
                <% if (user) { %>
                    <a href="/carnivals/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Carnival
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="GET" action="/carnivals" class="row g-3">
                <!-- Hidden field to track form submission -->
                <input type="hidden" name="_submitted" value="1">
                
                <div class="col-md-3">
                    <label for="state" class="form-label">State</label>
                    <select class="form-select" id="state" name="state">
                        <option value="all" <%= currentFilters.state === 'all' || !currentFilters.state ? 'selected' : '' %>>All States</option>
                        <% states.forEach(state => { %>
                            <option value="<%= state %>" <%= currentFilters.state === state ? 'selected' : '' %>>
                                <%= state %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           value="<%= currentFilters.search || '' %>" 
                           placeholder="Carnival title, location, organiser...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="upcoming" name="upcoming" value="true" 
                               <%= currentFilters.upcoming === 'true' ? 'checked' : '' %>>
                        <label class="form-check-label" for="upcoming">
                            Upcoming events only
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Count -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <% if (carnivals.length > 0) { %>
                <p class="text-muted mb-0">
                    Showing <%= carnivals.length %> carnival<%= carnivals.length !== 1 ? 's' : '' %>
                    <% if (currentFilters.state && currentFilters.state !== 'all') { %>
                        in <%= currentFilters.state %>
                    <% } %>
                    <% if (currentFilters.upcoming === 'true') { %>
                        (upcoming only)
                    <% } %>
                </p>
            <% } %>
        </div>
        <% if (Object.keys(currentFilters).length > 0 && (currentFilters.state !== 'all' || currentFilters.search || currentFilters.upcoming)) { %>
            <a href="/carnivals" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-twitter-circle"></i> Clear Filters
            </a>
        <% } %>
    </div>

    <!-- Carnival Cards -->
    <% if (carnivals && carnivals.length > 0) { %>
        <div class="row">
            <% carnivals.forEach(carnival => { %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm carnival-card">
                        <div class="row g-0">
                            <div class="col-8">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">
                                        <a href="/carnivals/<%= carnival.id %>" class="text-decoration-none">
                                            <%= carnival.title %>
                                        </a>
                                    </h6>
                                    
                                    <!-- Date and Location -->
                                    <div class="mb-1">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> 
                                            <%= carnival.date.toLocaleDateString('en-AU', { 
                                                month: 'short', 
                                                day: 'numeric' 
                                            }) %>
                                        </small>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> 
                                            <%= carnival.locationAddress.length > 30 ? 
                                                carnival.locationAddress.substring(0, 30) + '...' : 
                                                carnival.locationAddress %>
                                        </small>
                                    </div>
                                    
                                    <!-- Badges -->
                                    <div class="mb-2">
                                        <span class="badge bg-secondary me-1"><%= carnival.state %></span>
                                        <% if (carnival.date >= new Date()) { %>
                                            <span class="badge bg-success me-1">Upcoming</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary me-1">Past Event</span>
                                        <% } %>
                                        <% if (!carnival.isManuallyEntered && carnival.lastMySidelineSync) { %>
                                            <span class="badge bg-warning text-dark">MySideline</span>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Action Buttons -->
                                    <div class="d-flex gap-1 mb-2">
                                        <a href="/carnivals/<%= carnival.id %>" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <% if (carnival.registrationLink) { %>
                                            <a href="<%= carnival.registrationLink %>" class="btn btn-outline-success btn-sm" target="_blank">
                                                <i class="bi bi-person-plus"></i> Register
                                            </a>
                                        <% } %>
                                        <% if (carnival.drawFileURL) { %>
                                            <a href="<%= carnival.drawFileURL %>" class="btn btn-outline-info btn-sm" target="_blank">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        <% } %>
                                    </div>

                                    <!-- Owner Actions -->
                                    <% if (user && carnival.createdByUserId && user.id === carnival.createdByUserId) { %>
                                        <div class="d-flex gap-1">
                                            <a href="/carnivals/<%= carnival.id %>/edit" class="btn btn-outline-warning btn-sm">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <form method="POST" action="/carnivals/<%= carnival.id %>/delete" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this carnival?')">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>

                                    <!-- Take Ownership for unclaimed MySideline events -->
                                    <% if (user && user.clubId && !carnival.isManuallyEntered && carnival.lastMySidelineSync && !carnival.createdByUserId) { %>
                                        <div class="mt-1">
                                            <form method="POST" action="/carnivals/<%= carnival.id %>/take-ownership">
                                                <button type="submit" class="btn btn-warning btn-sm" 
                                                        onclick="return confirm('Take ownership of this MySideline event for your club?')">
                                                    <i class="bi bi-hand-thumbs-up"></i> Claim
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-4 d-flex align-items-center justify-content-center p-3">
                                <% 
                                // Show carnival logo first, then fall back to hosting club logo, then to missing.svg
                                const logoUrl = carnival.clubLogoURL || (carnival.creator && carnival.creator.club && carnival.creator.club.logoUrl) || '/icons/missing.svg';
                                %>
                                <img src="<%= logoUrl %>" alt="Club Logo" 
                                     class="img-fluid" style="max-width: 100%; max-height: 100%; object-fit: contain;">
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination placeholder -->
        <% if (carnivals.length >= 12) { %>
            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    Showing recent results. Use filters above to narrow your search.
                </p>
            </div>
        <% } %>

    <% } else { %>
        <!-- No Results -->
        <div class="text-center py-5">
            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
            <h4 class="text-muted mb-3">No carnivals found</h4>
            
            <% if (currentFilters.search || (currentFilters.state && currentFilters.state !== 'all') || currentFilters.upcoming === 'true') { %>
                <p class="text-muted mb-3">
                    Try adjusting your search criteria or 
                    <a href="/carnivals" class="text-decoration-none">view all carnivals</a>.
                </p>
            <% } else { %>
                <p class="text-muted mb-3">
                    Be the first to add a carnival to the platform!
                </p>
            <% } %>

            <!-- Action buttons for different user states -->
            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center align-items-center">
                <% if (user) { %>
                    <a href="/carnivals/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your Carnival
                    </a>
                <% } else { %>
                    <a href="/auth/register" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Register as Club Delegate
                    </a>
                <% } %>
                
                <% if (currentFilters.search || (currentFilters.state && currentFilters.state !== 'all') || currentFilters.upcoming === 'true') { %>
                    <a href="/carnivals" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Clear All Filters
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>

    <!-- Call to Action for Non-Users -->
    <% if (!user && carnivals.length > 0) { %>
        <div class="card bg-primary text-white text-center mt-5">
            <div class="card-body p-4">
                <h5 class="card-title">Are you organizing a Masters carnival?</h5>
                <p class="card-text">Join our platform to promote your events and reach more players across Australia.</p>
                <a href="/auth/register" class="btn btn-light btn-lg">
                    <i class="bi bi-person-plus"></i> Register as Club Delegate
                </a>
            </div>
        </div>
    <% } %>
</div>

<!-- Enhanced JavaScript for better UX -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit search after typing stops
    const searchInput = document.getElementById('search');
    if (searchInput) {
        let timeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                // Auto-submit form after 1 second of no typing
                this.form.submit();
            }, 1000);
        });
    }

    // Auto-submit when state dropdown changes
    const stateSelect = document.getElementById('state');
    if (stateSelect) {
        stateSelect.addEventListener('change', function() {
            this.form.submit();
        });
    }

    // Auto-submit when upcoming checkbox changes
    const upcomingCheckbox = document.getElementById('upcoming');
    if (upcomingCheckbox) {
        upcomingCheckbox.addEventListener('change', function() {
            this.form.submit();
        });
    }
});
</script>