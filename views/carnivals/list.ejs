<div class="bg-primary py-4 mb-4" data-page-id="carnivals-list">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="h2 mb-0">Find Masters Rugby League Carnivals</h1>
                <p class="lead mb-0">Discover Masters Rugby League carnivals across Australia</p>
            </div>
            <div class="col-lg-4 text-end">
                <% if (user) { %>
                    <a href="/carnivals/new" class="btn btn-outline-tertiary">
                        <i class="bi bi-plus-circle"></i> Add Carnival
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<section class="mb-4">
    <div class="container">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="GET" action="/carnivals" class="row g-3">
                    <!-- Hidden field to track form submission -->
                    <input type="hidden" name="_submitted" value="1">
                    
                    <div class="col-md-3">
                        <label for="search" class="form-label">Search Carnivals</label>
                        <input type="text" class="form-control" id="search" name="search" 
                               placeholder="Carnival title, location, organiser..." 
                               value="<%= currentFilters.search || '' %>">
                    </div>
                    <div class="col-md-3">
                        <label for="state" class="form-label">Filter by State</label>
                        <select class="form-select" id="state" name="state">
                            <option value="all" <%= currentFilters.state === 'all' || !currentFilters.state ? 'selected' : '' %>>All States</option>
                            <% states.forEach(state => { %>
                                <option value="<%= state %>" <%= currentFilters.state === state ? 'selected' : '' %>><%= state %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Carnival Type</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="upcoming" name="upcoming" value="true" 
                                   <%= currentFilters.upcoming === 'true' ? 'checked' : '' %>>
                            <label class="form-check-label" for="upcoming">
                                Upcoming carnivals only
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="container py-4">
    <!-- Results Count -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <% if (carnivals.length > 0) { %>
                <p class="text-muted mb-0">
                    Showing <%= carnivals.length %> carnival<%= carnivals.length !== 1 ? 's' : '' %>
                    <% if (currentFilters.state && currentFilters.state !== 'all') { %>
                        in <%= currentFilters.state %>
                    <% } %>
                    <% if (currentFilters.upcoming === 'true') { %>
                        (upcoming only)
                    <% } %>
                </p>
            <% } %>
        </div>
        <% if (Object.keys(currentFilters).length > 0 && (currentFilters.state !== 'all' || currentFilters.search || currentFilters.upcoming)) { %>
            <a href="/carnivals" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-twitter-x-circle"></i> Clear Filters
            </a>
        <% } %>
    </div>

    <!-- Carnival Cards -->
    <% if (carnivals && carnivals.length > 0) { %>
        <div class="row">
            <% carnivals.forEach(carnival => { %>
                <div class="col-md-6 mb-4">
                    <a href="/carnivals/<%= carnival.id %>" class="text-decoration-none">
                        <div class="card shadow-sm carnival-card h-100" style="cursor: pointer;">
                            <div class="row g-0 h-100">
                                <div class="col-8">
                                    <div class="card-body p-3 d-flex flex-column">
                                        <h6 class="card-title mb-2 text-dark"><%= carnival.title %></h6>                                    
                                        <!-- Date and Location -->
                                        <div class="mb-1">
                                            <small class="text-muted">
                                                <%- include('../partials/carnival-date', { 
                                                    carnival: carnival, 
                                                    format: 'compact',
                                                    showIcon: true,
                                                    addClass: 'text-muted'
                                                }) %>
                                            </small>
                                        </div>
                                        <div class="mb-2">
                                            <small class="text-muted">
                                                <%- include('../partials/carnival-address', { 
                                                    carnival: carnival, 
                                                    layout: 'inline',
                                                    truncate: 30,
                                                    addressClass: 'text-muted'
                                                }) %>
                                            </small>
                                        </div>
                                        
                                        <!-- Badges -->
                                        <div class="mb-2">
                                            <% if (carnival.state) { %>
                                                <span class="badge badge-sm state-<%= carnival.state.toLowerCase() %> me-1"><%= carnival.state %></span>
                                            <% } %>
                                            <% if (carnival.date && carnival.date instanceof Date && !isNaN(carnival.date)) { %>
                                                <% if (carnival.date >= new Date()) { %>
                                                    <span class="badge badge-sm bg-primary me-1">Upcoming</span>
                                                <% } else { %>
                                                    <span class="badge badge-sm bg-secondary me-1">Past Carnival</span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="badge badge-sm bg-warning text-dark me-1">Date TBA</span>
                                            <% } %>
                                            <% if (carnival.canTakeOwnership) { %>
                                                <span class="badge badge-sm bg-info text-primary me-1">
                                                    <i class="bi bi-hand-thumbs-up"></i> Unclaimed
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 d-flex align-items-center justify-content-center p-3">
                                    <% 
                                    // Show carnival logo first, then fall back to hosting club logo, then to missing.svg
                                    const logoUrl = carnival.clubLogoURL || (carnival.creator && carnival.creator.club && carnival.creator.club.logoUrl) || '/icons/missing.svg';
                                    %>
                                    <img src="<%= logoUrl %>" alt="Club Logo" 
                                         class="img-fluid" style="max-width: 100%; max-height: 100%; object-fit: contain;">
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>

        <!-- Pagination placeholder -->
        <% if (carnivals.length >= 12) { %>
            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    Showing recent results. Use filters above to narrow your search.
                </p>
            </div>
        <% } %>

    <% } else { %>
        <!-- No Results -->
        <div class="text-center py-5">
            <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
            <h4 class="text-muted mb-3">No carnivals found</h4>
            
            <% if (currentFilters.search || (currentFilters.state && currentFilters.state !== 'all') || currentFilters.upcoming === 'true') { %>
                <p class="text-muted mb-3">
                    Try adjusting your search criteria or 
                    <a href="/carnivals" class="text-decoration-none">view all carnivals</a>.
                </p>
            <% } else { %>
                <p class="text-muted mb-3">
                    Be the first to add a carnival to the platform!
                </p>
            <% } %>

            <!-- Action buttons for different user states -->
            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center align-items-center">
                <% if (user) { %>
                    <a href="/carnivals/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your Carnival
                    </a>
                <% } else { %>
                    <a href="/auth/register" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Register as Club Delegate
                    </a>
                <% } %>
                
                <% if (currentFilters.search || (currentFilters.state && currentFilters.state !== 'all') || currentFilters.upcoming === 'true') { %>
                    <a href="/carnivals" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Clear All Filters
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>

    <!-- Call to Action for Non-Users -->
    <% if (!user && carnivals.length > 0) { %>
        <div class="card bg-primary text-center mt-5">
            <div class="card-body p-4">
                <h5 class="card-title">Are you organizing a Masters carnival?</h5>
                <p class="card-text">Join our platform to promote your carnivals and reach more players across Australia.</p>
                <a href="/auth/register" class="btn btn-tertiary btn-lg">
                    <i class="bi bi-person-plus"></i> Register as Club Delegate
                </a>
            </div>
        </div>
    <% } %>
</div>

<script type="module" src="/js/carnival-list.js"></script>