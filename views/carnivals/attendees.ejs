<div class="container mt-4" data-page-id="carnivals-attendees">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/carnivals">Carnivals</a></li>
                    <li class="breadcrumb-item"><a href="/carnivals/<%= carnival.id %>"><%= carnival.title %></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Attendees</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><%= carnival.title %> - Attendees</h2>
                    <p class="text-muted">Manage club registrations and attendance for your carnival</p>
                </div>
                <div class="btn-group">
                    <a href="/carnivals/<%= carnival.id %>/attendees/add" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Club
                    </a>
                    <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Carnival
                    </a>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-2">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= totalAttendees %></div>
                            <small>Total Clubs</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card border-0 bg-info">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= totalTeams %></div>
                            <small>Total Teams</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card border-0 bg-success">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= attendanceStats.approved %></div>
                            <small>Approved</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card border-0 bg-warning text-dark">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= attendanceStats.pending %></div>
                            <small>Pending Approval</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card border-0 bg-success">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= paidAttendees %></div>
                            <small>Paid</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="card border-0 bg-danger text-dark">
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold"><%= totalAttendees - paidAttendees %></div>
                            <small>Unpaid</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h6 class="mb-2">Filter Registrations:</h6>
                            <div class="btn-group" role="group" aria-label="Approval Status Filter">
                                <input type="radio" class="btn-check" name="approvalFilter" id="filter-all" value="all" checked>
                                <label class="btn btn-outline-secondary btn-sm" for="filter-all">All</label>

                                <input type="radio" class="btn-check" name="approvalFilter" id="filter-approved" value="approved">
                                <label class="btn btn-outline-success btn-sm" for="filter-approved">Approved</label>

                                <input type="radio" class="btn-check" name="approvalFilter" id="filter-pending" value="pending">
                                <label class="btn btn-outline-warning btn-sm" for="filter-pending">Pending</label>

                                <input type="radio" class="btn-check" name="approvalFilter" id="filter-rejected" value="rejected">
                                <label class="btn btn-outline-danger btn-sm" for="filter-rejected">Rejected</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-2">Payment Status:</h6>
                            <div class="btn-group" role="group" aria-label="Payment Status Filter">
                                <input type="radio" class="btn-check" name="paymentFilter" id="payment-all" value="all" checked>
                                <label class="btn btn-outline-secondary btn-sm" for="payment-all">All</label>

                                <input type="radio" class="btn-check" name="paymentFilter" id="payment-paid" value="paid">
                                <label class="btn btn-outline-success btn-sm" for="payment-paid">Paid</label>

                                <input type="radio" class="btn-check" name="paymentFilter" id="payment-unpaid" value="unpaid">
                                <label class="btn btn-outline-warning btn-sm" for="payment-unpaid">Unpaid</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <h5 class="mb-0">
                            <i class="bi bi-people"></i> Registered Clubs
                            <span class="badge bg-secondary ms-2"><%= attendingClubs.length %></span>
                        </h5>
                    </div>
                    
                    <% if (attendingClubs.length === 0) { %>
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="text-muted">No Clubs Registered Yet</h5>
                            <p class="text-muted">Start building your carnival by adding clubs that will be attending.</p>
                            <a href="/carnivals/<%= carnival.id %>/attendees/add" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add First Club
                            </a>
                        </div>
                    <% } else { %>
                        <div id="attendeesList" class="row g-4">
                            <% attendingClubs.forEach(registration => { %>
                                <div class="col-lg-6" 
                                    data-registration-id="<%= registration.id %>"
                                    data-approval-status="<%= registration.approvalStatus %>"
                                    data-payment-status="<%= registration.isPaid ? 'paid' : 'unpaid' %>">
                                        <div class="card h-100 shadow-sm border">
                                            <div class="card-body p-4">
                                                <div class="d-flex align-items-start mb-3">
                                                    <div class="me-3 flex-shrink-0">
                                                        <% if (registration.participatingClub.logoUrl) { %>
                                                            <img src="<%= registration.participatingClub.logoUrl %>" 
                                                                alt="<%= registration.participatingClub.clubName %>" 
                                                                class="carnival-attendee-logo">
                                                        <% } else { %>
                                                            <div class="carnival-attendee-logo-placeholder d-flex align-items-center justify-content-center">
                                                                <i class="bi bi-shield text-muted"></i>
                                                            </div>
                                                        <% } %>
                                                    </div>

                                                    <div class="flex-grow-1">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div>
                                                                <h5 class="card-title mb-1">
                                                                    <a href="/clubs/<%= registration.participatingClub.id %>" 
                                                                        class="text-decoration-none text-dark fw-bold">
                                                                        <%= registration.participatingClub.clubName %>
                                                                    </a>                                                                     
                                                                </h5>
                                                                <p class="text-muted mb-0">
                                                                    <i class="bi bi-geo-alt me-1"></i>
                                                                    <%= registration.participatingClub.state %>
                                                                    <% if (registration.participatingClub.location) { %>
                                                                        · <%= registration.participatingClub.location %>
                                                                    <% } %>
                                                                </p>
                                                            </div>
                                                            
                                                            <div class="ms-3">
                                                                <% if (registration.approvalStatus === 'approved') { %>
                                                                    <span class="badge bg-success fs-6">
                                                                        <i class="bi bi-check-circle me-1"></i>Approved
                                                                    </span>
                                                                <% } else if (registration.approvalStatus === 'pending') { %>
                                                                    <span class="badge bg-warning text-dark fs-6">
                                                                        <i class="bi bi-clock me-1"></i>Pending
                                                                    </span>
                                                                <% } else if (registration.approvalStatus === 'rejected') { %>
                                                                    <span class="badge bg-danger fs-6">
                                                                        <i class="bi bi-x-circle me-1"></i>Rejected
                                                                    </span>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                                <div class="border-top pt-3 mb-3">
                                                    <div class="row g-3">
                                                        <div class="col-md-6">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="bi bi-calendar-check text-primary me-2"></i>
                                                                <div>
                                                                    <small class="text-muted d-block">Registered</small>
                                                                    <span class="fw-medium"><%= new Date(registration.registrationDate).toLocaleDateString() %></span>
                                                                </div>
                                                            </div>
                                                            
                                                            <% if (registration.contactPerson) { %>
                                                            <div class="d-flex align-items-center">
                                                                <i class="bi bi-person text-primary me-2"></i>
                                                                <div>
                                                                    <small class="text-muted d-block">Contact Person</small>
                                                                    <span class="fw-medium"><%= registration.contactPerson %></span>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                        </div>
                                                        
                                                        <div class="col-md-6">
                                                            <div class="d-flex align-items-center mb-2">
                                                                <i class="bi bi-people-fill text-success me-2"></i>
                                                                <div>
                                                                    <small class="text-muted d-block">Teams & Players</small>
                                                                    <span class="fw-medium">
                                                                        <%= registration.numberOfTeams || 1 %> team<%= (registration.numberOfTeams || 1) !== 1 ? 's' : '' %>
                                                                        <% if (registration.playerCount) { %>
                                                                            · <%= registration.playerCount %> player<%= registration.playerCount !== 1 ? 's' : '' %>
                                                                        <% } %>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="bg-light rounded p-3 mb-3">
                                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                                        <h6 class="mb-0 text-dark">
                                                            <i class="bi bi-credit-card me-2"></i>Payment Details
                                                        </h6>
                                                        <% if (registration.isPaid) { %>
                                                            <span class="badge bg-success">
                                                                <i class="bi bi-check-circle me-1"></i>Paid
                                                            </span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning text-dark">
                                                                <i class="bi bi-clock me-1"></i>Pending
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                    
                                                    <% 
                                                        const teamFee = parseFloat(carnival.teamRegistrationFee || 0);
                                                        const perPlayerFee = parseFloat(carnival.perPlayerFee || 0);
                                                        const teams = registration.numberOfTeams || 1;
                                                        const players = registration.playerCount || 0;
                                                        const calculatedTotal = (teamFee * teams) + (perPlayerFee * players);
                                                        const actualAmount = parseFloat(registration.paymentAmount || 0);
                                                    %>
                                                    
                                                    <% if (actualAmount > 0) { %>
                                                        <div class="fw-bold text-dark mb-1">
                                                            Amount: $<%= actualAmount.toFixed(2) %>
                                                        </div>
                                                    <% } %>
                                                    
                                                    <% if (calculatedTotal > 0) { %>
                                                        <small class="text-muted">
                                                            <% if (calculatedTotal !== actualAmount) { %>
                                                                Calculated: $<%= calculatedTotal.toFixed(2) %> = 
                                                            <% } %>
                                                            $<%= teamFee.toFixed(2) %> × <%= teams %> team<%= teams !== 1 ? 's' : '' %>
                                                            <% if (players > 0) { %>
                                                                + $<%= perPlayerFee.toFixed(2) %> × <%= players %> player<%= players !== 1 ? 's' : '' %>
                                                            <% } %>
                                                        </small>
                                                    <% } %>
                                                </div>

                                                                <div class="row g-1">
                                                    <div class="col-4">
                                                        <a href="/carnivals/<%= carnival.id %>/attendees/<%= registration.id %>/players" 
                                                            class="btn btn-outline-primary btn-sm w-100 text-truncate" 
                                                            title="Manage Players">
                                                            <i class="bi bi-people d-block d-sm-inline me-sm-1"></i>
                                                            <span class="d-none d-sm-inline">Manage</span>
                                                            <span class="d-sm-none">Players</span>
                                                        </a>
                                                    </div>
                                                    <div class="col-4">
                                                        <a href="/carnivals/<%= carnival.id %>/attendees/<%= registration.id %>/edit" 
                                                            class="btn btn-outline-secondary btn-sm w-100 text-truncate"
                                                            title="Edit Registration">
                                                            <i class="bi bi-pencil d-block d-sm-inline me-sm-1"></i>
                                                            <span class="d-none d-sm-inline">Edit</span>
                                                            <span class="d-sm-none">Reg.</span>
                                                        </a>
                                                    </div>
                                                    <div class="col-4">
                                                        <button type="button" 
                                                                class="btn btn-outline-danger btn-sm w-100 text-truncate remove-attendee"
                                                                data-registration-id="<%= registration.id %>"
                                                                data-club-name="<%= registration.participatingClub.clubName %>"
                                                                title="Remove Club">
                                                            <i class="bi bi-trash d-block d-sm-inline me-sm-1"></i>
                                                            <span class="d-none d-sm-inline">Remove</span>
                                                            <span class="d-sm-none">Club</span>
                                                        </button>
                                                    </div>
                                                </div>

                                                <% if (registration.approvalStatus === 'pending') { %>
                                                    <div class="mt-3 pt-3 border-top">
                                                        <h6 class="text-muted mb-2">
                                                            <i class="bi bi-hand-thumbs-up me-1"></i>Approval Required
                                                        </h6>
                                                        <div class="d-flex gap-2">
                                                            <button type="button" 
                                                                    class="btn btn-success approve-registration"
                                                                    data-registration-id="<%= registration.id %>"
                                                                    data-club-name="<%= registration.participatingClub.clubName %>">
                                                                <i class="bi bi-check-circle me-1"></i>Approve
                                                            </button>
                                                            <button type="button" 
                                                                    class="btn btn-danger reject-registration"
                                                                    data-registration-id="<%= registration.id %>"
                                                                    data-club-name="<%= registration.participatingClub.clubName %>">
                                                                <i class="bi bi-x-circle me-1"></i>Reject
                                                            </button>
                                                        </div>
                                                    </div>
                                                <% } %>

                                                <% if (registration.approvalStatus === 'rejected' && registration.rejectionReason) { %>
                                                    <div class="mt-3 pt-3 border-top">
                                                        <div class="alert alert-danger mb-0" role="alert">
                                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                                            <strong>Rejection Reason:</strong> <%= registration.rejectionReason %>
                                                        </div>
                                                    </div>
                                                <% } %>

                                                <% if (registration.approvalStatus === 'approved' && registration.approvedAt) { %>
                                                    <div class="mt-3 pt-3 border-top">
                                                        <div class="alert alert-success mb-0" role="alert">
                                                            <i class="bi bi-check-circle me-2"></i>
                                                            <strong>Approved:</strong> <%= new Date(registration.approvedAt).toLocaleDateString() %>
                                                        </div>
                                                    </div>
                                                <% } %>

                                                <% if (registration.specialRequirements) { %>
                                                    <div class="mt-3 pt-3 border-top">
                                                        <div class="alert alert-info mb-0" role="alert">
                                                            <i class="bi bi-info-circle me-2"></i>
                                                            <strong>Special Requirements:</strong> <%= registration.specialRequirements %>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectionModal" tabindex="-1" aria-labelledby="rejectionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectionModalLabel">Reject Registration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> Once a club is rejected, this action cannot be undone without administrator input. Please ensure you want to proceed with the rejection.
                </div>
                <p>Are you sure you want to reject <strong id="rejectionClubName"></strong>'s registration?</p>
                <div class="mb-3">
                    <label for="rejectionReason" class="form-label">Reason for rejection (optional):</label>
                    <textarea class="form-control" id="rejectionReason" rows="3" 
                                placeholder="e.g., Carnival is full, club doesn't meet requirements, etc."></textarea>
                    <div class="form-text">This reason will be included in the notification email to the club.</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRejectBtn">
                    <i class="bi bi-x-circle"></i> Reject Registration
                </button>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/js/carnival-attendees.js"></script>