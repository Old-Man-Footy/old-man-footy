<div class="container mt-4" data-registration-id="<%= registration.id %>"  data-page-id="carnivals-my-club-players">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/carnivals/<%= carnival.id %>"><%= carnival.title %></a></li>
            <li class="breadcrumb-item active" aria-current="page">Manage Players</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-people-fill"></i> Manage Players - <%= carnival.title %></h2>
                    <p class="text-muted mb-0">Select which players from your club will attend this carnival</p>
                </div>
                <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Carnival
                </a>
            </div>
        </div>
    </div>

    <!-- Registration Info -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Your Registration</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Club:</strong> <%= registration.participatingClub.clubName %></p>
                            <% if (registration.teamName) { %>
                                <p><strong>Team Name:</strong> <%= registration.teamName %></p>
                            <% } %>
                            <% if (registration.numberOfTeams > 1) { %>
                                <p><strong>Number of Teams:</strong> <%= registration.numberOfTeams %></p>
                            <% } %>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Contact:</strong> <%= registration.contactPerson %></p>
                            <% if (registration.contactEmail) { %>
                                <p><strong>Email:</strong> <%= registration.contactEmail %></p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Current Players -->
    <% if (isMultiTeam) { %>
        <!-- Multi-Team Display -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-people"></i> Team Assignments (<%= assignedPlayers.length %> total players)</h5>
                        <% if (availablePlayers.length > 0) { %>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addPlayersModal">
                                <i class="bi bi-plus-circle"></i> Add More Players
                            </button>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (assignedPlayers.length === 0) { %>
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-person-plus fs-1"></i>
                                <p class="mt-3">No players added yet</p>
                                <% if (availablePlayers.length > 0) { %>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPlayersModal">
                                        <i class="bi bi-plus-circle"></i> Add Players
                                    </button>
                                <% } else { %>
                                    <a href="/clubs/<%= registration.participatingClub.id %>/players" class="btn btn-outline-primary">
                                        <i class="bi bi-plus-circle"></i> Manage Club Players
                                    </a>
                                <% } %>
                            </div>
                        <% } else { %>
                            <!-- Team Containers -->
                            <div class="row">
                                <% teams.forEach(team => { %>
                                    <div class="col-lg-6 mb-4">
                                        <div class="card h-100 team-container" data-team-number="<%= team.teamNumber %>">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">
                                                    <i class="bi bi-shield"></i> <%= team.teamName %>
                                                    <span class="badge bg-light text-dark ms-2"><%= team.playerCount %> players</span>
                                                </h6>
                                            </div>
                                            <div class="card-body team-drop-zone" data-team-number="<%= team.teamNumber %>">
                                                <% if (team.players.length === 0) { %>
                                                    <div class="text-center text-muted py-3">
                                                        <i class="bi bi-arrow-down-circle-dotted"></i>
                                                        <p class="mb-0 small">Drop players here or assign using dropdown</p>
                                                    </div>
                                                <% } else { %>
                                                    <% team.players.forEach(assignment => { %>
                                                        <div class="player-card mb-2" data-assignment-id="<%= assignment.id %>" draggable="true">
                                                            <div class="card">
                                                                <div class="card-body p-2">
                                                                    <div class="d-flex justify-content-between align-items-start">
                                                                        <div class="flex-grow-1">
                                                                            <h6 class="mb-1 text-truncate"><%= assignment.player.firstName %> <%= assignment.player.lastName %></h6>
                                                                            <div class="d-flex align-items-center">
                                                                                <% if (assignment.player.getAge && assignment.player.getAge()) { %>
                                                                                    <small class="text-muted me-2">Age: <%= assignment.player.getAge() %></small>
                                                                                <% } %>
                                                                                <% if (assignment.player.isMastersEligible && assignment.player.isMastersEligible()) { %>
                                                                                    <span class="badge bg-primary">Masters</span>
                                                                                <% } else { %>
                                                                                    <span class="badge bg-warning text-dark">Under 35</span>
                                                                                <% } %>
                                                                            </div>
                                                                        </div>
                                                                        <div class="dropdown">
                                                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                                                <i class="bi bi-gear"></i>
                                                                            </button>
                                                                            <ul class="dropdown-menu">
                                                                                <li><h6 class="dropdown-header">Move to Team</h6></li>
                                                                                <% teams.forEach(targetTeam => { %>
                                                                                    <% if (targetTeam.teamNumber !== team.teamNumber) { %>
                                                                                        <li>
                                                                                            <a class="dropdown-item move-player-btn" href="#" 
                                                                                               data-assignment-id="<%= assignment.id %>"
                                                                                               data-target-team="<%= targetTeam.teamNumber %>"
                                                                                               data-player-name="<%= assignment.player.firstName %> <%= assignment.player.lastName %>">
                                                                                                <i class="bi bi-arrow-right"></i> <%= targetTeam.teamName %>
                                                                                            </a>
                                                                                        </li>
                                                                                    <% } %>
                                                                                <% }) %>
                                                                                <li><hr class="dropdown-divider"></li>
                                                                                <li>
                                                                                    <a class="dropdown-item unassign-player-btn" href="#"
                                                                                       data-assignment-id="<%= assignment.id %>"
                                                                                       data-player-name="<%= assignment.player.firstName %> <%= assignment.player.lastName %>">
                                                                                        <i class="bi bi-dash-circle text-warning"></i> Unassign from Team
                                                                                    </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a class="dropdown-item remove-player-btn text-danger" href="#"
                                                                                       data-assignment-id="<%= assignment.id %>"
                                                                                       data-player-name="<%= assignment.player.firstName %> <%= assignment.player.lastName %>">
                                                                                        <i class="bi bi-trash"></i> Remove from Carnival
                                                                                    </a>
                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                    <% if (assignment.notes) { %>
                                                                        <div class="mt-1">
                                                                            <small class="text-muted"><i class="bi bi-chat-text"></i> <%= assignment.notes %></small>
                                                                        </div>
                                                                    <% } %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>

                            <!-- Unassigned Players Section -->
                            <% if (unassignedPlayers.length > 0) { %>
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <div class="card border-warning">
                                            <div class="card-header bg-warning text-dark">
                                                <h6 class="mb-0">
                                                    <i class="bi bi-exclamation-triangle"></i> Unassigned Players
                                                    <span class="badge bg-dark ms-2"><%= unassignedPlayers.length %> players</span>
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <p class="small text-muted mb-3">These players are registered for the carnival but not assigned to a specific team. Use the dropdown menu to assign them to a team.</p>
                                                <div class="row">
                                                    <% unassignedPlayers.forEach(assignment => { %>
                                                        <div class="col-md-6 col-lg-4 mb-2">
                                                            <div class="player-card" data-assignment-id="<%= assignment.id %>" draggable="true">
                                                                <div class="card">
                                                                    <div class="card-body p-2">
                                                                        <div class="d-flex justify-content-between align-items-start">
                                                                            <div class="flex-grow-1">
                                                                                <h6 class="mb-1 text-truncate"><%= assignment.player.firstName %> <%= assignment.player.lastName %></h6>
                                                                                <div class="d-flex align-items-center">
                                                                                    <% if (assignment.player.getAge && assignment.player.getAge()) { %>
                                                                                        <small class="text-muted me-2">Age: <%= assignment.player.getAge() %></small>
                                                                                    <% } %>
                                                                                    <% if (assignment.player.isMastersEligible && assignment.player.isMastersEligible()) { %>
                                                                                        <span class="badge bg-primary">Masters</span>
                                                                                    <% } else { %>
                                                                                        <span class="badge bg-warning text-dark">Under 35</span>
                                                                                    <% } %>
                                                                                </div>
                                                                            </div>
                                                                            <div class="dropdown">
                                                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                                                    <i class="bi bi-gear"></i>
                                                                                </button>
                                                                                <ul class="dropdown-menu">
                                                                                    <li><h6 class="dropdown-header">Assign to Team</h6></li>
                                                                                    <% teams.forEach(targetTeam => { %>
                                                                                        <li>
                                                                                            <a class="dropdown-item move-player-btn" href="#" 
                                                                                               data-assignment-id="<%= assignment.id %>"
                                                                                               data-target-team="<%= targetTeam.teamNumber %>"
                                                                                               data-player-name="<%= assignment.player.firstName %> <%= assignment.player.lastName %>">
                                                                                                <i class="bi bi-arrow-right"></i> <%= targetTeam.teamName %>
                                                                                            </a>
                                                                                        </li>
                                                                                    <% }) %>
                                                                                    <li><hr class="dropdown-divider"></li>
                                                                                    <li>
                                                                                        <a class="dropdown-item remove-player-btn text-danger" href="#"
                                                                                           data-assignment-id="<%= assignment.id %>"
                                                                                           data-player-name="<%= assignment.player.firstName %> <%= assignment.player.lastName %>">
                                                                                            <i class="bi bi-trash"></i> Remove from Carnival
                                                                                        </a>
                                                                                    </li>
                                                                                </ul>
                                                                            </div>
                                                                        </div>
                                                                        <% if (assignment.notes) { %>
                                                                            <div class="mt-1">
                                                                                <small class="text-muted"><i class="bi bi-chat-text"></i> <%= assignment.notes %></small>
                                                                            </div>
                                                                        <% } %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <!-- Single Team Display (Original) -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-people"></i> Players Going to Carnival (<%= assignedPlayers.length %>)</h5>
                        <% if (availablePlayers.length > 0) { %>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addPlayersModal">
                                <i class="bi bi-plus-circle"></i> Add More Players
                            </button>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (assignedPlayers.length === 0) { %>
                            <div class="text-center py-4">
                                <div class="mb-3">
                                    <i class="bi bi-person-plus text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <h5 class="text-muted">No Players Selected Yet</h5>
                                <p class="text-muted mb-4">Add players from your club who will be attending this carnival.</p>
                                <% if (availablePlayers.length > 0) { %>
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPlayersModal">
                                        <i class="bi bi-plus-circle"></i> Add First Player
                                    </button>
                                <% } else { %>
                                    <p class="text-muted">No players available to add. Make sure your club has registered players.</p>
                                    <a href="/clubs/<%= registration.participatingClub.id %>/players" class="btn btn-outline-primary">
                                        <i class="bi bi-plus-circle"></i> Manage Club Players
                                    </a>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="row">
                                <% assignedPlayers.forEach(assignment => { %>
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h6 class="mb-1"><%= assignment.clubPlayer.firstName %> <%= assignment.clubPlayer.lastName %></h6>
                                                    <button type="button" class="btn btn-sm btn-outline-danger remove-player-btn"
                                                            data-assignment-id="<%= assignment.id %>"
                                                            data-player-name="<%= assignment.clubPlayer.firstName %> <%= assignment.clubPlayer.lastName %>"
                                                            title="Remove player">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                                <small class="text-muted d-block mb-2"><%= assignment.clubPlayer.email %></small>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <% if (assignment.clubPlayer.getAge()) { %>
                                                            <small class="text-muted">Age: <%= assignment.clubPlayer.getAge() %></small>
                                                        <% } %>
                                                    </div>
                                                    <div>
                                                        <% if (assignment.clubPlayer.isMastersEligible()) { %>
                                                            <span class="badge bg-primary">Masters</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning text-dark">Under 35</span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% if (assignment.notes) { %>
                                                    <div class="mt-2">
                                                        <small class="text-muted"><i class="bi bi-chat-text"></i> <%= assignment.notes %></small>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Summary Stats -->
    <% if (assignedPlayers.length > 0) { %>
        <div class="row">
            <div class="col-md-4">
                <div class="card border-0 bg-primary text-white">
                    <div class="card-body text-center">
                        <div class="display-6 fw-bold"><%= assignedPlayers.length %></div>
                        <small>Total Players</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 bg-light text-white">
                    <div class="card-body text-center">
                        <div class="display-6 fw-bold"><%= assignedPlayers.filter(p => p.clubPlayer.isMastersEligible()).length %></div>
                        <small>Masters Eligible</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 bg-info text-dark">
                    <div class="card-body text-center">
                        <div class="display-6 fw-bold"><%= availablePlayers.length %></div>
                        <small>Available to Add</small>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- Add Players Modal -->
<% if (availablePlayers.length > 0) { %>
    <div class="modal fade" id="addPlayersModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Players to Carnival</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/carnivals/<%= carnival.id %>/register/players" id="addPlayersForm">
                    <div class="modal-body">
                        <% if (isMultiTeam) { %>
                            <div class="mb-3">
                                <label for="teamAssignment" class="form-label">Assign New Players To:</label>
                                <select class="form-select" id="teamAssignment" name="teamNumber">
                                    <option value="">Unassigned (assign later)</option>
                                    <% teams.forEach((team, index) => { %>
                                        <option value="<%= index + 1 %>">
                                            <%= team.name %> (<%= team.players.length %> players)
                                        </option>
                                    <% }); %>
                                </select>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> 
                                    You can change team assignments later using the dropdowns below each player.
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0">Available Players (<%= availablePlayers.length %>)</h6>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-outline-primary" onclick="selectAllModal()">
                                        <i class="bi bi-check-square"></i> All
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" onclick="selectNoneModal()">
                                        <i class="bi bi-square"></i> None
                                    </button>
                                </div>
                            </div>
                            
                            <div class="row">
                                <% availablePlayers.forEach(player => { %>
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check p-3 border rounded">
                                            <input class="form-check-input modal-player-checkbox" type="checkbox" 
                                                   name="playerIds" value="<%= player.id %>" id="modalPlayer<%= player.id %>">
                                            <label class="form-check-label w-100" for="modalPlayer<%= player.id %>">
                                                <div>
                                                    <strong><%= player.firstName %> <%= player.lastName %></strong>
                                                    <br>
                                                    <small class="text-muted"><%= player.email %></small>
                                                    <br>
                                                    <% if (player.getAge()) { %>
                                                        <small class="text-muted">Age: <%= player.getAge() %></small>
                                                    <% } %>
                                                    <% if (player.isMastersEligible()) { %>
                                                        <span class="badge bg-light ms-2">Masters</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning text-dark ms-2">Under 35</span>
                                                    <% } %>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="modalSubmitBtn" disabled>
                            <i class="bi bi-plus-circle"></i> Add Selected Players
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %>

<script type="module" src="/js/carnival-my-club-players.js"></script>