<div class="container py-4" data-page-id="carnivals-edit">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Carnival
                    </h4>
                </div>
                <div class="card-body p-4">
                    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error => { %>
                                <p class="mb-0"><%= error.msg %></p>
                            <% }) %>
                        </div>
                    <% } %>

                    <form method="POST" action="/carnivals/<%= carnival.id %>/edit" 
                          data-mysideline-carnival-url="<%= process.env.MYSIDELINE_EVENT_URL || 'https://www.mysideline.com/register/' %>"
                          enctype="multipart/form-data" class="needs-validation" novalidate>
                        <input type="hidden" name="_token" value="<%= csrfToken %>">
                        <!-- Basic Information -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">
                                Basic Information
                                <button type="button" class="btn btn-link btn-sm p-0 align-baseline ms-2 help-trigger" data-help-key="basic-info" data-help-modal="help-carnival-edit" aria-label="Help: Basic Information">
                                    <i class="bi bi-question-circle text-primary"></i>
                                </button>
                            </h5>
                            
                            <div class="mb-3">
                                <label for="title" class="form-label">Carnival Title *</label>
                                <input type="text" class="form-control" id="title" name="title"  
                                       value="<%= carnival.title %>" required>
                                <div class="invalid-feedback">Please provide a carnival title.</div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="date" class="form-label">
                                        <span id="dateLabel">Date *</span>
                                    </label>
                                    <input type="date" class="form-control" id="date" name="date" 
                                           value="<%= carnival.date ? carnival.date.toISOString().split('T')[0] : '' %>" required>
                                    <div class="invalid-feedback">Please select a date.</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div id="endDateContainer" data-has-end-date="<%= carnival.endDate ? 'true' : 'false' %>">
                                        <label for="endDate" class="form-label">End Date</label>
                                        <input type="date" class="form-control" id="endDate" name="endDate" 
                                               value="<%= carnival.endDate ? carnival.endDate.toISOString().split('T')[0] : '' %>">
                                        <div class="invalid-feedback">End date must be after start date.</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isMultiDay" name="isMultiDay" 
                                               <%= carnival.endDate ? 'checked' : '' %>>
                                        <label class="form-check-label" for="isMultiDay">
                                            Multi-day carnival
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="state" class="form-label">State *</label>
                                    <select class="form-select" id="state" name="state" required>
                                        <option value="">Select State</option>
                                        <% states.forEach(state => { %>
                                            <option value="<%= state %>" <%= carnival.state === state ? 'selected' : '' %>>
                                                <%= state %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <div class="invalid-feedback">Please select a state.</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="locationAddress" class="form-label">Location Address *</label>
                                <textarea class="form-control" id="locationAddress" name="locationAddress" rows="2" required><%= carnival.locationAddress %></textarea>
                                <div class="invalid-feedback">Please provide the location address.</div>
                            </div>

                            <!-- MySideline-Compatible Address Fields -->
                            <div class="mb-4">
                                <h6 class="text-secondary mb-3">
                                    <i class="bi bi-geo-alt"></i> Detailed Location Information
                                    <small class="text-muted">(Optional - for better mapping and MySideline compatibility)</small>
                                </h6>
                                
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="venueName" class="form-label">Venue Name</label>
                                        <input type="text" class="form-control" id="venueName" name="venueName" 
                                               value="<%= carnival.venueName || '' %>"
                                               placeholder="e.g., ANZ Stadium, Parramatta Sports Complex">
                                        <div class="form-text">Name of the venue or facility hosting the carnival</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="locationAddressLine1" class="form-label">Address Line 1</label>
                                        <input type="text" class="form-control" id="locationAddressLine1" name="locationAddressLine1" 
                                               value="<%= carnival.locationAddressLine1 || '' %>"
                                               placeholder="e.g., 123 Main Street">
                                        <div class="form-text">Street address or venue address</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="locationAddressLine2" class="form-label">Address Line 2</label>
                                        <input type="text" class="form-control" id="locationAddressLine2" name="locationAddressLine2" 
                                               value="<%= carnival.locationAddressLine2 || '' %>"
                                               placeholder="e.g., Suite 456, Building B">
                                        <div class="form-text">Additional address information (optional)</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="locationSuburb" class="form-label">Suburb/City</label>
                                        <input type="text" class="form-control" id="locationSuburb" name="locationSuburb" 
                                               value="<%= carnival.locationSuburb || '' %>"
                                               placeholder="e.g., Parramatta">
                                        <div class="form-text">The suburb or city where the carnival is held</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="locationPostcode" class="form-label">Postcode</label>
                                        <input type="text" class="form-control" id="locationPostcode" name="locationPostcode" 
                                               value="<%= carnival.locationPostcode || '' %>"
                                               placeholder="e.g., 2150" maxlength="10">
                                        <div class="form-text">Australian postcode</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="locationLatitude" class="form-label">Latitude</label>
                                        <input type="number" class="form-control" id="locationLatitude" name="locationLatitude" 
                                               value="<%= carnival.locationLatitude || '' %>"
                                               step="0.00000001" min="-90" max="90"
                                               placeholder="e.g., -33.8568">
                                        <div class="form-text">GPS latitude coordinate (decimal degrees)</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="locationLongitude" class="form-label">Longitude</label>
                                        <input type="number" class="form-control" id="locationLongitude" name="locationLongitude" 
                                               value="<%= carnival.locationLongitude || '' %>"
                                               step="0.00000001" min="-180" max="180"
                                               placeholder="e.g., 151.2153">
                                        <div class="form-text">GPS longitude coordinate (decimal degrees)</div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="locationCountry" class="form-label">Country</label>
                                        <input type="text" class="form-control" id="locationCountry" name="locationCountry" 
                                               value="<%= carnival.locationCountry || 'Australia' %>"
                                               placeholder="Australia">
                                        <div class="form-text">Country where the carnival is held</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">&nbsp;</label>
                                        <div class="d-flex align-items-center">
                                            <button type="button" class="btn btn-outline-info btn-sm" id="getLocationBtn">
                                                <i class="bi bi-geo"></i> Get GPS from Address
                                            </button>
                                            <small class="text-muted ms-2">Auto-fill coordinates from the main address</small>
                                        </div>
                                        <div class="form-text">&nbsp;</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Organiser Contact Information</h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="organiserContactName" class="form-label">Contact Name *</label>
                                    <input type="text" class="form-control" id="organiserContactName" name="organiserContactName" 
                                           value="<%= carnival.organiserContactName %>" required>
                                    <div class="invalid-feedback">Please provide a contact name.</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="organiserContactPhone" class="form-label">Contact Phone *</label>
                                    <input type="tel" class="form-control" id="organiserContactPhone" name="organiserContactPhone" 
                                           value="<%= carnival.organiserContactPhone %>" required>
                                    <div class="invalid-feedback">Please provide a contact phone number.</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="organiserContactEmail" class="form-label">Contact Email *</label>
                                <input type="email" class="form-control" id="organiserContactEmail" name="organiserContactEmail" 
                                       value="<%= carnival.organiserContactEmail %>" required>
                                <div class="invalid-feedback">Please provide a valid contact email.</div>
                            </div>
                        </div>

                        <!-- Additional Information -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Additional Information</h5>
                           
                            <div class="mb-3">
                                <label for="callForVolunteers" class="form-label">Call for Volunteers</label>
                                <textarea class="form-control" id="callForVolunteers" name="callForVolunteers" rows="2" 
                                          placeholder="Volunteer opportunities, requirements, contact details"><%= carnival.callForVolunteers || '' %></textarea>
                            </div>
                        </div>

                        <!-- MySideline Integration -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-link-45deg"></i> MySideline Integration
                                <button type="button" class="btn btn-link btn-sm p-0 align-baseline ms-2 help-trigger" data-help-key="mysideline" data-help-modal="help-carnival-edit" aria-label="Help: MySideline Integration">
                                    <i class="bi bi-question-circle text-primary"></i>
                                </button>
                            </h5>
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>MySideline Integration:</strong> Connect your carnival with MySideline for official player registrations.
                                Enter the MySideline carnival ID to automatically generate the registration link.
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="mySidelineId" class="form-label">
                                        <i class="bi bi-hash"></i> MySideline Carnival ID
                                    </label>
                                    <input type="text" class="form-control" id="mySidelineId" name="mySidelineId" 
                                           value="<%= carnival.mySidelineId || '' %>"
                                           placeholder="e.g., 12345">
                                    <div class="form-text">
                                        The numeric ID from your MySideline carnival registration page.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="registrationLink" class="form-label">
                                        <i class="bi bi-box-arrow-up-right"></i> Registration Link
                                    </label>
                                    <div class="input-group">
                                        <input type="url" class="form-control" id="registrationLink" name="registrationLink" 
                                               value="<%= carnival.registrationLink || '' %>"
                                               placeholder="https://mysideline.com/register">
                                        <button type="button" class="btn btn-outline-secondary" id="testLinkBtn" 
                                                style="display: none;" title="Test registration link">
                                            <i class="bi bi-arrow-up-right-square"></i>
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        <span id="linkStatus" class="text-muted">
                                            Player registration link - will auto-update when MySideline ID is entered
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            
                        </div>

                        <!-- Registration Management -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Registration Management</h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="maxTeams" class="form-label">Maximum Teams</label>
                                    <input type="number" class="form-control" id="maxTeams" name="maxTeams" 
                                           value="<%= carnival.maxTeams || '' %>" min="1" max="100"
                                           placeholder="e.g., 16">
                                    <div class="form-text">Leave blank for unlimited registrations</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="registrationDeadline" class="form-label">Registration Deadline</label>
                                    <input type="datetime-local" class="form-control" id="registrationDeadline" name="registrationDeadline" 
                                           value="<%= carnival.registrationDeadline ? new Date(carnival.registrationDeadline).toISOString().slice(0, 16) : '' %>">
                                    <div class="form-text">Optional deadline for team registrations</div>
                                </div>
                            </div>
                            
                            <!-- Fee Structure -->
                            <div class="row mb-3">                                 
                                <div class="col-12">
                                    <h6 class="text-secondary mb-3">
                                        <i class="bi bi-currency-dollar"></i> Fee Structure
                                    </h6>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="teamRegistrationFee" class="form-label">Team Registration Fee</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="teamRegistrationFee" name="teamRegistrationFee" 
                                        value="<%= carnival.teamRegistrationFee || '' %>" 
                                        step="0.01" min="0" placeholder="0.00">
                                    </div>
                                    <div class="form-text">Fee charged per team registration</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="perPlayerFee" class="form-label">Per-Player Fee</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="perPlayerFee" name="perPlayerFee" 
                                        value="<%= carnival.perPlayerFee || '' %>" 
                                        step="0.01" min="0" placeholder="0.00">
                                    </div>
                                    <div class="form-text">Fee charged per registered player</div>
                                </div>
                                <div class="mb-3">
                                    <label for="feesDescription" class="form-label">Fees Description</label>
                                    <textarea class="form-control" id="feesDescription" name="feesDescription" rows="2" 
                                                placeholder="Entry fees, payment methods, etc."><%= carnival.feesDescription || '' %></textarea>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isRegistrationOpen" name="isRegistrationOpen" 
                                               <%= carnival.isRegistrationOpen ? 'checked' : '' %>>
                                        <label class="form-check-label" for="isRegistrationOpen">
                                            Registration Currently Open
                                        </label>
                                        <div class="form-text">Uncheck to temporarily close registrations</div>
                                    </div>
                                </div>
                                <% if (carnival.currentRegistrations > 0) { %>
                                <div class="col-md-6 mb-3">
                                    <div class="alert alert-info mb-0">
                                        <i class="bi bi-info-circle"></i>
                                        <strong>Current Team Registrations:</strong> <%= carnival.currentRegistrations %>
                                        <% if (carnival.maxTeams) { %> / <%= carnival.maxTeams %><% } %>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- organiser Notes -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">organiser Notes</h5>
                            
                            <div class="mb-3">
                                <label for="adminNotes" class="form-label">Private Notes</label>
                                <textarea class="form-control" id="adminNotes" name="adminNotes" rows="3" 
                                          placeholder="Private notes only visible to you and other organisers"><%= carnival.adminNotes || '' %></textarea>
                                <div class="form-text">These notes are only visible to carnival organisers and primary delegates</div>
                            </div>
                        </div>

                        <!-- Social Media Links -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Social Media Links</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="facebook" class="form-label">
                                        <i class="bi bi-facebook label-facebook"></i> Facebook
                                    </label>
                                    <input type="url" class="form-control" id="facebook" name="socialMediaFacebook" 
                                           value="<%= carnival.socialMediaFacebook || '' %>"
                                           placeholder="https://facebook.com/yourpage">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="instagram" class="form-label">
                                        <i class="bi bi-instagram label-instagram"></i> Instagram
                                    </label>
                                    <input type="url" class="form-control" id="instagram" name="socialMediaInstagram" 
                                           value="<%= carnival.socialMediaInstagram || '' %>"
                                           placeholder="https://instagram.com/yourpage">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="twitter" class="form-label">
                                        <i class="bi bi-twitter-x label-twitter-x"></i> X (Twitter)                                    </label>
                                    <input type="url" class="form-control" id="twitter" name="socialMediaTwitter" 
                                           value="<%= carnival.socialMediaTwitter || '' %>"
                                           placeholder="https://x.com/yourpage">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="website" class="form-label">
                                        <i class="bi bi-globe text-success"></i> Website
                                    </label>
                                    <input type="url" class="form-control" id="website" name="socialMediaWebsite" 
                                           value="<%= carnival.socialMediaWebsite || '' %>"
                                           placeholder="https://yourwebsite.com">
                                </div>
                            </div>
                        </div>

                        <!-- File Uploads -->
                        <div class="mb-4">
                            <h5 class="text-primary mb-3">Update Images & Documents</h5>
                            <p class="text-muted mb-3">Upload new files to replace existing ones (optional)</p>
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <%- include('../partials/_imageUploader', {
                                        fieldName: 'logo',
                                        label: 'Club Logo',
                                        allowedTypes: ['.jpg', '.jpeg', '.png', '.svg'],
                                        maxSize: 10,
                                        multiple: false,
                                        required: false,
                                        helpText: 'Recommended: 512x512px for best display',
                                        existingFile: carnival.clubLogoURL ? { url: carnival.clubLogoURL, name: 'Current Logo' } : null
                                    }) %>
                                </div>                                
                                <div class="col-md-4 mb-3">
                                    <%- include('../partials/_imageUploader', {
                                        fieldName: 'promotionalImage',
                                        label: 'Promotional Image',
                                        allowedTypes: ['.jpg', '.jpeg', '.png'],
                                        maxSize: 10,
                                        multiple: false,
                                        required: false,
                                        helpText: 'Recommended: 1200x630px or larger',
                                        existingFile: carnival.promotionalImageURL ? { url: carnival.promotionalImageURL, name: 'Current Image' } : null
                                    }) %>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <%- include('../partials/_documentUploader', {
                                        fieldName: 'drawDocument',
                                        uploadText: 'Select draw file to upload',
                                        maxFileSize: 'Max 10MB',
                                        acceptedFormats: 'PDF/DOCX/XLSX/JPG/PNG',
                                        helpText: 'Upload the carnival draw document or image',
                                        acceptAttribute: '.pdf,.doc,.docx,.jpg,.jpeg,.png,.xls,.xlsx',
                                        multiple: false,
                                        existingFiles: carnival.drawFileURL ? [{name: 'Current Draw File', url: carnival.drawFileURL}] : []
                                    }) %>
                                </div>
                            </div>

                            <!-- Draw Information -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="drawTitle" class="form-label">Draw Title</label>
                                    <input type="text" class="form-control" id="drawTitle" name="drawTitle" 
                                           value="<%= carnival.drawTitle || '' %>"
                                           placeholder="e.g., Pool Draw, Finals Draw">
                                    <div class="form-text">Optional title for the draw sheet</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="drawDescription" class="form-label">Draw Description</label>
                                    <textarea class="form-control" id="drawDescription" name="drawDescription" rows="2" 
                                              placeholder="Brief description of the draw format or details"><%= carnival.drawDescription || '' %></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-tertiary">
                                <i class="bi bi-check-circle"></i> Update Carnival
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module" src="/js/carnival-edit.js"></script>
<!-- Help modal partial for carnival edit page -->
<%- include('../partials/help-modal.ejs', { modalId: 'help-carnival-edit' }) %>