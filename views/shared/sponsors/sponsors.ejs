<div class="container mt-4" data-page-id="<%= entityType %>s-sponsors" data-<%= entityType %>-id="<%= entityData.id %>">
    <div class="row">
        <div class="col-md-12">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="bi bi-people-fill text-primary me-2"></i>
                        <%= entityType === 'club' ? 'Club' : 'Carnival' %> Sponsors
                    </h2>
                    <p class="text-muted mb-0">
                        Manage sponsors for <%= entityData.clubName || entityData.carnivalName %>
                    </p>
                </div>
                <div>
                    <a href="<%= entityType === 'club' ? '/clubs/' + entityData.id + '/edit' : '/carnivals/' + entityData.id + '/edit' %>" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-1"></i>Back to <%= entityType === 'club' ? 'Club' : 'Carnival' %> Management
                    </a>
                    <a href="<%= routePrefix %>/sponsors/add" class="btn btn-primary">
                        <i class="bi bi-plus me-1"></i>Add Sponsor
                    </a>
                </div>
            </div>

            <!-- Sponsors Grid -->
            <% if (sponsors && sponsors.length > 0) { %>
                <div class="row g-4">
                    <% sponsors.forEach((sponsor, index) => { %>
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm">
                                <!-- Sponsor Logo -->
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
                                    <% if (sponsor.logoUrl) { %>
                                        <img src="<%= sponsor.logoUrl.startsWith('/') ? sponsor.logoUrl : '/' + sponsor.logoUrl %>"
                                            alt="<%= sponsor.sponsorName %> Logo"
                                            class="img-fluid"
                                            style="max-height: 120px; max-width: 100%; object-fit: contain;">
                                    <% } else { %>
                                        <img src="/icons/missing.svg"
                                            alt="<%= sponsor.sponsorName %> - No Logo"
                                            class="img-fluid"
                                            style="max-height: 120px; max-width: 100%; object-fit: contain;">
                                    <% } %>
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <!-- Sponsorship Level Badge -->
                                    <% if (sponsor.sponsorshipLevel) { %>
                                        <div class="mb-2">
                                            <span class="sponsorship-badge <%= sponsor.sponsorshipLevel.toLowerCase().replace(/\s+/g, '-') %>">
                                                <%= sponsor.sponsorshipLevel %>
                                            </span>
                                        </div>
                                    <% } %>

                                    <div class="mb-auto">
                                        <h5 class="card-title">
                                            <%= sponsor.sponsorName %>
                                        </h5>

                                        <% if (sponsor.businessType) { %>
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-building-gear me-1"></i>
                                                <%= sponsor.businessType %>
                                            </p>
                                        <% } %>

                                        <% if (sponsor.location) { %>
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                <%= sponsor.location %><% if (sponsor.state) { %>, <%= sponsor.state %><% } %>
                                            </p>
                                        <% } %>

                                        <% if (sponsor.description) { %>
                                            <p class="card-text small">
                                                <%= sponsor.description.length > 100 ? sponsor.description.substring(0, 100) + '...' : sponsor.description %>
                                            </p>
                                        <% } %>
                                    </div>

                                    <!-- Action Buttons -->
                                    <div class="mt-auto">
                                        <div class="btn-group w-100" role="group">
                                            <a href="<%= routePrefix %>/sponsors/<%= sponsor.id %>" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye me-1"></i>View
                                            </a>
                                            <a href="<%= routePrefix %>/sponsors/<%= sponsor.id %>/edit" class="btn btn-outline-tertiary btn-sm">
                                                <i class="bi bi-pencil-square me-1"></i>Edit
                                            </a>
                                            <% if (sponsor.website) { %>
                                                <a href="<%= sponsor.website %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-box-arrow-up-right me-1"></i>Website
                                                </a>
                                            <% } %>
                                            <form method="POST" action="<%= routePrefix %>/sponsors/<%= sponsor.id %>/remove" class="d-inline">
                                                <button data-confirm="Remove <%= sponsor.sponsorName %> from your <%= entityType %>?"
                                                        type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-x-circle"></i> Remove
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-people-fill bi-5x text-muted"></i>
                    </div>
                    <h4 class="text-muted">No Sponsors Yet</h4>
                    <p class="text-muted mb-4">
                        Your <%= entityType %> doesn't have any sponsors linked yet. Add sponsors to showcase your partnerships and support network.
                    </p>
                    <a href="<%= routePrefix %>/sponsors/add" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus me-2"></i>Add Your First Sponsor
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Include SortableJS for drag and drop functionality -->
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<!-- Include common utilities for confirmation dialogs -->
<script type="module" src="/js/common-utils.js"></script>
<!-- Include sponsors functionality -->
<script type="module" src="/js/<%= entityType %>-sponsors.js"></script>