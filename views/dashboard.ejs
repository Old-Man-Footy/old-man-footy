<% layout('layout') -%>

<div class="container py-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Welcome, <%= user.firstName %>!</h1>
                    <p class="text-muted mb-0">
                        <%= user.clubId.clubName %> 
                        <% if (user.isPrimaryDelegate) { %>
                            <span class="badge bg-primary">Primary Delegate</span>
                        <% } %>
                    </p>
                </div>
                <a href="/carnivals/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Carnival
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4 dashboard-stats">
        <div class="col-md-4 mb-3">
            <div class="card text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event display-4 mb-2"></i>
                    <h3><%= carnivals.length %></h3>
                    <p class="mb-0">Your Carnivals</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check display-4 mb-2"></i>
                    <h3><%= carnivals.filter(c => c.date >= new Date()).length %></h3>
                    <p class="mb-0">Upcoming Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 mb-2"></i>
                    <h3><%= user.clubId.clubName %></h3>
                    <p class="mb-0">Your Club</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Your Carnivals -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h4 mb-0">Your Carnivals</h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary btn-sm" onclick="showAll()">All</button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="showUpcoming()">Upcoming</button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="showPast()">Past</button>
                </div>
            </div>

            <% if (carnivals && carnivals.length > 0) { %>
                <div class="row" id="carnivalsGrid">
                    <% carnivals.forEach(carnival => { %>
                        <div class="col-lg-6 mb-4 carnival-item" data-date="<%= carnival.date.getTime() %>">
                            <div class="card carnival-card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0"><%= carnival.title %></h5>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/carnivals/<%= carnival._id %>">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a></li>
                                                <li><a class="dropdown-item" href="/carnivals/<%= carnival._id %>/edit">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form method="POST" action="/carnivals/<%= carnival._id %>/delete" 
                                                          onsubmit="return NRLMasters.confirmDelete('Are you sure you want to delete this carnival?')" 
                                                          class="d-inline">
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> 
                                            <span data-date="<%= carnival.date.toISOString() %>">
                                                <%= carnival.date.toLocaleDateString('en-AU') %>
                                            </span>
                                        </small>
                                    </div>

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> 
                                            <%= carnival.locationAddress %>
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <span class="badge bg-secondary"><%= carnival.state %></span>
                                        <% if (carnival.date >= new Date()) { %>
                                            <span class="badge bg-success">Upcoming</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Past</span>
                                        <% } %>
                                    </div>

                                    <p class="card-text">
                                        <%= carnival.scheduleDetails.length > 100 ? 
                                            carnival.scheduleDetails.substring(0, 100) + '...' : 
                                            carnival.scheduleDetails %>
                                    </p>

                                    <div class="d-flex gap-2 mt-auto">
                                        <a href="/carnivals/<%= carnival._id %>" class="btn btn-outline-primary btn-sm">
                                            View Details
                                        </a>
                                        <a href="/carnivals/<%= carnival._id %>/edit" class="btn btn-outline-secondary btn-sm">
                                            Edit
                                        </a>
                                        <% if (carnival.registrationLink) { %>
                                            <a href="<%= carnival.registrationLink %>" class="btn btn-outline-success btn-sm" target="_blank">
                                                Registration
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                    <h4 class="text-muted">No carnivals yet</h4>
                    <p class="text-muted mb-4">Get started by adding your first carnival event.</p>
                    <a href="/carnivals/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Your First Carnival
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Primary Delegate Section -->
    <% if (user.isPrimaryDelegate) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-check"></i> Primary Delegate Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">As the primary delegate for <%= user.clubId.clubName %>, you have additional privileges:</p>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-plus-fill text-primary me-2"></i>
                                    <span>Invite additional club delegates</span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-gear-fill text-primary me-2"></i>
                                    <span>Manage club settings</span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary" onclick="inviteDelegate()">
                            <i class="bi bi-envelope"></i> Invite New Delegate
                        </button>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<script>
// Dashboard filtering functionality
function showAll() {
    document.querySelectorAll('.carnival-item').forEach(item => {
        item.style.display = 'block';
    });
}

function showUpcoming() {
    const now = new Date().getTime();
    document.querySelectorAll('.carnival-item').forEach(item => {
        const itemDate = parseInt(item.dataset.date);
        item.style.display = itemDate >= now ? 'block' : 'none';
    });
}

function showPast() {
    const now = new Date().getTime();
    document.querySelectorAll('.carnival-item').forEach(item => {
        const itemDate = parseInt(item.dataset.date);
        item.style.display = itemDate < now ? 'block' : 'none';
    });
}

function inviteDelegate() {
    // This would open a modal or redirect to invite page
    NRLMasters.showToast('Invitation feature coming soon!', 'info');
}
</script>