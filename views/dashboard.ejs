<div class="container py-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Welcome, <%= user.firstName %>!</h1>
                    <p class="text-muted mb-0">
                        <% if (user.isAdmin) { %>
                            <span class="badge bg-danger">Administrator</span>
                        <% } else if (user.clubId && user.clubId.clubName) { %>
                            <%= user.clubId.clubName %> 
                            <% if (user.isPrimaryDelegate) { %>
                                <span class="badge bg-primary">Primary Delegate</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Club Delegate</span>
                            <% } %>
                        <% } else { %>
                            <span class="text-muted">No club association</span>
                        <% } %>
                    </p>
                </div>
                <% if (user.clubId) { %>
                    <a href="/carnivals/new" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Carnival
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- User Guide Card (for Club Delegates) -->
    <% if (!user.isAdmin && user.clubId) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-book text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-question-circle"></i> New to the platform?
                            </h5>
                            <p class="card-text mb-2">
                                Access our comprehensive user guide to learn how to manage your club's carnival participation, 
                                update club information, and navigate all the features available to you.
                            </p>
                            <a href="/user-guide" class="btn btn-primary">
                                <i class="bi bi-book-half"></i> View User Guide
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <!-- User Profile Management Section - Compact Version -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white py-2">
                    <h6 class="mb-0">
                        <i class="bi bi-person-gear"></i> Profile Settings
                    </h6>
                </div>
                <div class="card-body py-3">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Name</small>
                                        <span class="fw-medium"><%= user.firstName %> <%= user.lastName %></span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updateNameModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Email</small>
                                        <span class="fw-medium"><%= user.email %></span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updateEmailModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Phone</small>
                                        <span id="currentPhoneDisplay" class="fw-medium">
                                            <%= user.phoneNumber || 'Not provided' %>
                                        </span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updatePhoneModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-plus text-success me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Member Since</small>
                                    <span class="fw-medium"><%= new Date(user.createdAt).toLocaleDateString('en-AU') %></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Status</small>
                                    <span class="fw-medium">
                                        <% if (user.isActive) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-warning">Inactive</span>
                                        <% } %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4 dashboard-stats">
        <div class="col-md-4 mb-3">
            <div class="card text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event display-4 mb-2"></i>
                    <h3><%= userCarnivals ? userCarnivals.length : 0 %></h3>
                    <p class="mb-0">Your Carnivals</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <a href="/carnivals?upcoming=true" class="text-decoration-none">
                <div class="card text-white dashboard-stat-card clickable-card">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check display-4 mb-2"></i>
                        <h3><%= upcomingCarnivals ? upcomingCarnivals.length : 0 %></h3>
                        <p class="mb-0">Upcoming Events</p>
                        <small class="text-white-50 mt-1 d-block">
                            <i class="bi bi-arrow-right"></i> Click to view all
                        </small>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 mb-2"></i>
                    <% if (user.clubId && user.clubId.clubName) { %>
                        <h3><%= user.clubId.clubName %></h3>
                        <p class="mb-0">Your Club</p>
                    <% } else if (user.isAdmin) { %>
                        <h3>Admin</h3>
                        <p class="mb-0">System Role</p>
                    <% } else { %>
                        <h3>No Club</h3>
                        <p class="mb-0">No Association</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Your Carnivals -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h4 mb-0">Your Carnivals</h2>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary btn-sm" data-filter="all">All</button>
                    <button class="btn btn-outline-secondary btn-sm" data-filter="upcoming">Upcoming</button>
                    <button class="btn btn-outline-secondary btn-sm" data-filter="past">Past</button>
                </div>
            </div>

            <% if (userCarnivals && userCarnivals.length > 0) { %>
                <div class="row" id="carnivalsGrid">
                    <% userCarnivals.forEach(carnival => { %>
                        <div class="col-lg-6 mb-4 carnival-item" data-date="<%= carnival.date.getTime() %>">
                            <div class="card carnival-card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0"><%= carnival.title %></h5>
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a></li>
                                                <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>/edit">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form method="POST" action="/carnivals/<%= carnival.id %>/delete" 
                                                          onsubmit="return oldmanfooty.confirmDelete('Are you sure you want to delete this carnival?')" 
                                                          class="d-inline">
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3"></i> 
                                            <span data-date="<%= carnival.date.toISOString() %>">
                                                <%= carnival.date.toLocaleDateString('en-AU') %>
                                            </span>
                                        </small>
                                    </div>

                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> 
                                            <%= carnival.locationAddress %>
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <span class="badge bg-secondary"><%= carnival.state %></span>
                                        <% if (carnival.date >= new Date()) { %>
                                            <span class="badge bg-success">Upcoming</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Past</span>
                                        <% } %>
                                    </div>

                                    <p class="card-text">
                                        <%= carnival.scheduleDetails.length > 100 ? 
                                            carnival.scheduleDetails.substring(0, 100) + '...' : 
                                            carnival.scheduleDetails %>
                                    </p>

                                    <div class="d-flex gap-2 mt-auto">
                                        <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-primary btn-sm">
                                            View Details
                                        </a>
                                        <a href="/carnivals/<%= carnival.id %>/edit" class="btn btn-outline-secondary btn-sm">
                                            Edit
                                        </a>
                                        <% if (carnival.registrationLink) { %>
                                            <a href="<%= carnival.registrationLink %>" class="btn btn-outline-success btn-sm" target="_blank">
                                                Registration
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-calendar-event display-4 text-muted mb-3"></i>
                    <h4 class="text-muted">Ready to host a Masters carnival?</h4>
                    <p class="text-muted mb-4">
                        Start by creating your carnival details on our platform first.
                        <br>
                        <small>You can then register it officially with the NRL after saving your event.</small>
                    </p>
                    <% if (user.clubId) { %>
                        <a href="/carnivals/new" class="btn btn-success btn-lg">
                            <i class="bi bi-plus-circle"></i> Create Your First Carnival
                        </a>
                    <% } else { %>
                        <div class="alert alert-info d-inline-block">
                            <i class="bi bi-info-circle"></i>
                            <strong>Join a club first:</strong> You need to be associated with a club to create carnivals.
                            <div class="mt-2">
                                <a href="/clubs/manage" class="btn btn-primary btn-sm">
                                    <i class="bi bi-building"></i> Join or Create Club
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Admin Section -->
    <% if (user.isAdmin) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-check"></i> Administrator Dashboard
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">As an administrator, you have full system access and management capabilities:</p>
                        <div class="row">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/dashboard" class="btn btn-outline-danger w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-speedometer2 fs-3 mb-2"></i>
                                    <strong>Admin Dashboard</strong>
                                    <small class="text-muted">System overview and statistics</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/users" class="btn btn-outline-primary w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-people fs-3 mb-2"></i>
                                    <strong>User Management</strong>
                                    <small class="text-muted">Edit users, reset passwords</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/clubs" class="btn btn-outline-success w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-building fs-3 mb-2"></i>
                                    <strong>Club Management</strong>
                                    <small class="text-muted">Manage club details and status</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/carnivals" class="btn btn-outline-info w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-calendar-event fs-3 mb-2"></i>
                                    <strong>Carnival Management</strong>
                                    <small class="text-muted">Edit events and details</small>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Quick Admin Actions:</h6>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="bi bi-check-circle text-success"></i> Reset user passwords</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Activate/deactivate accounts</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Edit all clubs and carnivals</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Generate system reports</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">System Management:</h6>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="bi bi-check-circle text-success"></i> Full database access</li>
                                    <li><i class="bi bi-check-circle text-success"></i> User role management</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Club ownership transfers</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Carnival moderation</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Primary Delegate Section -->
    <% if (user.isPrimaryDelegate && user.clubId && user.clubId.clubName) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-check"></i> Primary Delegate Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">As the primary delegate for <%= user.clubId.clubName %>, you have additional privileges:</p>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-plus-fill text-primary me-2"></i>
                                    <span>Invite additional club delegates</span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-gear-fill text-primary me-2"></i>
                                    <span>Manage club settings</span>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#inviteModal">
                            <i class="bi bi-envelope"></i> Invite New Delegate
                        </button>
                        <% if (eligibleDelegates && eligibleDelegates.length > 0) { %>
                            <button class="btn btn-outline-warning ms-2" data-bs-toggle="modal" data-bs-target="#transferRoleModal">
                                <i class="bi bi-arrow-right-circle"></i> Transfer Primary Role
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Quick Start Checklist for New Users -->
    <% if (user.createdAt && new Date() - new Date(user.createdAt) < 7 * 24 * 60 * 60 * 1000) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> Quick Start Checklist
                        <small class="opacity-75">(New User)</small>
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Complete these steps to get the most out of your account:</p>
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex align-items-center">
                            <input type="checkbox" class="form-check-input me-3" id="step1" <%= clubs && clubs.length > 0 ? 'checked' : '' %>>
                            <label for="step1" class="flex-grow-1">
                                <strong>Register your first club</strong>
                                <small class="d-block text-muted">Add your rugby league club to start managing carnivals</small>
                            </label>
                            <% if (!clubs || clubs.length === 0) { %>
                                <a href="/clubs/manage" class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="bi bi-plus"></i> Add Club
                                </a>
                            <% } %>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <input type="checkbox" class="form-check-input me-3" id="step2" <%= carnivals && carnivals.length > 0 ? 'checked' : '' %>>
                            <label for="step2" class="flex-grow-1">
                                <strong>Create or join your first carnival</strong>
                                <small class="d-block text-muted">Either organize a new carnival or register for an existing one</small>
                            </label>
                            <% if (!carnivals || carnivals.length === 0) { %>
                                <a href="/carnivals" class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="bi bi-search"></i> Browse
                                </a>
                            <% } %>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <input type="checkbox" class="form-check-input me-3" id="step3">
                            <label for="step3" class="flex-grow-1">
                                <strong>Read the user guide</strong>
                                <small class="d-block text-muted">Learn about all features and best practices</small>
                            </label>
                            <a href="/user-guide" class="btn btn-outline-info btn-sm ms-2">
                                <i class="bi bi-book"></i> Guide
                            </a>
                        </div>
                        <div class="list-group-item d-flex align-items-center">
                            <input type="checkbox" class="form-check-input me-3" id="step4">
                            <label for="step4" class="flex-grow-1">
                                <strong>Add sponsors to your club</strong>
                                <small class="d-block text-muted">Showcase your club's supporters and partners</small>
                            </label>
                            <a href="/sponsors" class="btn btn-outline-success btn-sm ms-2">
                                <i class="bi bi-building"></i> Sponsors
                            </a>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-action="dismiss-checklist">
                            <i class="bi bi-x"></i> Dismiss Checklist
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<!-- Invite Delegate Modal -->
<% if (user.isPrimaryDelegate && user.clubId && user.clubId.clubName) { %>
<div class="modal fade" id="inviteModal" tabindex="-1" aria-labelledby="inviteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteModalLabel">
                    <i class="bi bi-person-plus"></i> Invite Club Delegate
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/auth/send-invitation">
                <div class="modal-body">
                    <p class="text-muted mb-4">
                        Invite another person to become a delegate for <%= user.clubId.clubName %>. 
                        They will receive an email with instructions to complete their registration.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="inviteFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="inviteFirstName" name="firstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="inviteLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="inviteLastName" name="lastName" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inviteEmail" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="inviteEmail" name="email" required>
                        <div class="form-text">
                            They will receive an invitation email at this address.
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Note:</strong> The invitation will expire in 7 days. 
                        The new delegate will have the same permissions as you to create and manage carnivals for your club.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Send Invitation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<% } %>

<!-- Transfer Role Modal -->
<% if (user.isPrimaryDelegate && user.clubId && user.clubId.clubName && eligibleDelegates && eligibleDelegates.length > 0) { %>
<div class="modal fade" id="transferRoleModal" tabindex="-1" aria-labelledby="transferRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferRoleModalLabel">
                    <i class="bi bi-arrow-right-circle"></i> Transfer Primary Delegate Role
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/auth/transfer-delegate-role" data-action="transfer-role">
                <div class="modal-body">
                    <p class="text-muted mb-4">
                        Transfer your primary delegate role for <strong><%= user.clubId.clubName %></strong> to another eligible delegate. 
                        <strong>This action cannot be undone.</strong>
                    </p>
                    
                    <div class="mb-3">
                        <label for="newPrimaryUserId" class="form-label">Select New Primary Delegate</label>
                        <select class="form-select" id="newPrimaryUserId" name="newPrimaryUserId" required>
                            <option value="">Choose a delegate...</option>
                            <% eligibleDelegates.forEach(delegate => { %>
                                <option value="<%= delegate.id %>">
                                    <%= delegate.firstName %> <%= delegate.lastName %> (<%= delegate.email %>)
                                </option>
                            <% }) %>
                        </select>
