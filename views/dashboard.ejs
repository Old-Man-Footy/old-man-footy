<div class="container py-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Welcome, <%= user.firstName %>!</h1>
                    <p class="text-muted mb-0">
                        <% if (user.isAdmin) { %>
                            <span class="badge bg-danger">Administrator</span>
                        <% } else if (user.clubId && user.clubId.clubName) { %>
                            <%= user.clubId.clubName %> 
                            <% if (user.isPrimaryDelegate) { %>
                                <span class="badge bg-primary">Primary Delegate</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Club Delegate</span>
                            <% } %>
                        <% } else { %>
                            <span class="text-muted">No club association</span>
                        <% } %>
                    </p>
                </div>
                <% if (user.clubId) { %>
                    <a href="/carnivals/new" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Carnival
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- User Guide Card (for Club Delegates) -->
    <% if (!user.isAdmin && user.clubId) { %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi bi-book text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">
                                <i class="bi bi-question-circle"></i> New to the platform?
                            </h5>
                            <p class="card-text mb-2">
                                Access our comprehensive user guide to learn how to manage your club's carnival participation, 
                                update club information, and navigate all the features available to you.
                            </p>
                            <a href="/user-guide" class="btn btn-primary">
                                <i class="bi bi-book-half"></i> View User Guide
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <!-- User Profile Management Section - Compact Version -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-primary py-2">
                    <h6 class="mb-0">
                        <i class="bi bi-person-gear"></i> Profile Settings
                    </h6>
                </div>
                <div class="card-body py-3">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Name</small>
                                        <span class="fw-medium"><%= user.firstName %> <%= user.lastName %></span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updateNameModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-envelope text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Email</small>
                                        <span class="fw-medium"><%= user.email %></span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updateEmailModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-between w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone text-info me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Phone</small>
                                        <span id="currentPhoneDisplay" class="fw-medium">
                                            <%= user.phoneNumber || 'Not provided' %>
                                        </span>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#updatePhoneModal">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-plus text-success me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Member Since</small>
                                    <span class="fw-medium"><%= new Date(user.createdAt).toLocaleDateString('en-AU') %></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Status</small>
                                    <span class="fw-medium">
                                        <% if (user.isActive) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-warning">Inactive</span>
                                        <% } %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4 dashboard-stats">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event display-4 mb-2"></i>
                    <h3><%= userCarnivals ? userCarnivals.length : 0 %></h3>
                    <p class="mb-0">Your Carnivals</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <% if (user.clubId && user.clubId.clubName) { %>
                <a href="/clubs/manage" class="text-decoration-none">
                    <div class="card dashboard-stat-card clickable-card">
                        <div class="card-body text-center">
                            <% if (user.clubId.logoUrl) { %>
                                <img src="<%= user.clubId.logoUrl %>" alt="<%= user.clubId.clubName %> Logo" 
                                     class="mb-2" style="height: 4rem; width: auto; max-width: 100%; object-fit: contain;">
                            <% } else { %>
                                <i class="bi bi-people display-4 mb-2"></i>
                            <% } %>
                            <h3><%= user.clubId.clubName %></h3>
                            <p class="mb-0">Your Club</p>
                            <small class="text-white-50 mt-1 d-block">
                                <i class="bi bi-arrow-right"></i> Click to manage
                            </small>
                        </div>
                    </div>
                </a>
            <% } else if (user.isAdmin) { %>
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 mb-2"></i>
                        <h3>Admin</h3>
                        <p class="mb-0">System Role</p>
                    </div>
                </div>
            <% } else { %>
                <a href="/clubs/manage" class="text-decoration-none">
                    <div class="card dashboard-stat-card clickable-card">
                        <div class="card-body text-center">
                            <i class="bi bi-people display-4 mb-2"></i>
                            <h3>No Club</h3>
                            <p class="mb-0">No Association</p>
                            <small class="text-white-50 mt-1 d-block">
                                <i class="bi bi-arrow-right"></i> Click to join/create
                            </small>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>

    <!-- Your Carnivals and Club Registrations -->
    <div class="row">
        <div class="col-12">
            <!-- Navigation Tabs -->
            <ul class="nav nav-tabs mb-4" id="carnivalTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="hosted-tab" data-bs-toggle="tab" data-bs-target="#hosted-carnivals" type="button" role="tab" aria-controls="hosted-carnivals" aria-selected="true">
                        <i class="bi bi-calendar-plus"></i> Your Carnivals (<%= userCarnivals ? userCarnivals.length : 0 %>)
                    </button>
                </li>
                <% if (user.clubId) { %>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="attending-tab" data-bs-toggle="tab" data-bs-target="#attending-carnivals" type="button" role="tab" aria-controls="attending-carnivals" aria-selected="false">
                        <i class="bi bi-calendar-check"></i> Club Events (<%= attendingCarnivals ? attendingCarnivals.length : 0 %>)
                    </button>
                </li>
                <% } %>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="carnivalTabContent">
                <!-- Hosted Carnivals Tab -->
                <div class="tab-pane fade show active" id="hosted-carnivals" role="tabpanel" aria-labelledby="hosted-tab">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h5 mb-0">Carnivals you're hosting</h2>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary btn-sm" data-filter="all" data-target="hosted">All</button>
                            <button class="btn btn-outline-secondary btn-sm" data-filter="upcoming" data-target="hosted">Upcoming</button>
                            <button class="btn btn-outline-secondary btn-sm" data-filter="past" data-target="hosted">Past</button>
                        </div>
                    </div>

                    <% if (userCarnivals && userCarnivals.length > 0) { %>
                        <div class="row" id="hostedCarnivalsGrid">
                            <% userCarnivals.forEach(carnival => { %>
                                <div class="col-lg-6 mb-4 carnival-item hosted-carnival" data-date="<%= carnival.date.getTime() %>">
                                    <div class="card carnival-card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <h5 class="card-title mb-0"><%= carnival.title %></h5>
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                                                            type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>">
                                                            <i class="bi bi-eye"></i> View Details
                                                        </a></li>
                                                        <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>/edit">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </a></li>
                                                        <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>/attendees">
                                                            <i class="bi bi-people"></i> Manage Attendees
                                                        </a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="POST" action="/carnivals/<%= carnival.id %>/delete" 
                                                                  onsubmit="return oldmanfooty.confirmDelete('Are you sure you want to delete this carnival?')" 
                                                                  class="d-inline">
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="bi bi-trash"></i> Delete
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar3"></i> 
                                                    <%= carnival.date.toLocaleDateString('en-AU') %>
                                                </small>
                                            </div>

                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-geo-alt"></i> 
                                                    <%= carnival.locationAddress %>
                                                </small>
                                            </div>

                                            <div class="mb-3">
                                                <span class="badge bg-secondary"><%= carnival.state %></span>
                                                <% if (carnival.date >= new Date()) { %>
                                                    <span class="badge bg-success">Upcoming</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Past</span>
                                                <% } %>
                                                <span class="badge bg-primary">Organizer</span>
                                            </div>

                                            <p class="card-text">
                                                <%= carnival.scheduleDetails && carnival.scheduleDetails.length > 100 ? 
                                                    carnival.scheduleDetails.substring(0, 100) + '...' : 
                                                    (carnival.scheduleDetails || 'No description available') %>
                                            </p>

                                            <div class="d-flex gap-2 mt-auto">
                                                <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-primary btn-sm">
                                                    View Details
                                                </a>
                                                <a href="/carnivals/<%= carnival.id %>/edit" class="btn btn-outline-secondary btn-sm">
                                                    Edit
                                                </a>
                                                <a href="/carnivals/<%= carnival.id %>/attendees" class="btn btn-outline-info btn-sm">
                                                    Attendees
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-event display-4 text-muted mb-3"></i>
                            <h4 class="text-muted">Ready to host a Masters carnival?</h4>
                            <p class="text-muted mb-4">
                                Start by creating your carnival details on our platform first.
                                <br>
                                <small>You can then register it officially with the NRL after saving your event.</small>
                            </p>
                            <% if (user.clubId) { %>
                                <a href="/carnivals/new" class="btn btn-success btn-lg">
                                    <i class="bi bi-plus-circle"></i> Create Your First Carnival
                                </a>
                            <% } else { %>
                                <div class="alert alert-info d-inline-block">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Join a club first:</strong> You need to be associated with a club to create carnivals.
                                    <div class="mt-2">
                                        <a href="/clubs/manage" class="btn btn-primary btn-sm">
                                            <i class="bi bi-building"></i> Join or Create Club
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>

                <!-- Attending Carnivals Tab -->
                <% if (user.clubId) { %>
                <div class="tab-pane fade" id="attending-carnivals" role="tabpanel" aria-labelledby="attending-tab">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h5 mb-0">Carnivals <%= user.clubId.clubName %> are registered for</h2>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary btn-sm" data-filter="all" data-target="attending">All</button>
                            <button class="btn btn-outline-secondary btn-sm" data-filter="upcoming" data-target="attending">Upcoming</button>
                            <button class="btn btn-outline-secondary btn-sm" data-filter="past" data-target="attending">Past</button>
                        </div>
                    </div>

                    <% if (attendingCarnivals && attendingCarnivals.length > 0) { %>
                        <div class="row" id="attendingCarnivalsGrid">
                            <% attendingCarnivals.forEach(carnival => { %>
                                <div class="col-lg-6 mb-4 carnival-item attending-carnival" data-date="<%= new Date(carnival.date).getTime() %>">
                                    <div class="card carnival-card h-100 border-info">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                <h5 class="card-title mb-0"><%= carnival.title %></h5>
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                                                            type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="/carnivals/<%= carnival.id %>">
                                                            <i class="bi bi-eye"></i> View Details
                                                        </a></li>
                                                        <% if (new Date(carnival.date) >= new Date() && !carnival.registration.isPaid) { %>
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li>
                                                                <form method="DELETE" action="/carnivals/<%= carnival.id %>/register" 
                                                                      onsubmit="return oldmanfooty.confirmDelete('Are you sure you want to unregister from this carnival?')" 
                                                                      class="d-inline">
                                                                    <button type="submit" class="dropdown-item text-warning">
                                                                        <i class="bi bi-x-circle"></i> Unregister Club
                                                                    </button>
                                                                </form>
                                                            </li>
                                                        <% } %>
                                                    </ul>
                                                </div>
                                            </div>

                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar3"></i> 
                                                    <%= new Date(carnival.date).toLocaleDateString('en-AU') %>
                                                </small>
                                            </div>

                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-geo-alt"></i> 
                                                    <%= carnival.locationAddress %>
                                                </small>
                                            </div>

                                            <% if (carnival.creator) { %>
                                                <div class="mb-2">
                                                    <small class="text-muted">
                                                        <i class="bi bi-person"></i> 
                                                        Organized by <%= carnival.creator.firstName %> <%= carnival.creator.lastName %>
                                                    </small>
                                                </div>
                                            <% } %>

                                            <div class="mb-3">
                                                <span class="badge bg-secondary"><%= carnival.state %></span>
                                                <% if (new Date(carnival.date) >= new Date()) { %>
                                                    <span class="badge bg-success">Upcoming</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Past</span>
                                                <% } %>
                                                <span class="badge bg-info">Attending</span>
                                                <% if (carnival.registration.isPaid) { %>
                                                    <span class="badge bg-success">Paid</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning text-dark">Payment Pending</span>
                                                <% } %>
                                            </div>

                                            <!-- Registration Details -->
                                            <div class="border-top pt-3 mb-3">
                                                <h6 class="text-muted mb-2">Registration Details</h6>
                                                <div class="row text-sm">
                                                    <% if (carnival.registration.playerCount) { %>
                                                        <div class="col-6 mb-1">
                                                            <small><strong>Players:</strong> <%= carnival.registration.playerCount %></small>
                                                        </div>
                                                    <% } %>
                                                    <% if (carnival.registration.teamName) { %>
                                                        <div class="col-6 mb-1">
                                                            <small><strong>Team:</strong> <%= carnival.registration.teamName %></small>
                                                        </div>
                                                    <% } %>
                                                    <div class="col-12 mb-1">
                                                        <small><strong>Registered:</strong> <%= new Date(carnival.registration.registrationDate).toLocaleDateString('en-AU') %></small>
                                                    </div>
                                                </div>
                                            </div>

                                            <p class="card-text">
                                                <%= carnival.scheduleDetails && carnival.scheduleDetails.length > 100 ? 
                                                    carnival.scheduleDetails.substring(0, 100) + '...' : 
                                                    (carnival.scheduleDetails || 'No description available') %>
                                            </p>

                                            <div class="d-flex gap-2 mt-auto">
                                                <a href="/carnivals/<%= carnival.id %>" class="btn btn-outline-primary btn-sm">
                                                    View Details
                                                </a>
                                                <% if (carnival.registrationLink && new Date(carnival.date) >= new Date()) { %>
                                                    <a href="<%= carnival.registrationLink %>" class="btn btn-outline-success btn-sm" target="_blank">
                                                        Registration
                                                    </a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-check display-4 text-muted mb-3"></i>
                            <h4 class="text-muted">No carnival registrations yet</h4>
                            <p class="text-muted mb-4">
                                <%= user.clubId.clubName %> hasn't registered to attend any carnivals yet.
                                <br>
                                <small>Browse available carnivals and register your club to participate.</small>
                            </p>
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="/carnivals" class="btn btn-outline-primary btn-lg">
                                    <i class="bi bi-search"></i> Browse Carnivals
                                </a>
                                <a href="/carnivals/new" class="btn btn-outline-success btn-lg">
                                    <i class="bi bi-plus-circle"></i> Create New Carnival
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Admin Section -->
    <% if (user.isAdmin) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-check"></i> Administrator Dashboard
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">As an administrator, you have full system access and management capabilities:</p>
                        <div class="row">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/dashboard" class="btn btn-outline-danger w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-speedometer2 fs-3 mb-2"></i>
                                    <strong>Admin Dashboard</strong>
                                    <small class="text-muted">System overview and statistics</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/users" class="btn btn-outline-primary w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-people fs-3 mb-2"></i>
                                    <strong>User Management</strong>
                                    <small class="text-muted">Edit users, reset passwords</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/clubs" class="btn btn-outline-success w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-building fs-3 mb-2"></i>
                                    <strong>Club Management</strong>
                                    <small class="text-muted">Manage club details and status</small>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <a href="/admin/carnivals" class="btn btn-outline-primary w-100 h-100 d-flex flex-column justify-content-center text-decoration-none">
                                    <i class="bi bi-calendar-event fs-3 mb-2"></i>
                                    <strong>Carnival Management</strong>
                                    <small class="text-muted">Edit events and details</small>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Quick Admin Actions:</h6>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="bi bi-check-circle text-success"></i> Reset user passwords</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Activate/deactivate accounts</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Edit all clubs and carnivals</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Generate system reports</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">System Management:</h6>
                                <ul class="list-unstyled mb-0">
                                    <li><i class="bi bi-check-circle text-success"></i> Full database access</li>
                                    <li><i class="bi bi-check-circle text-success"></i> User role management</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Club ownership transfers</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Carnival moderation</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Primary Delegate Section -->
