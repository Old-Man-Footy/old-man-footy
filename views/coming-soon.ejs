<div class="container-fluid p-0">
    <!-- Hero Banner - Matching Main Site Design -->
    <section class="hero-banner bg-primary py-4">
        <div class="hero-background-pattern"></div>
        <div class="container position-relative">
            <div class="row align-items-center">
                <div class="col-lg-4 text-center">
                    <div class="logo-container">
                        <img src="/icons/old-man-footy.svg" alt="Old Man Footy Logo" class="img-fluid hero-logo">
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="hero-content">
                        <h1 class="hero-title mb-3"><%= heading %></h1>
                        <div class="hero-description mb-4">
                            <p class="lead"><%= message %></p>
                            <p class="lead"><%= subMessage %></p>
                            <p class="lead text-warning fw-bold"><%= launchMessage %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- What's Coming - Comprehensive Features Section -->
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-center py-4">
                        <h2 class="mb-2 fw-bold">Complete Carnival Management Platform</h2>
                        <p class="mb-0 lead opacity-90">Everything you need to organize and participate in Masters Rugby League events</p>
                    </div>
                    <div class="card-body p-4">
                        <!-- Core Features -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-calendar-event fs-4"></i>
                                </div>
                                <h3 class="text-primary mb-0 fw-bold">Carnival Management</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📅</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Event Creation</h6>
                                        <p class="text-muted small mb-0">Create and manage carnival events with detailed information, dates, and venues</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📋</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Registration Management</h6>
                                        <p class="text-muted small mb-0">Handle team registrations, player lists, and entry requirements</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">🏆</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Draw Generation</h6>
                                        <p class="text-muted small mb-0">Automatically generate and manage carnival draws and schedules</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">🔄</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">MySideline Sync</h6>
                                        <p class="text-muted small mb-0">Automatic creation of MySideline events with imported data</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Player Management -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-people fs-4"></i>
                                </div>
                                <h3 class="text-success mb-0 fw-bold">Player & Team Management</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">👥</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Player Registration</h6>
                                        <p class="text-muted small mb-0">Track player names, ages, email and shorts profiles</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📊</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Team Lists</h6>
                                        <p class="text-muted small mb-0">Submit expected players to carnival organisers for event planning</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">✅</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Attendance Tracking</h6>
                                        <p class="text-muted small mb-0">Track player attendance and participation across events</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">🎯</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Online Registration</h6>
                                        <p class="text-muted small mb-0">Direct links to MySideline for official NRL player registration</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Club Features -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-shield fs-4"></i>
                                </div>
                                <h3 class="text-primary mb-0 fw-bold">Club Directory & Management</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-lg-4 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">🏉</span>
                                        </div>
                                        <h5 class="fw-semibold mb-2">Club Profiles</h5>
                                        <p class="text-muted mb-0">Comprehensive club directories with contact information, logos and history</p>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">🤝</span>
                                        </div>
                                        <h5 class="fw-semibold mb-2">Delegate Management</h5>
                                        <p class="text-muted mb-0">Assign and manage club delegates with appropriate permissions</p>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">💰</span>
                                        </div>
                                        <h5 class="fw-semibold mb-2">Sponsorship Tracking</h5>
                                        <p class="text-muted mb-0">Carnivals and clubs can proudly list their sponsors on their pages and provide value for sponsorship funds</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Communication & Logistics -->
                        <div class="mb-0">
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="bi bi-chat-dots fs-4"></i>
                                </div>
                                <h3 class="text-success mb-0 fw-bold">Communication & Logistics</h3>
                            </div>
                            <div class="row g-4">
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📧</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Notifications</h6>
                                        <p class="text-muted small mb-0">Automated email notifications for registrations and updates</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📍</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Venue Information</h6>
                                        <p class="text-muted small mb-0">Detailed venue maps, directions, and facility information</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📸</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Image Sharing</h6>
                                        <p class="text-muted small mb-0">Carnivals and clubs can share event images for viewing and downloading</p>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="text-center p-3 h-100">
                                        <div class="mb-3">
                                            <span class="fs-1">📱</span>
                                        </div>
                                        <h6 class="fw-semibold mb-2">Mobile Friendly</h6>
                                        <p class="text-muted small mb-0">Fully responsive design for management on-the-go</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Email Subscription -->
    <div class="bg-primary py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <h3 class="mb-4">Get Notified When We Launch!</h3>
                    <form class="subscription-form" action="/subscribe" method="POST">
                        <!-- Bot protection: Honeypot field (hidden) -->
                        <input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
                        
                        <!-- Bot protection: Timestamp field -->
                        <input type="hidden" name="form_timestamp" id="form_timestamp">
                        
                        <div class="input-group mb-3">
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter your email address" required>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                Notify Me
                            </button>
                        </div>
                        <p class="small mb-0 opacity-75">We'll send you one email when we go live. No spam, guaranteed!</p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Got Any Questions Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <div class="mb-3">
                                <i class="bi bi-question-circle-fill text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h3 class="h4 mb-3">Got any questions?</h3>
                            <p class="text-muted mb-4">
                                We're here to help! Whether you're curious about features, want to know more about Masters Rugby League, 
                                or have suggestions for the platform, don't hesitate to reach out.
                            </p>
                            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center">
                                <a href="mailto:<%= contactEmail %>" class="btn btn-primary btn-lg">
                                    <i class="bi bi-envelope me-2"></i>
                                    Email Support
                                </a>
                                <div class="text-muted">
                                    <small>
                                        <i class="bi bi-clock me-1"></i>
                                        We will aim to respond within 1-2 business days
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Section -->
    <div class="bg-light py-4">
        <div class="container text-center">
            <p class="mb-1 text-muted">Masters Rugby League for the passionate players</p>
            <p class="mb-0 small text-muted">Last updated: <span id="current-time"></span></p>
        </div>
    </div>
</div>

<script src="/js/coming-soon.js"></script>