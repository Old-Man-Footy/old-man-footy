{
  "name": "old-man-footy",
  "version": "1.0.0",
  "description": "Rugby League Masters competition management system",
  "main": "app.mjs",
  "type": "module",
  "scripts": {
    "start": "node app.mjs",
    "dev": "nodemon --inspect-brk app.mjs",
    "test": "vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "node --inspect-brk=9229 ./node_modules/vitest/vitest.mjs --no-coverage --reporter=verbose",
    "test:debug-file": "node --inspect-brk=9229 ./node_modules/vitest/vitest.mjs --no-coverage --reporter=verbose --run",
    "test:integration": "cross-env NODE_ENV=test vitest run mySidelineScraperService.integration.test.mjs",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:single": "playwright test --headed --project=chromium-debug",
    "test:e2e:homepage": "playwright test --headed --project=chromium-debug homepage-simple.spec.js",
    "test:js": "vitest run --config vitest.config.js.mjs",
    "test:all": "npm run test && npm run test:e2e && npm run test:js",
    "seed": "node scripts/seed-database.mjs",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "connect-flash": "^0.1.1",
    "connect-session-sequelize": "^7.1.7",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "method-override": "^3.0.0",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "playwright": "^1.53.0",
    "puppeteer": "^24.10.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^7.0.3",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
