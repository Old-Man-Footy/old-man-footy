{
  "name": "old-man-footy",
  "version": "1.0.0",
  "description": "Rugby League Masters competition management system",
  "main": "app.mjs",
  "type": "module",
  "scripts": {
    "start": "node app.mjs",
    "dev": "cross-env NODE_ENV=development node app.mjs",
    "dev:nodemon": "cross-env NODE_ENV=development nodemon --inspect-brk app.mjs",
  "migrate": "node scripts/run-migrations.mjs",
    "test": "vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "node --inspect-brk=9229 ./node_modules/vitest/vitest.mjs --no-coverage --reporter=verbose",
    "test:debug-file": "node --inspect-brk=9229 ./node_modules/vitest/vitest.mjs --no-coverage --reporter=verbose --run",
    "test:integration": "cross-env NODE_ENV=test vitest run mySidelineScraperService.integration.test.mjs",
    "test:js": "vitest run --config vitest.config.js.mjs",
    "test:all": "npm run test && npm run test:js",
    "seed": "node scripts/seed-database.mjs",
    "docs:update": "node scripts/update-user-guide-documentation.mjs",
    "docs:screenshots": "node scripts/generate-user-guide-screenshots.mjs",
    "playwright:install": "playwright install",
    "docker:build:test": "docker build -t old-man-footy:test --target test .",
    "docker:run:test": "docker run --rm -d -e NODE_ENV=test -e SESSION_SECRET=local-secret -p 3055:3055 --name omf-test old-man-footy:test",
    "docker:smoke:test": "cross-env PORT=3055 node scripts/smoke-health.mjs",
    "docker:stop:test": "docker stop omf-test || exit 0",
    "docker:build:prod": "docker build -t old-man-footy:prod --target production .",
    "docker:run:prod": "docker run --rm -d -e NODE_ENV=production -e SESSION_SECRET=local-secret -e PORT=3060 -p 3060:3060 --name omf-prod old-man-footy:prod",
    "docker:smoke:prod": "cross-env PORT=3060 node scripts/smoke-health.mjs",
  "docker:stop:prod": "docker stop omf-prod || exit 0",
  "test:e2e": "cross-env NODE_ENV=test npx playwright test --config=playwright.config.mjs --workers=1",
  "test:e2e:headed": "cross-env NODE_ENV=test npx playwright test --config=playwright.config.mjs --workers=1 --headed",
  "test:e2e:ui": "cross-env NODE_ENV=test npx playwright test --config=playwright.config.mjs --ui",
  "test:e2e:debug": "cross-env NODE_ENV=test PWDEBUG=1 npx playwright test --config=playwright.config.mjs --workers=1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "connect-flash": "^0.1.1",
    "connect-session-sequelize": "^7.1.7",
    "csurf": "^1.2.2",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "method-override": "^3.0.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "playwright": "^1.53.0",
    "puppeteer": "^24.10.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^7.0.3",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "cookie": "^0.7.0"
  }
}
