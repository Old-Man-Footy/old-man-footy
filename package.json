{
  "name": "old-man-footy",
  "version": "1.0.0",
  "description": "Rugby League Masters competition management system",
  "main": "app.mjs",
  "type": "module",
  "scripts": {
    "start": "node app.mjs",
    "dev": "nodemon app.mjs",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:single": "playwright test --headed --project=chromium-debug",
    "test:e2e:homepage": "playwright test --headed --project=chromium-debug homepage-simple.spec.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "seed": "node scripts/seed-database.mjs",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0",
    "connect-flash": "^0.1.1",
    "connect-session-sequelize": "^7.1.7",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "method-override": "^3.0.0",
    "multer": "^2.0.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "playwright": "^1.53.0",
    "puppeteer": "^24.10.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.mjs"
    ],
    "testMatch": [
      "**/tests/**/*.test.mjs",
      "**/tests/**/*.spec.mjs"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.mjs",
      "services/**/*.mjs",
      "models/**/*.mjs",
      "middleware/**/*.mjs",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFiles": [
      "<rootDir>/tests/jest.env.mjs"
    ],
    "transform": {},
    "verbose": false,
    "forceExit": true,
    "detectOpenHandles": true,
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000,
    "clearMocks": true,
    "resetModules": true,
    "resetMocks": true
  }
}
