# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# ===========================
# GENERAL APPLICATION SETTINGS
# ===========================
NODE_ENV=production
PORT=3060
APP_NAME="Old Man Footy"
APP_URL=https://oldmanfooty.au
APP_VERSION=1.0.0
APP_DESCRIPTION="A community platform for Rugby League Masters players and fans"

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Production SQLite connection string
DATABASE_URL=sqlite:./data/old-man-footy.db

# ===========================
# SECURITY CONFIGURATION
# ===========================
# Generate a strong session secret (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-super-secure-session-secret-here

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS settings
ALLOWED_ORIGINS=https://oldmanfooty.au,https://www.oldmanfooty.au

# ===========================
# EMAIL SERVICE CONFIGURATION
# ===========================
# (TODO: SORT OUT WHAT SERVICE WE ARE USING)
EMAIL_FROM=noreply@oldmanfooty.au
EMAIL_FROM_NAME="Old Man Footy"

# For SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# For Gmail (alternative)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-gmail@gmail.com
# EMAIL_PASS=your-app-password

# For AWS SES (alternative)
# EMAIL_SERVICE=ses
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# ===========================
# MYSIDELINE INTEGRATION
# ===========================
MYSIDELINE_URL=https://profile.mysideline.com.au/register/clubsearch/?criteria=Masters&source=rugby-league
MYSIDELINE_EVENT_URL=https://profile.mysideline.com.au/register/clubsearch/?source=rugby-league&criteria=
MYSIDELINE_SYNC_ENABLED=true
MYSIDELINE_SYNC_CRON=0 3 * * *
MYSIDELINE_REQUEST_TIMEOUT=10000
MYSIDELINE_RETRY_ATTEMPTS=3
MYSIDELINE_USE_MOCK=false
MYSIDELINE_ENABLE_SCRAPING=true

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
# Local file storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloud storage (if using AWS S3)
# AWS_S3_BUCKET=your-s3-bucket
# AWS_S3_REGION=us-east-1
# AWS_S3_ACCESS_KEY_ID=your-s3-access-key
# AWS_S3_SECRET_ACCESS_KEY=your-s3-secret-key

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ===========================
# MONITORING AND ANALYTICS
# ===========================
# Application Insights (if using Azure)
# APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Google Analytics
# GA_TRACKING_ID=your-ga-tracking-id

# Error tracking (e.g., Sentry)
# SENTRY_DSN=your-sentry-dsn

# ===========================
# PERFORMANCE SETTINGS
# ===========================
# Session store (use redis in production)
SESSION_STORE=redis
REDIS_URL=redis://your-redis-host:6379

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Static file caching
STATIC_CACHE_MAX_AGE=31536000

# ===========================
# BACKUP CONFIGURATION
# ===========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ===========================
# FEATURE FLAGS
# ===========================
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_MYSIDELINE_SYNC=true
FEATURE_FILE_UPLOADS=true
FEATURE_ADMIN_STATS=true
FEATURE_MAINTENANCE_MODE=false

# ===========================
# SSL/TLS CONFIGURATION
# ===========================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ===========================
# CDN CONFIGURATION
# ===========================
# CDN_URL=https://your-cdn-domain.com
# STATIC_FILES_CDN=true

# ===========================
# HEALTH CHECK ENDPOINTS
# ===========================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# ===========================
# TIMEZONE SETTINGS
# ===========================
TZ=Australia/Sydney
DEFAULT_TIMEZONE=Australia/Sydney
