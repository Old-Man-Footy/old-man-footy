# Development Environment Configuration Template
# Copy this file to .env and fill in your development values

# ===========================
# APPLICATION CONFIGURATION
# ===========================
NODE_ENV=e2e
PORT=3056
APP_URL=http://localhost:3056
APP_NAME="Old Man Footy (E2E)"

# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL=sqlite:./data/e2e-old-man-footy.db

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS settings
ALLOWED_ORIGINS=http://localhost:3056

# ===========================
# MYSIDELINE INTEGRATION
# ===========================
MYSIDELINE_URL=https://profile.mysideline.com.au/register/clubsearch/?criteria=Masters&source=rugby-league
MYSIDELINE_EVENT_URL=https://profile.mysideline.com.au/register/clubsearch/?source=rugby-league&entityType=team&isEntityIdSearch=true&entity=true&criteria=
MYSIDELINE_SYNC_ENABLED=true
MYSIDELINE_ENABLE_SCRAPING=true
MYSIDELINE_REQUEST_TIMEOUT=10000
MYSIDELINE_RETRY_ATTEMPTS=3

# ===========================
# EMAIL CONFIGURATION - E2E SAFETY
# ===========================
# CRITICAL: No email credentials configured to prevent sending real emails during E2E tests
# Email notifications are disabled via FEATURE_EMAIL_NOTIFICATIONS=false
# Any email sending attempts will fail safely without sending actual emails

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=debug
LOG_FORMAT=simple

# ===========================
# FEATURE FLAGS
# ===========================
# IMPORTANT: Email notifications DISABLED for E2E tests to prevent sending real emails
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_MYSIDELINE_SYNC=false
FEATURE_FILE_UPLOADS=true
FEATURE_ADMIN_STATS=true
FEATURE_MAINTENANCE_MODE=false

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
# Rate limiting (more relaxed for development)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
READY_CHECK_PATH=/ready

# Timezone
TZ=Australia/Sydney
DEFAULT_TIMEZONE=Australia/Sydney
